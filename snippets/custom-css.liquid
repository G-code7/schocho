{% comment %}
  Renders custom CSS from platform_customizations
  Note: Section-specific custom_css should be handled by Shopify's section rendering
{% endcomment %}

{% style %}
  /* Platform customizations CSS */
  {% if settings.platform_customizations.custom_css %}
    {% for css_line in settings.platform_customizations.custom_css %}
      {{ css_line }}
    {% endfor %}
  {% endif %}

  /* Logo sobresaliente del header - Estilos corregidos */
  .header-logo__image-container {
    position: relative;
    top: 30px;
    z-index: 20;
  }

  /* Compensar altura del header para que no empuje el contenido */
  #header-component {
    padding-bottom: 30px;
  }

  /* Responsive: ajustar en m√≥vil */
  @media screen and (max-width: 749px) {
    .header-logo__image-container {
      top: 20px;
    }
    #header-component {
      padding-bottom: 20px;
    }
  }
{% endstyle %}
