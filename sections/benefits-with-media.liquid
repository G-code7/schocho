{% assign section_id = section.id %}

{% style %}
  .wt-benefits-product-{{ section_id }} {
    padding-top: {{ section.settings.section_gap_top }}px;
    padding-bottom: {{ section.settings.section_gap_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .wt-benefits-product__container-{{ section_id }} {
    width: 100%;
    max-width: var(--page-width, 1200px);
    margin: 0 auto;
    padding: 0 {{ section.settings.container_padding }}px;
  }

  .wt-benefits-product__header-{{ section_id }} {
    text-align: {{ section.settings.header_alignment }};
    margin-bottom: {{ section.settings.header_margin_bottom }}px;
  }

  .wt-benefits-product__eyebrow-{{ section_id }} {
    display: inline-block;
    color: {{ section.settings.eyebrow_color }};
    font-size: {{ section.settings.eyebrow_size }}px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 12px;
  }

  .wt-benefits-product__title-{{ section_id }} {
    color: {{ section.settings.title_color }};
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    line-height: 1.2;
    margin: 0 0 {{ section.settings.title_margin_bottom }}px;
  }

  .wt-benefits-product__subtitle-{{ section_id }} {
    color: {{ section.settings.subtitle_color }};
    font-size: {{ section.settings.subtitle_size }}px;
    font-weight: 400;
    line-height: 1.6;
    margin: 0 auto;
    max-width: 600px;
    opacity: 0.85;
  }

  .wt-benefits-product__wrapper-{{ section_id }} {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: {{ section.settings.column_gap }}px;
    align-items: center;
  }

  .wt-benefits-product__icons-container-{{ section_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.benefits_gap }}px;
    justify-content: center;
  }

  .wt-benefits-product__img-{{ section_id }} {
    position: relative;
    width: 100%;
    max-width: {{ section.settings.media_max_width }}px;
    min-height: 500px;
    border-radius: {{ section.settings.media_border_radius }}px;
    overflow: hidden;
  }

  .wt-benefits-product__media-{{ section_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .wt-benefits-product__img-{{ section_id }} video {
    pointer-events: none;
    user-select: none;
  }

  .wt-benefits-product__img-placeholder-{{ section_id }} {
    width: 100%;
    height: 100%;
    min-height: 500px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .wt-benefits-product__card-{{ section_id }} {
    position: relative;
    padding: {{ section.settings.card_padding }}px;
    background-color: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    padding-top: calc({{ section.settings.card_padding }}px + {{ section.settings.icon_size | divided_by: 2 }}px + 10px);
  }

  .wt-benefits-product__card-{{ section_id }}:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.08);
  }

  .wt-benefits-product__icon-wrap-{{ section_id }} {
    position: absolute;
    top: calc(-{{ section.settings.icon_size | divided_by: 2 }}px - 10px);
    left: 50%;
    transform: translateX(-50%);
    width: calc({{ section.settings.icon_size }}px + 20px);
    height: calc({{ section.settings.icon_size }}px + 20px);
    background-color: {{ section.settings.icon_bg_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .wt-benefits-product__icon-{{ section_id }} {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    object-fit: contain;
  }

  .wt-benefits-product__card-text-{{ section_id }} {
    text-align: center;
  }

  .wt-benefits-product__card-heading-{{ section_id }} {
    margin: 0 0 8px;
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 600;
  }

  .wt-benefits-product__card-desc-{{ section_id }} {
    margin: 0;
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.text_size }}px;
    line-height: 1.5;
  }

  /* Mobile Slider */
  .wt-benefits-product__mobile-slider-{{ section_id }} {
    display: none;
  }

  @media screen and (max-width: 1024px) {
    .wt-benefits-product__container-{{ section_id }} {
      padding: 0 20px;
    }

    .wt-benefits-product__wrapper-{{ section_id }} {
      grid-template-columns: 1fr;
      gap: {{ section.settings.mobile_gap }}px;
    }

    .wt-benefits-product__img-{{ section_id }} {
      min-height: 350px;
      order: {{ section.settings.mobile_media_order }};
      max-width: 100%;
      margin: 0 auto;
    }

    .wt-benefits-product__icons-container-{{ section_id }} {
      display: none;
    }

    .wt-benefits-product__title-{{ section_id }} {
      font-size: calc({{ section.settings.title_size }}px * 0.75);
    }

    .wt-benefits-product__mobile-slider-{{ section_id }} {
      display: block;
      order: {{ section.settings.mobile_benefits_order }};
      position: relative;
      overflow: hidden;
      padding-top: 40px;
      padding-bottom: 20px;
    }

    .wt-benefits-product__slider-track-{{ section_id }} {
      display: flex;
      transition: transform 0.5s ease;
      gap: {{ section.settings.mobile_slider_gap }}px;
    }

    .wt-benefits-product__slider-slide-{{ section_id }} {
      flex: 0 0 calc((100% - {{ section.settings.mobile_slider_gap }}px) / {{ section.settings.mobile_slides_to_show }});
      min-width: calc((100% - {{ section.settings.mobile_slider_gap }}px) / {{ section.settings.mobile_slides_to_show }});
    }

    .wt-benefits-product__slider-dots-{{ section_id }} {
      display: flex;
      justify-content: center;
      gap: 8px;
      margin-top: 20px;
    }

    .wt-benefits-product__slider-dot-{{ section_id }} {
      width: 10px;
      height: 10px;
      border-radius: 50%;
      background-color: {{ section.settings.card_border_color }};
      border: none;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .wt-benefits-product__slider-dot-{{ section_id }}.active {
      background-color: {{ section.settings.eyebrow_color }};
      transform: scale(1.2);
    }

    .wt-benefits-product__slider-arrows-{{ section_id }} {
      position: absolute;
      top: 50%;
      left: 0;
      right: 0;
      transform: translateY(-50%);
      display: flex;
      justify-content: space-between;
      pointer-events: none;
      padding: 0 5px;
    }

    .wt-benefits-product__slider-arrow-{{ section_id }} {
      width: 36px;
      height: 36px;
      border-radius: 50%;
      background-color: {{ section.settings.card_background }};
      border: 1px solid {{ section.settings.card_border_color }};
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      pointer-events: auto;
      transition: all 0.3s ease;
    }

    .wt-benefits-product__slider-arrow-{{ section_id }} svg {
      width: 16px;
      height: 16px;
    }

    {% unless section.settings.show_slider_arrows %}
    .wt-benefits-product__slider-arrows-{{ section_id }} { display: none; }
    {% endunless %}

    {% unless section.settings.show_slider_dots %}
    .wt-benefits-product__slider-dots-{{ section_id }} { display: none; }
    {% endunless %}
  }

  @media screen and (max-width: 480px) {
    .wt-benefits-product__slider-slide-{{ section_id }} {
      flex: 0 0 calc(100% - 20px);
      min-width: calc(100% - 20px);
    }
  }
{% endstyle %}

<section class="wt-benefits-product-{{ section_id }}" {{ section.shopify_attributes }}>
