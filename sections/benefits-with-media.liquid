        {% endif %}
      </div>

      <!-- Right Benefits -->
      <div class="wt-benefits-product__icons-container-{{ section_id }}">
        {% for i in (1..4) %}
          {% liquid
            assign icon_key = 'benefit_right_' | append: i | append: '_icon'
            assign heading_key = 'benefit_right_' | append: i | append: '_heading'
            assign desc_key = 'benefit_right_' | append: i | append: '_description'
            assign heading = section.settings[heading_key]
            assign description = section.settings[desc_key]
            assign icon = section.settings[icon_key]
          %}

          {% if heading != blank or description != blank %}
            <div class="wt-benefits-product__card-{{ section_id }}">
              <div class="wt-benefits-product__icon-wrap-{{ section_id }}">
                {% if icon %}
                  <img src="{{ icon | image_url: width: 200 }}" alt="{{ icon.alt | default: heading | escape }}" class="wt-benefits-product__icon-{{ section_id }}" loading="lazy" width="{{ section.settings.icon_size }}" height="{{ section.settings.icon_size }}">
                {% endif %}
              </div>
              <div class="wt-benefits-product__card-text-{{ section_id }}">
                {% if heading != blank %}<h3 class="wt-benefits-product__card-heading-{{ section_id }}">{{ heading }}</h3>{% endif %}
                {% if description != blank %}<div class="wt-benefits-product__card-desc-{{ section_id }}">{{ description }}</div>{% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Mobile Slider -->
      <div class="wt-benefits-product__mobile-slider-{{ section_id }}" data-benefits-slider="{{ section_id }}">
        <div class="wt-benefits-product__slider-track-{{ section_id }}" data-slider-track>
          {% for i in (1..4) %}
            {% liquid
              assign icon_key = 'benefit_left_' | append: i | append: '_icon'
              assign heading_key = 'benefit_left_' | append: i | append: '_heading'
              assign desc_key = 'benefit_left_' | append: i | append: '_description'
              assign heading = section.settings[heading_key]
              assign description = section.settings[desc_key]
              assign icon = section.settings[icon_key]
            %}
            {% if heading != blank or description != blank %}
              <div class="wt-benefits-product__slider-slide-{{ section_id }}">
                <div class="wt-benefits-product__card-{{ section_id }}">
                  <div class="wt-benefits-product__icon-wrap-{{ section_id }}">
                    {% if icon %}<img src="{{ icon | image_url: width: 200 }}" alt="{{ heading | escape }}" class="wt-benefits-product__icon-{{ section_id }}" loading="lazy" width="34" height="34">{% endif %}
                  </div>
                  <div class="wt-benefits-product__card-text-{{ section_id }}">
                    {% if heading != blank %}<h3 class="wt-benefits-product__card-heading-{{ section_id }}">{{ heading }}</h3>{% endif %}
                    {% if description != blank %}<div class="wt-benefits-product__card-desc-{{ section_id }}">{{ description }}</div>{% endif %}
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
          {% for i in (1..4) %}
            {% liquid
              assign icon_key = 'benefit_right_' | append: i | append: '_icon'
              assign heading_key = 'benefit_right_' | append: i | append: '_heading'
              assign desc_key = 'benefit_right_' | append: i | append: '_description'
              assign heading = section.settings[heading_key]
              assign description = section.settings[desc_key]
              assign icon = section.settings[icon_key]
            %}
            {% if heading != blank or description != blank %}
              <div class="wt-benefits-product__slider-slide-{{ section_id }}">
                <div class="wt-benefits-product__card-{{ section_id }}">
                  <div class="wt-benefits-product__icon-wrap-{{ section_id }}">
                    {% if icon %}<img src="{{ icon | image_url: width: 200 }}" alt="{{ heading | escape }}" class="wt-benefits-product__icon-{{ section_id }}" loading="lazy" width="34" height="34">{% endif %}
                  </div>
                  <div class="wt-benefits-product__card-text-{{ section_id }}">
                    {% if heading != blank %}<h3 class="wt-benefits-product__card-heading-{{ section_id }}">{{ heading }}</h3>{% endif %}
                    {% if description != blank %}<div class="wt-benefits-product__card-desc-{{ section_id }}">{{ description }}</div>{% endif %}
                  </div>
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
        <div class="wt-benefits-product__slider-arrows-{{ section_id }}">
          <button class="wt-benefits-product__slider-arrow-{{ section_id }}" data-slider-prev aria-label="Previous">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="15 18 9 12 15 6"></polyline></svg>
          </button>
          <button class="wt-benefits-product__slider-arrow-{{ section_id }}" data-slider-next aria-label="Next">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="9 18 15 12 9 6"></polyline></svg>
          </button>
        </div>
        <div class="wt-benefits-product__slider-dots-{{ section_id }}" data-slider-dots></div>
      </div>
    </div>
  </div>
</section>

<script>
document.addEventListener('DOMContentLoaded', function() {
  var slider = document.querySelector('[data-benefits-slider="{{ section_id }}"]');
  if (!slider) return;
  
  var track = slider.querySelector('[data-slider-track]');
  var slides = track.querySelectorAll('[class*="slider-slide"]');
  var dotsWrap = slider.querySelector('[data-slider-dots]');
  var prevBtn = slider.querySelector('[data-slider-prev]');
  var nextBtn = slider.querySelector('[data-slider-next]');
  
  var total = slides.length;
  if (total === 0) return;
  
  var current = 0;
  var autoplayId = null;
  var autoplay = {{ section.settings.slider_autoplay }};
  var speed = {{ section.settings.slider_autoplay_speed }};
  var gap = {{ section.settings.mobile_slider_gap }};
  
  function getPerView() { return window.innerWidth <= 480 ? 1 : {{ section.settings.mobile_slides_to_show }}; }
  function getMax() { return Math.max(0, total - getPerView()); }
  
  function makeDots() {
    dotsWrap.innerHTML = '';
    for (var i = 0; i <= getMax(); i++) {
      var d = document.createElement('button');
      d.className = 'wt-benefits-product__slider-dot-{{ section_id }}' + (i === 0 ? ' active' : '');
      d.onclick = function(idx) { return function() { go(idx); reset(); }; }(i);
      dotsWrap.appendChild(d);
    }
  }
  
  function updateDots() {
    var dots = dotsWrap.querySelectorAll('button');
    dots.forEach(function(d, i) { d.classList.toggle('active', i === current); });
  }
  
  function go(i) {
    current = Math.max(0, Math.min(i, getMax()));
    var w = slides[0].offsetWidth;
    track.style.transform = 'translateX(-' + (current * (w + gap)) + 'px)';
    updateDots();
  }
  
  function next() { go(current >= getMax() ? 0 : current + 1); }
  function prev() { go(current <= 0 ? getMax() : current - 1); }
  function start() { if (autoplay) { stop(); autoplayId = setInterval(next, speed); } }
  function stop() { if (autoplayId) { clearInterval(autoplayId); autoplayId = null; } }
  function reset() { stop(); start(); }
  
  prevBtn.onclick = function() { prev(); reset(); };
  nextBtn.onclick = function() { next(); reset(); };
  
  var sx = 0;
  track.addEventListener('touchstart', function(e) { sx = e.touches[0].clientX; stop(); }, {passive:true});
  track.addEventListener('touchend', function(e) {
    var diff = sx - e.changedTouches[0].clientX;
    if (Math.abs(diff) > 50) diff > 0 ? next() : prev();
    reset();
  }, {passive:true});
  
  slider.addEventListener('mouseenter', stop);
  slider.addEventListener('mouseleave', start);
  
  window.addEventListener('resize', function() { makeDots(); go(Math.min(current, getMax())); });
  
  makeDots();
  go(0);
  start();
});
</script>

