                {% if heading != blank %}<h3 class="wt-benefits-product__card-heading-{{ section_id }}">{{ heading }}</h3>{% endif %}
                {% if description != blank %}<div class="wt-benefits-product__card-desc-{{ section_id }}">{{ description }}</div>{% endif %}
