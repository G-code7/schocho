{% liquid
  assign section_id = section.id
%}

{% style %}
  .dual-showcase-{{ section_id }} {
    --transition-speed: 0.6s;
    --ease-smooth: cubic-bezier(0.4, 0, 0.2, 1);
    
    position: relative;
    width: 100%;
    height: {{ section.settings.section_height }}vh;
    min-height: {{ section.settings.min_height }}px;
    max-height: {{ section.settings.max_height }}px;
    overflow: hidden;
    margin: 0;
    padding: 0;
  }

  .dual-showcase__container-{{ section_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    height: 100%;
    width: 100%;
    position: relative;
    margin: 0;
    padding: 0;
  }

  /* Invertir posición según setting */
  {% if section.settings.image_position == 'left' %}
  .dual-showcase__container-{{ section_id }} {
    direction: rtl;
  }
  .dual-showcase__container-{{ section_id }} > * {
    direction: ltr;
  }
  {% endif %}

  .dual-showcase__column-{{ section_id }} {
    position: relative;
    height: 100%;
    overflow: hidden;
  }

  /* Columna de contenido (productos) */
  .dual-showcase__content-column-{{ section_id }} {
    display: flex;
    flex-direction: column;
    position: relative;
    justify-content: center;
  }

  .dual-showcase__slides-wrapper-{{ section_id }} {
    flex: 1;
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 100%;
  }

  .dual-showcase__slide-{{ section_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition: opacity var(--transition-speed) var(--ease-smooth),
                visibility var(--transition-speed) var(--ease-smooth);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 40px 60px;
    overflow-y: auto;
    overflow-x: hidden;
  }

  .dual-showcase__slide-{{ section_id }}.active {
    opacity: 1;
    visibility: visible;
    z-index: 1;
  }

  .dual-showcase__content-{{ section_id }} {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 550px;
  }

  /* Decorador
  .dual-showcase__decorator-{{ section_id }} {
    width: {{ section.settings.decorator_size }}px;
    height: {{ section.settings.decorator_size }}px;
    margin-bottom: {{ section.settings.decorator_margin }}px;
  } */

  /* Imagen del producto con animación */
  .dual-showcase__product-image-wrapper-{{ section_id }} {
    width: 100%;
    max-width: {{ section.settings.product_image_size }}px;
    height: {{ section.settings.product_image_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 24px;
    position: relative;
    {% if section.settings.enable_float_animation %}
    animation: productFloat-{{ section_id }} 5s ease-in-out infinite;
    {% endif %}
  }

  @keyframes productFloat-{{ section_id }} {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-15px); }
  }

  .dual-showcase__product-image-{{ section_id }} {
    width: 100%;
    height: 100%;
    object-fit: contain;
    filter: drop-shadow(0 15px 35px rgba(0, 0, 0, 0.12));
  }

  /* Fila de iconos */
  .dual-showcase__icons-row-{{ section_id }} {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: {{ section.settings.icons_gap }}px;
    margin-bottom: {{ section.settings.icons_margin_bottom }}px;
  }

  .dual-showcase__icon-item-{{ section_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .dual-showcase__icon-image-{{ section_id }} {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    object-fit: contain;
  }

  .dual-showcase__icon-circle-{{ section_id }} {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: {{ section.settings.icon_text_size }}px;
    font-weight: 700;
  }

  .dual-showcase__icon-label-{{ section_id }} {
    font-size: {{ section.settings.icon_label_size }}px;
    font-weight: {{ section.settings.icon_label_weight }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  /* Título */
  .dual-showcase__title-{{ section_id }} {
    font-size: {{ section.settings.title_font_size }}px;
    font-weight: {{ section.settings.title_font_weight }};
    line-height: {{ section.settings.title_line_height }};
    margin: 0 0 {{ section.settings.title_margin_bottom }}px 0;
    letter-spacing: calc({{ section.settings.title_letter_spacing }} / 100)em;
  }

  /* Descripción */
  .dual-showcase__description-{{ section_id }} {
    font-size: {{ section.settings.description_font_size }}px;
    font-weight: {{ section.settings.description_font_weight }};
    line-height: {{ section.settings.description_line_height }};
    margin: 0 0 {{ section.settings.description_margin_bottom }}px 0;
    max-width: 480px;
    opacity: 0.9;
  }

  /* CTA Button */
  .dual-showcase__cta-{{ section_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    text-decoration: none;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    letter-spacing: calc({{ section.settings.button_letter_spacing }} / 100)px;
    text-transform: {% if section.settings.button_uppercase %}uppercase{% else %}none{% endif %};
    border-radius: {{ section.settings.button_border_radius }}px;
    transition: all 0.35s var(--ease-smooth);
    cursor: pointer;
    border: none;
  }

  .dual-showcase__cta-{{ section_id }}:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }

  .dual-showcase__cta-icon-{{ section_id }} {
    width: 18px;
    height: 18px;
    transition: transform 0.3s ease;
  }

  .dual-showcase__cta-{{ section_id }}:hover .dual-showcase__cta-icon-{{ section_id }} {
    transform: translateX(4px);
  }

  /* Navegación */
  .dual-showcase__nav-button-{{ section_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 48px;
    height: 48px;
    border-radius: 50%;
    border: 2px solid currentColor;
    background-color: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    z-index: 10;
  }

  .dual-showcase__nav-prev-{{ section_id }} {
    left: 25px;
  }

  .dual-showcase__nav-next-{{ section_id }} {
    right: 25px;
  }

  .dual-showcase__nav-button-{{ section_id }}:hover {
    transform: translateY(-50%) scale(1.1);
    background-color: currentColor;
  }

  .dual-showcase__nav-button-{{ section_id }}:hover svg {
    filter: invert(1);
  }

  .dual-showcase__nav-button-{{ section_id }} svg {
    width: 22px;
    height: 22px;
    transition: all 0.3s ease;
  }

  /* Columna de imagen */
  .dual-showcase__image-column-{{ section_id }} {
    position: relative;
  }

  .dual-showcase__image-slide-{{ section_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    visibility: hidden;
    transition: opacity var(--transition-speed) var(--ease-smooth),
                visibility var(--transition-speed) var(--ease-smooth);
  }

  .dual-showcase__image-slide-{{ section_id }}.active {
    opacity: 1;
    visibility: visible;
    z-index: 1;
  }

  .dual-showcase__lifestyle-image-{{ section_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .dual-showcase__image-placeholder-{{ section_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .dual-showcase__image-placeholder-{{ section_id }} svg {
    width: 50%;
    height: 50%;
    max-width: 300px;
    max-height: 300px;
    opacity: 0.25;
  }

  /* Dots de paginación */
  .dual-showcase__dots-{{ section_id }} {
    position: absolute;
    bottom: 25px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 10px;
    z-index: 10;
  }

  .dual-showcase__dot-{{ section_id }} {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    opacity: 0.4;
  }

  .dual-showcase__dot-{{ section_id }}.active {
    opacity: 1;
    transform: scale(1.3);
  }

  /* Responsive */
  @media screen and (max-width: 1024px) {
    .dual-showcase__slide-{{ section_id }} {
      padding: 35px 45px;
    }
    
    .dual-showcase__product-image-wrapper-{{ section_id }} {
      max-width: calc({{ section.settings.product_image_size }}px * 0.75);
      height: calc({{ section.settings.product_image_size }}px * 0.75);
    }

    .dual-showcase__title-{{ section_id }} {
      font-size: calc({{ section.settings.title_font_size }}px * 1);
    }

    .dual-showcase__description-{{ section_id }} {
      font-size: calc({{ section.settings.description_font_size }}px * 0.95);
    }
    
    .dual-showcase__nav-prev-{{ section_id }} { left: 15px; }
    .dual-showcase__nav-next-{{ section_id }} { right: 15px; }
  }

  @media screen and (max-width: 768px) {
    .dual-showcase-{{ section_id }} {
      height: auto;
      min-height: auto;
      max-height: none;
    }

    .dual-showcase__container-{{ section_id }} {
      grid-template-columns: 1fr;
      grid-template-rows: auto auto;
      direction: ltr;
    }

    .dual-showcase__content-column-{{ section_id }} {
      order: 2;
      min-height: 480px;
    }

    .dual-showcase__image-column-{{ section_id }} {
      order: 1;
      min-height: 320px;
      max-height: 420px;
    }

    .dual-showcase__slide-{{ section_id }} {
      padding: 30px 35px;
    }
    
    .dual-showcase__product-image-wrapper-{{ section_id }} {
      max-width: calc({{ section.settings.product_image_size }}px * 0.55);
      height: calc({{ section.settings.product_image_size }}px * 0.55);
      margin-bottom: 18px;
    }

    .dual-showcase__title-{{ section_id }} {
      font-size: calc({{ section.settings.title_font_size }}px * 0.75);
    }

    .dual-showcase__description-{{ section_id }} {
      font-size: calc({{ section.settings.description_font_size }}px * 0.9);
    }

    .dual-showcase__icons-row-{{ section_id }} {
      gap: calc({{ section.settings.icons_gap }}px * 0.7);
    }

    .dual-showcase__icon-image-{{ section_id }},
    .dual-showcase__icon-circle-{{ section_id }} {
      width: calc({{ section.settings.icon_size }}px * 0.8);
      height: calc({{ section.settings.icon_size }}px * 0.8);
    }

    .dual-showcase__nav-button-{{ section_id }} {
      width: 40px;
      height: 40px;
    }
    
    .dual-showcase__nav-prev-{{ section_id }} { left: 10px; }
    .dual-showcase__nav-next-{{ section_id }} { right: 10px; }

    .dual-showcase__dots-{{ section_id }} {
      bottom: 15px;
    }
  }

  @media screen and (max-width: 480px) {
    .dual-showcase__slide-{{ section_id }} {
      padding: 25px 25px;
    }

    .dual-showcase__content-column-{{ section_id }} {
      min-height: 420px;
    }

    .dual-showcase__product-image-wrapper-{{ section_id }} {
      max-width: calc({{ section.settings.product_image_size }}px * 0.45);
      height: calc({{ section.settings.product_image_size }}px * 0.45);
    }

    .dual-showcase__title-{{ section_id }} {
      font-size: calc({{ section.settings.title_font_size }}px * 0.65);
    }

    .dual-showcase__description-{{ section_id }} {
      font-size: calc({{ section.settings.description_font_size }}px * 0.85);
    }

    .dual-showcase__icon-label-{{ section_id }} {
      font-size: calc({{ section.settings.icon_label_size }}px * 0.85);
    }

    .dual-showcase__cta-{{ section_id }} {
      padding: calc({{ section.settings.button_padding_y }}px * 0.85) calc({{ section.settings.button_padding_x }}px * 0.85);
      font-size: calc({{ section.settings.button_font_size }}px * 0.9);
    }
  }
{% endstyle %}

<section 
  class="dual-showcase-{{ section_id }}"
  data-section-id="{{ section_id }}"
  {{ section.shopify_attributes }}
>
  <div class="dual-showcase__container-{{ section_id }}">
    
    {%- comment -%} Columna de contenido (productos) {%- endcomment -%}
    <div class="dual-showcase__column-{{ section_id }} dual-showcase__content-column-{{ section_id }}">
      
      {%- comment -%} Botón anterior {%- endcomment -%}
      <button
        class="dual-showcase__nav-button-{{ section_id }} dual-showcase__nav-prev-{{ section_id }}"
        aria-label="Previous slide"
        data-nav="prev"
      >
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>

      <div class="dual-showcase__slides-wrapper-{{ section_id }}">
        {% for i in (1..5) %}
          {% liquid
            assign product_key = 'product_' | append: i
            assign custom_title_key = 'custom_title_' | append: i
            assign description_key = 'description_' | append: i
            assign show_product_image_key = 'show_product_image_' | append: i
            assign product_image_key = 'product_image_' | append: i
            assign show_icons_key = 'show_icons_' | append: i
            assign cta_text_key = 'cta_text_' | append: i
            assign cta_link_key = 'cta_link_' | append: i
            assign bg_color_key = 'bg_color_' | append: i
            assign text_color_key = 'text_color_' | append: i
            assign decorator_color_key = 'decorator_color_' | append: i
            assign icon_color_key = 'icon_color_' | append: i
            assign cta_bg_key = 'cta_bg_' | append: i
            assign cta_text_color_key = 'cta_text_color_' | append: i
            assign cta_hover_bg_key = 'cta_hover_bg_' | append: i
            assign cta_hover_text_key = 'cta_hover_text_' | append: i

            assign product = section.settings[product_key]
            assign custom_title = section.settings[custom_title_key]
            assign description = section.settings[description_key]
            assign show_product_image = section.settings[show_product_image_key]
            assign product_image = section.settings[product_image_key]
            assign show_icons = section.settings[show_icons_key]
            assign cta_text = section.settings[cta_text_key]
            assign cta_link = section.settings[cta_link_key]
            assign bg_color = section.settings[bg_color_key]
            assign text_color = section.settings[text_color_key]
            assign decorator_color = section.settings[decorator_color_key]
            assign icon_color = section.settings[icon_color_key]
            assign cta_bg = section.settings[cta_bg_key]
            assign cta_text_color = section.settings[cta_text_color_key]
            assign cta_hover_bg = section.settings[cta_hover_bg_key]
            assign cta_hover_text = section.settings[cta_hover_text_key]

            assign icon_1_image_key = 'icon_1_image_' | append: i
            assign icon_1_text_key = 'icon_1_text_' | append: i
            assign icon_2_image_key = 'icon_2_image_' | append: i
            assign icon_2_text_key = 'icon_2_text_' | append: i
            assign icon_3_image_key = 'icon_3_image_' | append: i
            assign icon_3_text_key = 'icon_3_text_' | append: i
            assign icon_4_image_key = 'icon_4_image_' | append: i
            assign icon_4_text_key = 'icon_4_text_' | append: i

            assign icon_1_image = section.settings[icon_1_image_key]
            assign icon_1_text = section.settings[icon_1_text_key]
            assign icon_2_image = section.settings[icon_2_image_key]
            assign icon_2_text = section.settings[icon_2_text_key]
            assign icon_3_image = section.settings[icon_3_image_key]
            assign icon_3_text = section.settings[icon_3_text_key]
            assign icon_4_image = section.settings[icon_4_image_key]
            assign icon_4_text = section.settings[icon_4_text_key]
          %}

          {% if product != blank or custom_title != blank %}
            <div
              class="dual-showcase__slide-{{ section_id }}{% if forloop.first %} active{% endif %}"
              data-slide="{{ forloop.index0 }}"
              style="background-color: {{ bg_color }}; color: {{ text_color }};"
            >
              <div class="dual-showcase__content-{{ section_id }}">
                
                {%- comment -%} Decorador {%- endcomment -%}
                {% if section.settings.show_decorator %}
                  <div 
                    class="dual-showcase__decorator-{{ section_id }}"
                    style="background-color: {{ decorator_color }};"
                  ></div>
                {% endif %}

                {%- comment -%} Imagen del producto (opcional) {%- endcomment -%}
                {% if show_product_image %}
                  <div class="dual-showcase__product-image-wrapper-{{ section_id }}">
                    {% if product_image %}
                      <img
                        src="{{ product_image | image_url: width: 800 }}"
                        alt="{{ product_image.alt | default: custom_title | default: product.title | escape }}"
                        class="dual-showcase__product-image-{{ section_id }}"
                        loading="lazy"
                        width="400"
                        height="400"
                      >
                    {% elsif product.featured_image %}
                      <img
                        src="{{ product.featured_image | image_url: width: 800 }}"
                        alt="{{ product.featured_image.alt | default: product.title | escape }}"
                        class="dual-showcase__product-image-{{ section_id }}"
                        loading="lazy"
                        width="400"
                        height="400"
                      >
                    {% endif %}
                  </div>
                {% endif %}

                {%- comment -%} Fila de iconos {%- endcomment -%}
                {% if show_icons %}
                  <div class="dual-showcase__icons-row-{{ section_id }}">
                    {% if icon_1_image or icon_1_text != blank %}
                      <div class="dual-showcase__icon-item-{{ section_id }}">
                        {% if icon_1_image %}
                          <img 
                            src="{{ icon_1_image | image_url: width: 120 }}"
                            alt="{{ icon_1_text | escape }}"
                            class="dual-showcase__icon-image-{{ section_id }}"
                            loading="lazy"
                            width="120"
                            height="120"
                            style="aspect-ratio: {{ icon_1_image.aspect_ratio }}; object-fit: cover;"
                          >
                        {% elsif icon_1_text != blank %}
                          <div 
                            class="dual-showcase__icon-circle-{{ section_id }}"
                            style="border: 2px solid {{ icon_color }}; color: {{ icon_color }};"
                          >
                            {{ icon_1_text | truncate: 5, '' }}
                          </div>
                        {% endif %}
                      </div>
                    {% endif %}

                    {% if icon_2_image or icon_2_text != blank %}
                      <div class="dual-showcase__icon-item-{{ section_id }}">
                        {% if icon_2_image %}
                          <img 
                            src="{{ icon_2_image | image_url: width: 120 }}"
                            alt="{{ icon_2_text | escape }}"
                            class="dual-showcase__icon-image-{{ section_id }}"
                            loading="lazy"
                            width="120"
                            height="120"
                            style="aspect-ratio: {{ icon_2_image.aspect_ratio }}; object-fit: cover;"
                          >
                        {% elsif icon_2_text != blank %}
                          <div 
                            class="dual-showcase__icon-circle-{{ section_id }}"
                            style="border: 2px solid {{ icon_color }}; color: {{ icon_color }};"
                          >
                            {{ icon_2_text | truncate: 5, '' }}
                          </div>
                        {% endif %}
                      </div>
                    {% endif %}

                    {% if icon_3_image or icon_3_text != blank %}
                      <div class="dual-showcase__icon-item-{{ section_id }}">
                        {% if icon_3_image %}
                          <img 
                            src="{{ icon_3_image | image_url: width: 120 }}"
                            alt="{{ icon_3_text | escape }}"
                            class="dual-showcase__icon-image-{{ section_id }}"
                            loading="lazy"
                            width="120"
                            height="120"
                            style="aspect-ratio: {{ icon_3_image.aspect_ratio }}; object-fit: cover;"
                          >
                        {% elsif icon_3_text != blank %}
                          <div 
                            class="dual-showcase__icon-circle-{{ section_id }}"
                            style="border: 2px solid {{ icon_color }}; color: {{ icon_color }};"
                          >
                            {{ icon_3_text | truncate: 5, '' }}
                          </div>
                        {% endif %}
                      </div>
                    {% endif %}

                    {% if icon_4_image or icon_4_text != blank %}
                      <div class="dual-showcase__icon-item-{{ section_id }}">
                        {% if icon_4_image %}
                          <img 
                            src="{{ icon_4_image | image_url: width: 120 }}"
                            alt="{{ icon_4_text | escape }}"
                            class="dual-showcase__icon-image-{{ section_id }}"
                            loading="lazy"
                            width="120"
                            height="120"
                            style="aspect-ratio: {{ icon_4_image.aspect_ratio }}; object-fit: cover;"
                          >
                        {% elsif icon_4_text != blank %}
                          <div 
                            class="dual-showcase__icon-circle-{{ section_id }}"
                            style="border: 2px solid {{ icon_color }}; color: {{ icon_color }};"
                          >
                            {{ icon_4_text | truncate: 5, '' }}
                          </div>
                        {% endif %}
                      </div>
                    {% endif %}
                  </div>
                {% endif %}

                {%- comment -%} Título {%- endcomment -%}
                <h2 class="dual-showcase__title-{{ section_id }}">
                  {% if custom_title != blank %}
                    {{ custom_title }}
                  {% elsif product != blank %}
                    {{ product.title }}
                  {% endif %}
                </h2>

                {%- comment -%} Descripción {%- endcomment -%}
                {% if description != blank %}
                  <p class="dual-showcase__description-{{ section_id }}">
                    {{ description }}
                  </p>
                {% endif %}

                {%- comment -%} Botón CTA {%- endcomment -%}
                {% if cta_text != blank %}
                  <a
                    href="{% if product != blank %}{{ product.url }}{% else %}{{ cta_link }}{% endif %}"
                    class="dual-showcase__cta-{{ section_id }}"
                    style="background-color: {{ cta_bg }}; color: {{ cta_text_color }};"
                    onmouseover="this.style.backgroundColor='{{ cta_hover_bg }}'; this.style.color='{{ cta_hover_text }}';"
                    onmouseout="this.style.backgroundColor='{{ cta_bg }}'; this.style.color='{{ cta_text_color }}';"
                  >
                    <span>{{ cta_text }}</span>
                    {% if section.settings.show_button_arrow %}
                      <svg class="dual-showcase__cta-icon-{{ section_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
