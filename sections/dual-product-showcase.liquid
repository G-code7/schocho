<script>
  (function() {
    const section = document.querySelector('[data-section-id="{{ section_id }}"]');
    if (!section) return;

    const slides = Array.from(section.querySelectorAll('.dual-showcase__slide-{{ section_id }}'));
    const imageSlides = Array.from(section.querySelectorAll('.dual-showcase__image-slide-{{ section_id }}'));
    const dots = Array.from(section.querySelectorAll('.dual-showcase__dot-{{ section_id }}'));
    const prevButton = section.querySelector('[data-nav="prev"]');
    const nextButton = section.querySelector('[data-nav="next"]');
    
    let currentSlide = 0;
    let autoplayInterval = null;
    const autoplayDuration = {{ section.settings.autoplay_duration }};
    const enableAutoplay = {{ section.settings.enable_autoplay }};

    function updateButtonColors() {
      const activeSlide = slides[currentSlide];
      if (!activeSlide) return;
      
      const textColor = activeSlide.style.color;
      if (textColor && prevButton && nextButton) {
        prevButton.style.color = textColor;
        nextButton.style.color = textColor;
        prevButton.style.borderColor = textColor;
        nextButton.style.borderColor = textColor;
      }
    }

    function goToSlide(index) {
      slides[currentSlide]?.classList.remove('active');
      imageSlides[currentSlide]?.classList.remove('active');
      dots[currentSlide]?.classList.remove('active');

      currentSlide = index;

      slides[currentSlide]?.classList.add('active');
      imageSlides[currentSlide]?.classList.add('active');
      dots[currentSlide]?.classList.add('active');

      updateButtonColors();
      updateNavigation();
    }

    function nextSlide() {
      const nextIndex = (currentSlide + 1) % slides.length;
      goToSlide(nextIndex);
    }

    function previousSlide() {
      const prevIndex = (currentSlide - 1 + slides.length) % slides.length;
      goToSlide(prevIndex);
    }

    function updateNavigation() {
      if (slides.length <= 1) {
        if (prevButton) prevButton.style.display = 'none';
        if (nextButton) nextButton.style.display = 'none';
      }
    }

    function startAutoplay() {
      if (!enableAutoplay || slides.length <= 1) return;
      stopAutoplay();
      autoplayInterval = setInterval(nextSlide, autoplayDuration);
    }

    function stopAutoplay() {
      if (autoplayInterval) {
        clearInterval(autoplayInterval);
        autoplayInterval = null;
      }
    }

    // Event listeners
    prevButton?.addEventListener('click', () => {
      previousSlide();
      stopAutoplay();
      setTimeout(startAutoplay, autoplayDuration);
    });

    nextButton?.addEventListener('click', () => {
      nextSlide();
      stopAutoplay();
      setTimeout(startAutoplay, autoplayDuration);
    });

    dots.forEach((dot, index) => {
      dot.addEventListener('click', () => {
        goToSlide(index);
        stopAutoplay();
        setTimeout(startAutoplay, autoplayDuration);
      });
    });

    // Pause on hover
    section.addEventListener('mouseenter', stopAutoplay);
    section.addEventListener('mouseleave', () => {
      if (enableAutoplay) startAutoplay();
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      const rect = section.getBoundingClientRect();
      if (rect.top < window.innerHeight && rect.bottom > 0) {
        if (e.key === 'ArrowLeft') {
          previousSlide();
          stopAutoplay();
          setTimeout(startAutoplay, autoplayDuration);
        }
        if (e.key === 'ArrowRight') {
          nextSlide();
          stopAutoplay();
          setTimeout(startAutoplay, autoplayDuration);
        }
      }
    });

    // Initialize
    updateButtonColors();
    updateNavigation();
    if (enableAutoplay) startAutoplay();
  })();
</script>

