{% assign section_id = section.id %}
{% assign cleaned_id = section_id | replace: '_', '-' | replace: '--', '-' | replace: '__', '-' %}

{% style %}
  .blog-slider-{{ cleaned_id }} {
    display: block;
    width: 100%;
    justify-self: anchor-center;
    padding: {{ section.settings.padding_top }}px 20px {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .blog-slider__container-{{ cleaned_id }} {
    max-width: 80%;
    margin: 0 auto;
    padding: 0 {{ section.settings.container_padding }}px;
  }

  .blog-slider__header-{{ cleaned_id }} {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: {{ section.settings.header_margin_bottom }}px;
  }

  .blog-slider__eyebrow-{{ cleaned_id }} {
    display: inline-block;
    color: {{ section.settings.eyebrow_color }};
    font-size: 12px;
    font-weight: 600;
    text-transform: capitalize;
    letter-spacing: 2px;
    margin-bottom: 12px;
  }

  .blog-slider__heading-{{ cleaned_id }} {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    line-height: 1.2;
    margin: 0 0 12px 0;
  }

  .blog-slider__subheading-{{ cleaned_id }} {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.subheading_size }}px;
    margin: 0;
    opacity: 0.85;
  }

  .blog-slider__wrapper-{{ cleaned_id }} {
    position: relative;
    overflow: hidden;
  }

  .blog-slider__track-{{ cleaned_id }} {
    display: flex;
    gap: {{ section.settings.card_gap }}px;
    transition: transform 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .blog-slider__card-{{ cleaned_id }} {
    flex: 0 0 calc((100% - {{ section.settings.card_gap | times: 2 }}px) / 3);
    background-color: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: 0 2px 12px rgba(255, 255, 255, 0.02);
    transition: transform 0.4s ease, box-shadow 0.4s ease;
    border: {{ section.settings.card_border_width }}px solid {{ section.settings.card_border_color }};
  }

  .blog-slider__card-{{ cleaned_id }}:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.12);
  }

  .blog-slider__image-wrapper-{{ cleaned_id }} {
    position: relative;
    width: 100%;
    padding-bottom: {{ section.settings.image_aspect_ratio }}%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .blog-slider__image-{{ cleaned_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s ease;
  }

  .blog-slider__card-{{ cleaned_id }}:hover .blog-slider__image-{{ cleaned_id }} {
    transform: scale(1.05);
  }

  .blog-slider__image-placeholder-{{ cleaned_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f8f8f8;
  }

  .blog-slider__image-placeholder-{{ cleaned_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  .blog-slider__content-{{ cleaned_id }} {
    padding: {{ section.settings.card_padding }}px;
  }

  .blog-slider__date-{{ cleaned_id }} {
    color: {{ section.settings.date_color }};
    font-size: 12px;
    font-weight: 500;
    text-transform: capitalize;
    letter-spacing: 1px;
    margin-bottom: 10px;
    opacity: 0.7;
  }

  .blog-slider__title-{{ cleaned_id }} {
    color: {{ section.settings.card_title_color }};
    font-size: {{ section.settings.card_title_size }}px;
    font-weight: {{ section.settings.card_title_weight }};
    text-transform: capitalize;
    line-height: {{ section.settings.card_title_line_height }};
    margin: 0 0 {{ section.settings.card_title_margin }}px 0;
    transition: color 0.3s ease;
  }

  .blog-slider__title-link-{{ cleaned_id }} {
    color: inherit;
    text-decoration: none;
  }

  .blog-slider__card-{{ cleaned_id }}:hover .blog-slider__title-{{ cleaned_id }} {
    color: {{ section.settings.accent_color }};
  }

  .blog-slider__excerpt-{{ cleaned_id }} {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.excerpt_size }}px;
    line-height: 1.6;
    margin-bottom: {{ section.settings.excerpt_margin }}px;
    opacity: 0.85;
  }

  /* Read More Button */
  .blog-slider__button-{{ cleaned_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    background-color: {{ section.settings.button_bg }};
    color: {{ section.settings.button_text_color }};
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    text-decoration: none;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .blog-slider__button-{{ cleaned_id }}:hover {
    background-color: {{ section.settings.button_hover_bg }};
    color: {{ section.settings.button_hover_text }};
    border-color: {{ section.settings.button_hover_border }};
    transform: translateX(4px);
  }

  .blog-slider__button-icon-{{ cleaned_id }} {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .blog-slider__button-{{ cleaned_id }}:hover .blog-slider__button-icon-{{ cleaned_id }} {
    transform: translateX(4px);
  }

  /* Navigation Controls */
  .blog-slider__controls-{{ cleaned_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
    margin-top: {{ section.settings.controls_margin_top }}px;
  }

  .blog-slider__nav-{{ cleaned_id }} {
    width: {{ section.settings.nav_button_size }}px;
    height: {{ section.settings.nav_button_size }}px;
    border-radius: {{ section.settings.nav_button_radius }}px;
    background-color: {{ section.settings.nav_bg }};
    color: {{ section.settings.nav_color }};
    border: {{ section.settings.nav_border_width }}px solid {{ section.settings.nav_border_color }};
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .blog-slider__nav-{{ cleaned_id }}:hover {
    background-color: {{ section.settings.nav_hover_bg }};
    color: {{ section.settings.nav_hover_color }};
    border-color: {{ section.settings.nav_hover_bg }};
    transform: scale(1.1);
  }

  .blog-slider__nav-{{ cleaned_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
    transform: none;
  }

  .blog-slider__nav-{{ cleaned_id }} svg {
    width: 20px;
    height: 20px;
  }

  .blog-slider__dots-{{ cleaned_id }} {
    display: flex;
    gap: 8px;
  }

  .blog-slider__dot-{{ cleaned_id }} {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: {{ section.settings.dot_color }};
    border: none;
    cursor: pointer;
    padding: 0;
    transition: all 0.3s ease;
    opacity: 0.4;
  }

  .blog-slider__dot-{{ cleaned_id }}.active {
    background-color: {{ section.settings.dot_active_color }};
    opacity: 1;
    width: 24px;
    border-radius: 4px;
  }

  .blog-slider__empty-{{ cleaned_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ section.settings.text_color }};
  }

  /* Auto-play controls */
  .blog-slider__autoplay-{{ cleaned_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 12px;
    margin-top: {{ section.settings.autoplay_controls_margin_top }}px;
  }

  .blog-slider__autoplay-toggle-{{ cleaned_id }} {
    background: none;
    border: none;
    color: {{ section.settings.autoplay_icon_color }};
    cursor: pointer;
    padding: 8px;
    transition: color 0.3s ease;
  }

  .blog-slider__autoplay-toggle-{{ cleaned_id }}:hover {
    color: {{ section.settings.autoplay_icon_hover_color }};
  }

  .blog-slider__autoplay-toggle-{{ cleaned_id }} svg {
    width: 24px;
    height: 24px;
  }

  /* Responsive */
  @media screen and (max-width: 989px) {
    .blog-slider__card-{{ cleaned_id }} {
      flex: 0 0 calc((100% - {{ section.settings.card_gap }}px) / 2);
    }

    .blog-slider__heading-{{ cleaned_id }} {
      font-size: calc({{ section.settings.heading_size }}px * 0.85);
    }

    .blog-slider__content-{{ cleaned_id }} {
      padding: {{ section.settings.card_padding | times: 0.85 | round }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .blog-slider-{{ cleaned_id }} {
      padding: {{ section.settings.padding_top | times: 0.7 | round }}px 16px {{ section.settings.padding_bottom | times: 0.7 | round }}px;
    }

    .blog-slider__card-{{ cleaned_id }} {
      flex: 0 0 100%;
    }

    .blog-slider__heading-{{ cleaned_id }} {
      font-size: calc({{ section.settings.heading_size }}px * 0.7);
    }

    .blog-slider__title-{{ cleaned_id }} {
      font-size: calc({{ section.settings.card_title_size }}px * 0.9);
    }

    .blog-slider__content-{{ cleaned_id }} {
      padding: {{ section.settings.card_padding | times: 0.75 | round }}px;
    }
  }
{% endstyle %}

<div class="blog-slider-{{ cleaned_id }}" 
     data-section-id="{{ cleaned_id }}" 
     data-card-gap="{{ section.settings.card_gap }}"
     data-autoplay="{{ section.settings.autoplay }}"
     data-autoplay-speed="{{ section.settings.autoplay_speed }}"
     data-pause-on-hover="{{ section.settings.pause_on_hover }}"
     {{ section.shopify_attributes }}>
  <div class="blog-slider__container-{{ cleaned_id }}">
    {% if section.settings.eyebrow != blank
      or section.settings.heading != blank
      or section.settings.subheading != blank
    %}
      <div class="blog-slider__header-{{ cleaned_id }}">
        {% if section.settings.eyebrow != blank %}
          <span class="blog-slider__eyebrow-{{ cleaned_id }}">{{ section.settings.eyebrow }}</span>
        {% endif %}
        {% if section.settings.heading != blank %}
          <h2 class="blog-slider__heading-{{ cleaned_id }}">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="blog-slider__subheading-{{ cleaned_id }}">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if section.settings.blog != blank %}
      {% assign articles = section.settings.blog.articles %}
      {% assign max_posts = section.settings.max_posts %}
      {% assign article_count = articles.size | at_most: max_posts %}

      {% if article_count > 0 %}
        <div class="blog-slider__wrapper-{{ cleaned_id }}">
          <div class="blog-slider__track-{{ cleaned_id }}" data-slider-track>
            {% for article in articles limit: max_posts %}
              <article class="blog-slider__card-{{ cleaned_id }}">
                <div class="blog-slider__image-wrapper-{{ cleaned_id }}">
                  {% if article.image %}
                    <img
                      src="{{ article.image | image_url: width: 600 }}"
                      alt="{{ article.image.alt | default: article.title | escape }}"
                      class="blog-slider__image-{{ cleaned_id }}"
                      loading="lazy"
                      width="600"
                      height="400"
                    >
                  {% else %}
                    <div class="blog-slider__image-placeholder-{{ cleaned_id }}">
                      {{ 'image' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </div>

                <div class="blog-slider__content-{{ cleaned_id }}">
                  {% if section.settings.show_date %}
                    <div class="blog-slider__date-{{ cleaned_id }}">
                      {{ article.published_at | date: section.settings.date_format }}
                    </div>
                  {% endif %}

                  <h3 class="blog-slider__title-{{ cleaned_id }}">
                    <a href="{{ article.url }}" class="blog-slider__title-link-{{ cleaned_id }}">
                      {{ article.title }}
                    </a>
                  </h3>

                  {% if section.settings.show_excerpt and article.excerpt_or_content != blank %}
                    <div class="blog-slider__excerpt-{{ cleaned_id }}">
                      {{ article.excerpt_or_content | strip_html | truncate: section.settings.excerpt_length }}
                    </div>
                  {% endif %}

                  {% if section.settings.show_button %}
                    <a href="{{ article.url }}" class="blog-slider__button-{{ cleaned_id }}">
                      <span>{{ section.settings.button_text }}</span>
                      {% if section.settings.show_button_arrow %}
                        <svg
                          class="blog-slider__button-icon-{{ cleaned_id }}"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        >
                          <line x1="5" y1="12" x2="19" y2="12"></line>
                          <polyline points="12 5 19 12 12 19"></polyline>
                        </svg>
                      {% endif %}
                    </a>
                  {% endif %}
                </div>
              </article>
            {% endfor %}
          </div>
        </div>

        {% if article_count > 3 %}
          <div class="blog-slider__controls-{{ cleaned_id }}">
            <button class="blog-slider__nav-{{ cleaned_id }}" data-slider-prev aria-label="Previous">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="15 18 9 12 15 6"></polyline>
              </svg>
            </button>
            <div class="blog-slider__dots-{{ cleaned_id }}" data-slider-dots></div>
            <button class="blog-slider__nav-{{ cleaned_id }}" data-slider-next aria-label="Next">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="9 18 15 12 9 6"></polyline>
              </svg>
            </button>
          </div>
        {% endif %}

        {% if section.settings.autoplay and section.settings.show_autoplay_controls %}
          <div class="blog-slider__autoplay-{{ cleaned_id }}">
            <button class="blog-slider__autoplay-toggle-{{ cleaned_id }}" data-autoplay-toggle aria-label="Pause autoplay">
              <svg data-play-icon viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polygon points="5 3 19 12 5 21 5 3"></polygon>
              </svg>
              <svg data-pause-icon viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: none;">
                <rect x="6" y="4" width="4" height="16"></rect>
                <rect x="14" y="4" width="4" height="16"></rect>
              </svg>
            </button>
          </div>
        {% endif %}
      {% else %}
        <div class="blog-slider__empty-{{ cleaned_id }}">
          <p>No articles found in this blog.</p>
        </div>
      {% endif %}
    {% else %}
      <div class="blog-slider__empty-{{ cleaned_id }}">
        <p>Please select a blog to display articles.</p>
      </div>
    {% endif %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    class BlogSlider {
      constructor(element) {
        this.element = element;
        this.sectionId = element.dataset.sectionId;
        this.current = 0;
        this.perView = 3;
        this.autoplay = element.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(element.dataset.autoplaySpeed) || 5000;
        this.pauseOnHover = element.dataset.pauseOnHover === 'true';
        this.isPlaying = this.autoplay;
        this.autoplayTimer = null;
        
        this.track = element.querySelector('[data-slider-track]');
        this.prev = element.querySelector('[data-slider-prev]');
        this.next = element.querySelector('[data-slider-next]');
        this.dotsWrap = element.querySelector('[data-slider-dots]');
        this.autoplayToggle = element.querySelector('[data-autoplay-toggle]');

        if (!this.track) return;

        this.cards = Array.from(this.track.children);
        this.total = this.cards.length;

        if (this.total === 0) return;

        this.updatePerView();
        this.createDots();
        this.setupEvents();
        this.update();
        
        if (this.autoplay) {
          this.startAutoplay();
        }

        window.addEventListener('resize', () => {
          this.updatePerView();
          this.createDots();
          this.current = Math.min(this.current, this.maxSlide);
          this.update();
        });
      }

      updatePerView() {
        if (window.innerWidth <= 749) this.perView = 1;
        else if (window.innerWidth <= 989) this.perView = 2;
        else this.perView = 3;
        
        this.perView = Math.min(this.perView, this.total);
        this.maxSlide = Math.max(0, this.total - this.perView);
      }

      createDots() {
        if (!this.dotsWrap) return;
        this.dotsWrap.innerHTML = '';
        
        if (this.maxSlide <= 0) return;
        
        for (let i = 0; i <= this.maxSlide; i++) {
          const dot = document.createElement('button');
          dot.className = 'blog-slider__dot-' + this.sectionId;
          dot.setAttribute('aria-label', 'Slide ' + (i + 1));
          dot.onclick = () => {
            this.goTo(i);
            this.restartAutoplay();
          };
          this.dotsWrap.appendChild(dot);
        }
        this.dots = Array.from(this.dotsWrap.children);
      }

      setupEvents() {
        if (this.prev) {
          this.prev.onclick = () => {
            this.goTo(this.current - 1);
            this.restartAutoplay();
          };
        }
        
        if (this.next) {
          this.next.onclick = () => {
            this.goTo(this.current + 1);
            this.restartAutoplay();
          };
        }

        if (this.autoplayToggle) {
          this.autoplayToggle.onclick = () => this.toggleAutoplay();
        }

        // Pause on hover
        if (this.pauseOnHover) {
          this.element.addEventListener('mouseenter', () => {
            if (this.isPlaying) {
              this.pauseAutoplay();
            }
          });
          
          this.element.addEventListener('mouseleave', () => {
            if (this.autoplay && !this.isPlaying) {
              this.startAutoplay();
            }
          });
        }

        // Touch events
        let startX = 0;
        this.track.addEventListener('touchstart', e => { 
          startX = e.touches[0].clientX; 
          this.pauseAutoplay();
        }, {passive: true});
        
        this.track.addEventListener('touchend', e => {
          const diff = startX - e.changedTouches[0].clientX;
          if (Math.abs(diff) > 50) {
            this.goTo(this.current + (diff > 0 ? 1 : -1));
          }
          this.restartAutoplay();
        }, {passive: true});
      }

      goTo(i) {
        if (this.maxSlide <= 0) return;
        
        // Handle infinite loop
        if (i > this.maxSlide) {
          i = 0;
        } else if (i < 0) {
          i = this.maxSlide;
        }
        
        this.current = i;
        this.update();
      }

      update() {
        const gap = parseInt(this.element.dataset.cardGap);
        const cardW = this.cards[0] ? this.cards[0].offsetWidth : 0;
        
        if (this.maxSlide > 0) {
          this.track.style.transform = 'translateX(-' + (this.current * (cardW + gap)) + 'px)';
        } else {
          this.track.style.transform = 'translateX(0)';
        }

        if (this.dots) {
          this.dots.forEach((d, i) => d.classList.toggle('active', i === this.current));
        }
        
        if (this.prev) {
          this.prev.disabled = this.current === 0 || this.maxSlide <= 0;
          this.prev.style.opacity = this.prev.disabled ? '0.3' : '1';
        }
        
        if (this.next) {
          this.next.disabled = this.current >= this.maxSlide || this.maxSlide <= 0;
          this.next.style.opacity = this.next.disabled ? '0.3' : '1';
        }
      }

      // Autoplay methods
      startAutoplay() {
        if (!this.autoplay || this.maxSlide <= 0) return;
        
        this.isPlaying = true;
        this.updateAutoplayButton();
        
        this.autoplayTimer = setInterval(() => {
          this.goTo(this.current + 1);
        }, this.autoplaySpeed);
      }

      pauseAutoplay() {
        this.isPlaying = false;
        this.updateAutoplayButton();
        
        if (this.autoplayTimer) {
          clearInterval(this.autoplayTimer);
          this.autoplayTimer = null;
        }
      }

      restartAutoplay() {
        this.pauseAutoplay();
        if (this.autoplay) {
          this.startAutoplay();
        }
      }

      toggleAutoplay() {
        if (this.isPlaying) {
          this.pauseAutoplay();
        } else {
          this.startAutoplay();
        }
      }

      updateAutoplayButton() {
        if (!this.autoplayToggle) return;
        
        const playIcon = this.autoplayToggle.querySelector('[data-play-icon]');
        const pauseIcon = this.autoplayToggle.querySelector('[data-pause-icon]');
        
        if (this.isPlaying) {
          playIcon.style.display = 'none';
          pauseIcon.style.display = 'block';
          this.autoplayToggle.setAttribute('aria-label', 'Pause autoplay');
        } else {
          playIcon.style.display = 'block';
          pauseIcon.style.display = 'none';
          this.autoplayToggle.setAttribute('aria-label', 'Play autoplay');
        }
      }

      // Cleanup
      destroy() {
        this.pauseAutoplay();
        window.removeEventListener('resize', this.handleResize);
      }
    }

    // Initialize all sliders
    const blogSliders = document.querySelectorAll('[data-card-gap]');
    const sliders = [];
    
    blogSliders.forEach(element => {
      if (element.querySelector('[data-slider-track]')) {
        sliders.push(new BlogSlider(element));
      }
    });

    // Cleanup on page navigation (for SPAs)
    if (typeof window !== 'undefined') {
      window.addEventListener('beforeunload', () => {
        sliders.forEach(slider => slider.destroy());
      });
    }
  });
</script>

