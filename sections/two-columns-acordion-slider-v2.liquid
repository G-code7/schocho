{% assign section_id = section.id | replace: '_', '' | replace: '-', '' | slice: 0, 8 %}

{% style %}
  /* === SECCIÓN PRINCIPAL === */
  .sync-section-{{ section_id }} {
    display: block;
    width: 100%;
    background-color: {{ section.settings.section_background_color }};
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_x }}px {{ section.settings.section_padding_bottom }}px;
  }

  .sync-wrapper-{{ section_id }} {
    max-width: {{ section.settings.section_max_width }}px;
    margin: 0 auto;
    {% if section.settings.wrapper_border_radius > 0 %}
    border-radius: {{ section.settings.wrapper_border_radius }}px;
    overflow: hidden;
    {% endif %}
    {% if section.settings.wrapper_shadow %}
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
    {% endif %}
    {% if section.settings.wrapper_border_width > 0 %}
    border: {{ section.settings.wrapper_border_width }}px solid {{ section.settings.wrapper_border_color }};
    {% endif %}
    background-color: {{ section.settings.background_color }};
  }

  .sync-container-{{ section_id }} {
    display: flex;
    flex-direction: {% if section.settings.image_position == 'right' %}row-reverse{% else %}row{% endif %};
    min-height: {{ section.settings.section_min_height }}px;
  }

  /* === COLUMNA IMAGEN - SLIDER === */
  .sync-image-column-{{ section_id }} {
    flex: 0 0 {{ section.settings.image_column_width }}%;
    position: relative;
    overflow: hidden;
    background-color: {{ section.settings.image_bg_color }};
    padding: {{ section.settings.image_padding_top }}px {{ section.settings.image_padding_right }}px {{ section.settings.image_padding_bottom }}px {{ section.settings.image_padding_left }}px;
  }

  .sync-slider-{{ section_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    {% if section.settings.image_border_radius > 0 %}
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
    {% endif %}
  }

  .sync-slide-{{ section_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity {{ section.settings.transition_duration }}ms ease;
    z-index: 1;
    {% if section.settings.image_border_radius > 0 %}
    border-radius: {{ section.settings.image_border_radius }}px;
    overflow: hidden;
    {% endif %}
  }

  .sync-slide-{{ section_id }}.active {
    opacity: 1;
    z-index: 2;
  }

  .sync-slide-{{ section_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ section.settings.image_object_position }};
    {% if section.settings.image_border_radius > 0 %}
    border-radius: {{ section.settings.image_border_radius }}px;
    {% endif %}
  }

  .sync-placeholder-{{ section_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f0f0f0 0%, #e0e0e0 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    {% if section.settings.image_border_radius > 0 %}
    border-radius: {{ section.settings.image_border_radius }}px;
    {% endif %}
  }

  .sync-placeholder-{{ section_id }} svg {
    width: 120px;
    height: 120px;
    opacity: 0.4;
  }

  /* Indicadores del slider */
  .sync-indicators-{{ section_id }} {
    position: absolute;
    bottom: {{ section.settings.indicators_bottom | plus: section.settings.image_padding_bottom }}px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: {{ section.settings.indicators_gap }}px;
    z-index: 10;
  }

  .sync-dot-{{ section_id }} {
    width: {{ section.settings.dot_size }}px;
    height: {{ section.settings.dot_size }}px;
    border-radius: 50%;
    background-color: {{ section.settings.dot_color }};
    opacity: {{ section.settings.dot_opacity | divided_by: 100.0 }};
    border: none;
    padding: 0;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .sync-dot-{{ section_id }}:hover {
    opacity: {{ section.settings.dot_hover_opacity | divided_by: 100.0 }};
    transform: scale(1.2);
  }

  .sync-dot-{{ section_id }}.active {
    opacity: 1;
    background-color: {{ section.settings.dot_active_color }};
    transform: scale(1.3);
  }

  /* Overlay opcional sobre imagen */
  .sync-overlay-{{ section_id }} {
    position: absolute;
    top: {{ section.settings.image_padding_top }}px;
    left: {{ section.settings.image_padding_left }}px;
    right: {{ section.settings.image_padding_right }}px;
    bottom: {{ section.settings.image_padding_bottom }}px;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    pointer-events: none;
    z-index: 3;
    {% if section.settings.image_border_radius > 0 %}
    border-radius: {{ section.settings.image_border_radius }}px;
    {% endif %}
  }

  /* === COLUMNA CONTENIDO === */
  .sync-content-column-{{ section_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: {{ section.settings.content_vertical_align }};
    padding: {{ section.settings.content_padding_top }}px {{ section.settings.content_padding_right }}px {{ section.settings.content_padding_bottom }}px {{ section.settings.content_padding_left }}px;
    background-color: {{ section.settings.content_bg_color }};
  }

  .sync-content-{{ section_id }} {
    max-width: {{ section.settings.content_max_width }}px;
  }

  /* === BADGE / CLAIMS === */
  .sync-badge-container-{{ section_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ section.settings.badge_gap }}px;
    margin-bottom: {{ section.settings.badge_margin_bottom }}px;
    {% if section.settings.badge_alignment == 'center' %}
    justify-content: center;
    {% elsif section.settings.badge_alignment == 'right' %}
    justify-content: flex-end;
    {% else %}
    justify-content: flex-start;
    {% endif %}
  }

  .sync-badge-{{ section_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: {{ section.settings.badge_icon_gap }}px;
    padding: {{ section.settings.badge_padding_y }}px {{ section.settings.badge_padding_x }}px;
    background-color: {{ section.settings.badge_background }};
    color: {{ section.settings.badge_text_color }};
    font-size: {{ section.settings.badge_font_size }}px;
    font-weight: {{ section.settings.badge_font_weight }};
    line-height: 1.2;
    border: {{ section.settings.badge_border_width }}px solid {{ section.settings.badge_border_color }};
    border-radius: {{ section.settings.badge_border_radius }}px;
    {% if section.settings.badge_uppercase %}
    text-transform: uppercase;
    letter-spacing: 0.05em;
    {% endif %}
  }

  .sync-badge-icon-{{ section_id }} {
    width: {{ section.settings.badge_icon_size }}px;
    height: {{ section.settings.badge_icon_size }}px;
    flex-shrink: 0;
  }

  .sync-badge-icon-{{ section_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* Título */
  .sync-title-{{ section_id }} {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    margin: 0 0 {{ section.settings.title_margin_bottom }}px 0;
    line-height: {{ section.settings.title_line_height }};
    letter-spacing: {{ section.settings.title_letter_spacing }}px;
  }

  /* Descripción */
  .sync-description-{{ section_id }} {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    line-height: {{ section.settings.description_line_height }};
    margin: 0 0 {{ section.settings.description_margin_bottom }}px 0;
  }

  /* === ACORDEÓN === */
  .sync-accordion-{{ section_id }} {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .sync-accordion-item-{{ section_id }} {
    border: none;
    border-top: {{ section.settings.accordion_border_width }}px solid {{ section.settings.accordion_border_color }};
    overflow: hidden;
    transition: all 0.3s ease;
    background-color: transparent;
  }

  .sync-accordion-item-{{ section_id }}:last-child {
    border-bottom: {{ section.settings.accordion_border_width }}px solid {{ section.settings.accordion_border_color }};
  }

  .sync-accordion-header-{{ section_id }} {
    width: 100%;
    padding: {{ section.settings.accordion_header_padding_y }}px 0;
    background-color: transparent;
    border: none;
    text-align: left;
    cursor: pointer;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: {{ section.settings.accordion_icon_gap }}px;
    transition: all 0.3s ease;
  }

  .sync-accordion-header-{{ section_id }}:hover .sync-accordion-title-{{ section_id }} {
    color: {{ section.settings.accordion_title_hover_color }};
  }

  .sync-accordion-left-{{ section_id }} {
    display: flex;
    align-items: center;
    gap: {{ section.settings.accordion_icon_gap }}px;
    flex: 1;
  }

  .sync-accordion-title-{{ section_id }} {
    font-size: {{ section.settings.accordion_title_size }}px;
    font-weight: {{ section.settings.accordion_title_weight }};
    color: {{ section.settings.accordion_title_color }};
    margin: 0;
    transition: color 0.3s ease;
  }

  .sync-accordion-item-{{ section_id }}.active .sync-accordion-title-{{ section_id }} {
    color: {{ section.settings.accordion_title_active_color }};
  }

  /* Icono personalizado (imagen PNG) */
  .sync-accordion-custom-icon-{{ section_id }} {
    width: {{ section.settings.accordion_custom_icon_size }}px;
    height: {{ section.settings.accordion_custom_icon_size }}px;
    flex-shrink: 0;
    object-fit: contain;
  }

  /* Icono + / - */
  .sync-accordion-toggle-{{ section_id }} {
    position: relative;
    width: {{ section.settings.accordion_toggle_size }}px;
    height: {{ section.settings.accordion_toggle_size }}px;
    flex-shrink: 0;
  }

  .sync-accordion-toggle-{{ section_id }}::before,
  .sync-accordion-toggle-{{ section_id }}::after {
    content: '';
    position: absolute;
    background-color: {{ section.settings.accordion_toggle_color }};
    transition: all 0.3s ease;
  }

  /* Línea horizontal (siempre visible) */
  .sync-accordion-toggle-{{ section_id }}::before {
    top: 50%;
    left: 0;
    width: 100%;
    height: {{ section.settings.accordion_toggle_thickness }}px;
    transform: translateY(-50%);
  }

  /* Línea vertical (se oculta cuando está activo) */
  .sync-accordion-toggle-{{ section_id }}::after {
    top: 0;
    left: 50%;
    width: {{ section.settings.accordion_toggle_thickness }}px;
    height: 100%;
    transform: translateX(-50%);
  }

  .sync-accordion-item-{{ section_id }}.active .sync-accordion-toggle-{{ section_id }}::after {
    transform: translateX(-50%) rotate(90deg);
    opacity: 0;
  }

  .sync-accordion-item-{{ section_id }}.active .sync-accordion-toggle-{{ section_id }}::before,
  .sync-accordion-item-{{ section_id }}.active .sync-accordion-toggle-{{ section_id }}::after {
    background-color: {{ section.settings.accordion_toggle_active_color }};
  }

  .sync-accordion-body-{{ section_id }} {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s ease;
  }

  .sync-accordion-item-{{ section_id }}.active .sync-accordion-body-{{ section_id }} {
    max-height: 500px;
  }

  .sync-accordion-content-{{ section_id }} {
    padding: 0 0 {{ section.settings.accordion_content_padding_bottom }}px {{ section.settings.accordion_content_indent }}px;
    font-size: {{ section.settings.accordion_content_size }}px;
    color: {{ section.settings.accordion_content_color }};
    line-height: {{ section.settings.accordion_content_line_height }};
  }

  /* === RESPONSIVE === */
  @media screen and (max-width: 990px) {
    .sync-section-{{ section_id }} {
      padding: {{ section.settings.section_padding_top_mobile }}px {{ section.settings.section_padding_x_mobile }}px {{ section.settings.section_padding_bottom_mobile }}px;
    }

    .sync-wrapper-{{ section_id }} {
      {% if section.settings.wrapper_border_radius_mobile > 0 %}
      border-radius: {{ section.settings.wrapper_border_radius_mobile }}px;
      {% else %}
      border-radius: 0;
      {% endif %}
    }

    .sync-container-{{ section_id }} {
      flex-direction: {% if section.settings.mobile_image_position == 'bottom' %}column-reverse{% else %}column{% endif %};
      min-height: auto;
    }

    .sync-image-column-{{ section_id }} {
      flex: none;
      width: 100%;
      height: {{ section.settings.mobile_image_height }}px;
      position: relative;
      padding: {{ section.settings.mobile_image_padding }}px;
    }

    .sync-content-column-{{ section_id }} {
      padding: {{ section.settings.mobile_content_padding }}px;
    }

    .sync-title-{{ section_id }} {
      font-size: {{ section.settings.title_size_mobile }}px;
    }

    .sync-description-{{ section_id }} {
      font-size: {{ section.settings.description_size | times: 0.9 | round }}px;
    }

    .sync-indicators-{{ section_id }} {
      bottom: {{ section.settings.indicators_bottom | plus: section.settings.mobile_image_padding }}px;
    }

    .sync-overlay-{{ section_id }} {
      top: {{ section.settings.mobile_image_padding }}px;
      left: {{ section.settings.mobile_image_padding }}px;
      right: {{ section.settings.mobile_image_padding }}px;
      bottom: {{ section.settings.mobile_image_padding }}px;
    }

    .sync-badge-{{ section_id }} {
      font-size: {{ section.settings.badge_font_size_mobile }}px;
      padding: {{ section.settings.badge_padding_y_mobile }}px {{ section.settings.badge_padding_x_mobile }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .sync-image-column-{{ section_id }} {
      height: {{ section.settings.mobile_image_height | times: 0.8 | round }}px;
    }

    .sync-title-{{ section_id }} {
      font-size: {{ section.settings.title_size_mobile | times: 0.85 | round }}px;
    }

    .sync-accordion-header-{{ section_id }} {
      padding: 14px 0;
    }
  }

  /* Reducir movimiento si el usuario lo prefiere */
  @media (prefers-reduced-motion: reduce) {
    .sync-slide-{{ section_id }},
    .sync-dot-{{ section_id }},
    .sync-accordion-item-{{ section_id }},
    .sync-accordion-icon-{{ section_id }},
    .sync-accordion-body-{{ section_id }} {
      transition: none;
    }
  }
{% endstyle %}

<section class="sync-section-{{ section_id }}">
  <div class="sync-wrapper-{{ section_id }}">
    <div class="sync-container-{{ section_id }}">
      
      <!-- Columna Imagen: Slider -->
      <div class="sync-image-column-{{ section_id }}">
        <div class="sync-slider-{{ section_id }}" data-slider>
          
          {% assign has_images = false %}
          {% assign image_count = 0 %}
          
          {% for block in section.blocks %}
            {% if block.type == 'accordion_item' and block.settings.image != blank %}
              {% assign has_images = true %}
              {% assign image_count = image_count | plus: 1 %}
              <div class="sync-slide-{{ section_id }}{% if forloop.first %} active{% endif %}" data-slide-index="{{ forloop.index0 }}">
                <img
                  src="{{ block.settings.image | image_url: width: 1200 }}"
                  srcset="{{ block.settings.image | image_url: width: 600 }} 600w,
                          {{ block.settings.image | image_url: width: 900 }} 900w,
                          {{ block.settings.image | image_url: width: 1200 }} 1200w,
                          {{ block.settings.image | image_url: width: 1800 }} 1800w"
                  sizes="(max-width: 990px) 100vw, {{ section.settings.image_column_width }}vw"
                  alt="{{ block.settings.image.alt | default: block.settings.accordion_title | escape }}"
                  loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                >
              </div>
            {% elsif block.type == 'accordion_item' and block.settings.image == blank %}
              {% assign image_count = image_count | plus: 1 %}
              <div class="sync-slide-{{ section_id }}{% if forloop.first %} active{% endif %}" data-slide-index="{{ forloop.index0 }}">
                <div class="sync-placeholder-{{ section_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              </div>
            {% endif %}
          {% endfor %}

          {% if section.blocks.size == 0 %}
            <div class="sync-slide-{{ section_id }} active" data-slide-index="0">
              <div class="sync-placeholder-{{ section_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            </div>
          {% endif %}
        </div>

        {% if section.settings.show_overlay %}
          <div class="sync-overlay-{{ section_id }}"></div>
        {% endif %}

        {% if section.blocks.size > 1 and section.settings.show_indicators %}
          <div class="sync-indicators-{{ section_id }}" data-indicators>
            {% for block in section.blocks %}
              {% if block.type == 'accordion_item' %}
                <button 
                  class="sync-dot-{{ section_id }}{% if forloop.first %} active{% endif %}" 
                  data-dot-index="{{ forloop.index0 }}"
                  aria-label="Ir a la imagen {{ forloop.index }}"
                  type="button"
                ></button>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <!-- Columna Contenido -->
      <div class="sync-content-column-{{ section_id }}">
        <div class="sync-content-{{ section_id }}">
          
          {%- comment -%} ===== BADGES / CLAIMS ===== {%- endcomment -%}
          {% if section.settings.show_badges %}
            {%- liquid
              assign badges_text = section.settings.badges_text
              assign has_badges = false
              
              if badges_text != blank
                assign badges_array = badges_text | split: ','
                if badges_array.size > 0
                  assign has_badges = true
                endif
              endif
            -%}

            {% if has_badges %}
              <div class="sync-badge-container-{{ section_id }}">
                {% for badge in badges_array %}
                  {%- assign trimmed_badge = badge | strip -%}
                  {% if trimmed_badge != blank %}
                    <span class="sync-badge-{{ section_id }}">
                      {% if section.settings.badge_icon != blank %}
                        <span class="sync-badge-icon-{{ section_id }}">
                          <img 
                            src="{{ section.settings.badge_icon | image_url: width: 48 }}" 
                            alt="" 
                            loading="lazy"
                            width="{{ section.settings.badge_icon_size }}"
                            height="{{ section.settings.badge_icon_size }}"
                          >
                        </span>
                      {% endif %}
                      {{ trimmed_badge }}
                    </span>
                  {% endif %}
                {% endfor %}
              </div>
            {% endif %}
          {% endif %}

          {% if section.settings.title != blank %}
            <h2 class="sync-title-{{ section_id }}">{{ section.settings.title }}</h2>
          {% endif %}

          {% if section.settings.description != blank %}
            <div class="sync-description-{{ section_id }}">{{ section.settings.description }}</div>
          {% endif %}

          <div class="sync-accordion-{{ section_id }}" data-accordion>
            {% for block in section.blocks %}
              {% if block.type == 'accordion_item' %}
                <div 
                  class="sync-accordion-item-{{ section_id }}{% if forloop.first and section.settings.first_open %} active{% endif %}" 
                  data-accordion-index="{{ forloop.index0 }}"
                  {{ block.shopify_attributes }}
                >
                  <button 
                    class="sync-accordion-header-{{ section_id }}" 
                    type="button"
                    aria-expanded="{% if forloop.first and section.settings.first_open %}true{% else %}false{% endif %}"
                    aria-controls="accordion-body-{{ section_id }}-{{ forloop.index0 }}"
                  >
                    <div class="sync-accordion-left-{{ section_id }}">
                      {% if block.settings.icon != blank %}
                        <img 
                          class="sync-accordion-custom-icon-{{ section_id }}" 
                          src="{{ block.settings.icon | image_url: width: 100 }}" 
                          alt="{{ block.settings.accordion_title | escape }}"
                          width="{{ section.settings.accordion_custom_icon_size }}"
                          height="{{ section.settings.accordion_custom_icon_size }}"
                          loading="lazy"
                        >
                      {% endif %}
                      <span class="sync-accordion-title-{{ section_id }}">{{ block.settings.accordion_title }}</span>
                    </div>
                    <span class="sync-accordion-toggle-{{ section_id }}" aria-hidden="true"></span>
                  </button>
                  <div class="sync-accordion-body-{{ section_id }}" id="accordion-body-{{ section_id }}-{{ forloop.index0 }}">
                    <div class="sync-accordion-content-{{ section_id }}">
                      {{ block.settings.accordion_content }}
                    </div>
                  </div>
                </div>
              {% endif %}
            {% endfor %}
          </div>

        </div>
      </div>
    </div>
  </div>
</section>

<script>
  (function() {
    const section = document.querySelector('.sync-section-{{ section_id }}');
    if (!section) return;

    const slides = section.querySelectorAll('.sync-slide-{{ section_id }}');
    const dots = section.querySelectorAll('.sync-dot-{{ section_id }}');
    const accordionItems = section.querySelectorAll('.sync-accordion-item-{{ section_id }}');
    
    let currentSlideIndex = 0;
    let autoplayInterval = null;
    const autoplayEnabled = {{ section.settings.autoplay | json }};
    const autoplayDelay = {{ section.settings.autoplay_delay }};

    // Funciones para el slider independiente
    function goToSlide(index) {
      slides.forEach((slide, i) => {
        slide.classList.toggle('active', i === index);
      });

      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === index);
      });

      currentSlideIndex = index;
    }

    function nextSlide() {
      const nextIndex = (currentSlideIndex + 1) % slides.length;
      goToSlide(nextIndex);
    }

    function prevSlide() {
      const prevIndex = (currentSlideIndex - 1 + slides.length) % slides.length;
      goToSlide(prevIndex);
    }

    function startAutoplay() {
      if (!autoplayEnabled || slides.length <= 1) return;
      
      stopAutoplay();
      autoplayInterval = setInterval(nextSlide, autoplayDelay);
    }

    function stopAutoplay() {
      if (autoplayInterval) {
        clearInterval(autoplayInterval);
        autoplayInterval = null;
      }
    }

    // Funciones para el acordeón (independiente)
    function toggleAccordion(index) {
      accordionItems.forEach((item, i) => {
        const header = item.querySelector('.sync-accordion-header-{{ section_id }}');
        const isTarget = i === index;
        
        if (isTarget) {
          const isCurrentlyActive = item.classList.contains('active');
          if (!isCurrentlyActive) {
            item.classList.add('active');
            header.setAttribute('aria-expanded', 'true');
          } else {
            item.classList.remove('active');
            header.setAttribute('aria-expanded', 'false');
          }
        } else {
          // Opcional: cerrar otros acordeones
          // item.classList.remove('active');
          // header.setAttribute('aria-expanded', 'false');
        }
      });
    }

    // Event Listeners para dots del slider
    dots.forEach((dot, index) => {
      dot.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        stopAutoplay();
        goToSlide(index);
      });
    });

    // Event Listeners para acordeón
    accordionItems.forEach((item, index) => {
      const header = item.querySelector('.sync-accordion-header-{{ section_id }}');
      
      header.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        toggleAccordion(index);
      });
    });

    // Pausar autoplay al hover
    const imageColumn = section.querySelector('.sync-image-column-{{ section_id }}');
    if (imageColumn) {
      imageColumn.addEventListener('mouseenter', stopAutoplay);
      imageColumn.addEventListener('mouseleave', startAutoplay);
    }

    // Touch para mobile (solo para slider)
    let touchStartX = 0;
    let touchEndX = 0;
    const slider = section.querySelector('.sync-slider-{{ section_id }}');

    if (slider) {
      slider.addEventListener('touchstart', (e) => {
        touchStartX = e.changedTouches[0].screenX;
        stopAutoplay();
      }, { passive: true });

      slider.addEventListener('touchend', (e) => {
        touchEndX = e.changedTouches[0].screenX;
        handleSwipe();
      }, { passive: true });
    }

    function handleSwipe() {
      const swipeThreshold = 50;
      const diff = touchStartX - touchEndX;

      if (Math.abs(diff) > swipeThreshold) {
        stopAutoplay();
        if (diff > 0) {
          nextSlide();
        } else {
          prevSlide();
        }
      }
    }

    // Keyboard navigation para slider
    section.addEventListener('keydown', (e) => {
      if (e.target.closest('.sync-accordion-header-{{ section_id }}')) return;
      
      if (e.key === 'ArrowLeft') {
        stopAutoplay();
        prevSlide();
      } else if (e.key === 'ArrowRight') {
        stopAutoplay();
        nextSlide();
      }
    });

    // Iniciar autoplay
    startAutoplay();

    // Limpiar intervalo al salir de la página
    window.addEventListener('beforeunload', stopAutoplay);

  })();
</script>