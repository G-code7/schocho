    dots.forEach((dot, index) => {
      dot.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        stopAutoplay();
        goToSlide(index);
        
        // Reiniciar autoplay después de un tiempo
        setTimeout(startAutoplay, autoplayDelay * 2);
      });
    });

    // Event Listeners para acordeón
    accordionItems.forEach((item, index) => {
      const header = item.querySelector('.sync-accordion-header-{{ section_id }}');
      
      header.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        toggleAccordion(index);
      });
    });

    // Pausar autoplay al hover sobre el slider
    const imageColumn = section.querySelector('.sync-image-column-{{ section_id }}');
    if (imageColumn) {
      imageColumn.addEventListener('mouseenter', stopAutoplay);
      imageColumn.addEventListener('mouseleave', startAutoplay);
      
      // También para touch en móviles
      imageColumn.addEventListener('touchstart', stopAutoplay, { passive: true });
      imageColumn.addEventListener('touchend', () => {
        setTimeout(startAutoplay, 1000);
      }, { passive: true });
    }

    // Touch para mobile (swipe)
    let touchStartX = 0;
    let touchEndX = 0;
    const slider = section.querySelector('.sync-slider-{{ section_id }}');

    if (slider) {
      slider.addEventListener('touchstart', (e) => {
        touchStartX = e.changedTouches[0].screenX;
        stopAutoplay();
      }, { passive: true });

      slider.addEventListener('touchend', (e) => {
        touchEndX = e.changedTouches[0].screenX;
        handleSwipe();
      }, { passive: true });
    }

    function handleSwipe() {
      const swipeThreshold = 50;
      const diff = touchStartX - touchEndX;

      if (Math.abs(diff) > swipeThreshold) {
        if (diff > 0) {
          nextSlide();
        } else {
          prevSlide();
        }
        
        // Reiniciar autoplay después de un tiempo
        setTimeout(startAutoplay, autoplayDelay * 2);
      }
    }

    // Keyboard navigation para slider
    section.addEventListener('keydown', (e) => {
      // Solo si no estamos en un elemento del acordeón
      if (e.target.closest('.sync-accordion-header-{{ section_id }}')) return;
      
      if (e.key === 'ArrowLeft') {
        e.preventDefault();
        stopAutoplay();
        prevSlide();
        setTimeout(startAutoplay, autoplayDelay * 2);
      } else if (e.key === 'ArrowRight') {
        e.preventDefault();
        stopAutoplay();
        nextSlide();
        setTimeout(startAutoplay, autoplayDelay * 2);
      }
    });

    // Iniciar autoplay si está habilitado
    if (autoplayEnabled && slides.length > 1) {
      // Esperar a que la página cargue completamente
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', startAutoplay);
      } else {
        startAutoplay();
      }
    }

    // Limpiar intervalo al salir de la página
    window.addEventListener('beforeunload', stopAutoplay);
    
    // También limpiar cuando la sección se quite del DOM
    const observer = new MutationObserver(function(mutations) {
      mutations.forEach(function(mutation) {
        if (mutation.removedNodes) {
          for (let i = 0; i < mutation.removedNodes.length; i++) {
            if (mutation.removedNodes[i] === section) {
              stopAutoplay();
              observer.disconnect();
            }
          }
        }
      });
    });
    
