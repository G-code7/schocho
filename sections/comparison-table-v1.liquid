{% liquid
  assign section_id = section.id
%}
 
{% style %}
  .comparison-table-{{ section_id }} {
    --transition-speed: 0.4s;
    --ease-smooth: cubic-bezier(0.4, 0, 0.2, 1);
 
    position: relative;
    width: 100%;
    padding: {{ section.settings.section_padding_top }}px 20px {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    overflow: hidden;
  }
 
  .comparison-table__container-{{ section_id }} {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
  }
 
  .comparison-table__header-{{ section_id }} {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: {{ section.settings.header_margin_bottom }}px;
  }
 
  .comparison-table__heading-{{ section_id }} {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    line-height: {{ section.settings.heading_line_height }};
    margin: 0 0 {{ section.settings.heading_margin_bottom }}px 0;
    letter-spacing: {{ section.settings.heading_letter_spacing }}px;
  }
 
  .comparison-table__subheading-{{ section_id }} {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.subheading_size }}px;
    font-weight: {{ section.settings.subheading_weight }};
    margin: 0;
    opacity: 0.85;
    line-height: 1.5;
  }
 
  .comparison-table__wrapper-{{ section_id }} {
    background-color: {{ section.settings.table_background }};
    border-radius: {{ section.settings.table_border_radius }}px;
    box-shadow: {{ section.settings.table_shadow_x }}px {{ section.settings.table_shadow_y }}px {{ section.settings.table_shadow_blur }}px {{ section.settings.table_shadow_color }};
    overflow: hidden;
    border: {{ section.settings.table_border_width }}px solid {{ section.settings.table_border_color }};
  }
 
  .comparison-table__table-{{ section_id }} {
    width: 100%;
    border-collapse: collapse;
  }
 
  .comparison-table__header-row-{{ section_id }} {
    background-color: {{ section.settings.header_row_background }};
  }
 
  .comparison-table__header-cell-{{ section_id }} {
    padding: {{ section.settings.header_cell_padding }}px;
    text-align: center;
    border-right: {{ section.settings.cell_border_width }}px solid {{ section.settings.cell_border_color }};
    position: relative;
  }
 
  .comparison-table__header-cell-{{ section_id }}:last-child {
    border-right: none;
  }
 
  .comparison-table__header-cell-{{ section_id }}:first-child {
    text-align: left;
    width: {{ section.settings.first_column_width }}%;
  }
 
  .comparison-table__column-title-{{ section_id }} {
    color: {{ section.settings.column_title_color }};
    font-size: {{ section.settings.column_title_size }}px;
    font-weight: {{ section.settings.column_title_weight }};
    margin: 0;
    line-height: 1.3;
  }
 
  .comparison-table__column-subtitle-{{ section_id }} {
    color: {{ section.settings.column_subtitle_color }};
    font-size: {{ section.settings.column_subtitle_size }}px;
    font-weight: {{ section.settings.column_subtitle_weight }};
    margin: 4px 0 0 0;
    opacity: 0.8;
  }
 
  /* Highlight column (primera columna de comparación) */
  .comparison-table__header-cell-{{ section_id }}.highlight {
    background-color: {{ section.settings.highlight_column_bg }};
  }
 
  .comparison-table__header-cell-{{ section_id }}.highlight .comparison-table__column-title-{{ section_id }} {
    color: {{ section.settings.highlight_column_title }};
  }
 
  .comparison-table__header-cell-{{ section_id }}.highlight .comparison-table__column-subtitle-{{ section_id }} {
    color: {{ section.settings.highlight_column_subtitle }};
  }
 
  .comparison-table__row-{{ section_id }} {
    border-bottom: {{ section.settings.row_border_width }}px solid {{ section.settings.row_border_color }};
    transition: background-color 0.2s ease;
  }
 
  .comparison-table__row-{{ section_id }}:last-child {
    border-bottom: none;
  }
 
  .comparison-table__row-{{ section_id }}:hover {
    background-color: {{ section.settings.row_hover_background }};
  }
 
  .comparison-table__cell-{{ section_id }} {
    padding: {{ section.settings.cell_padding }}px;
    text-align: center;
    border-right: {{ section.settings.cell_border_width }}px solid {{ section.settings.cell_border_color }};
  }
 
  .comparison-table__cell-{{ section_id }}:last-child {
    border-right: none;
  }
 
  .comparison-table__cell-{{ section_id }}:first-child {
    text-align: left;
    font-weight: {{ section.settings.row_label_weight }};
    color: {{ section.settings.row_label_color }};
    font-size: {{ section.settings.row_label_size }}px;
    text-transform: {{ section.settings.row_label_uppercase }};
    letter-spacing: {{ section.settings.row_label_letter_spacing }}px;
  }
 
  .comparison-table__cell-{{ section_id }}.highlight {
    background-color: {{ section.settings.highlight_cell_bg }};
  }
 
  .comparison-table__icon-{{ section_id }} {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.3s var(--ease-smooth);
  }
 
  .comparison-table__icon-{{ section_id }}.check {
    background-color: {{ section.settings.check_bg_color }};
    border: {{ section.settings.check_border_width }}px solid {{ section.settings.check_border_color }};
  }
 
  .comparison-table__icon-{{ section_id }}.check svg {
    width: {{ section.settings.check_icon_size }}px;
    height: {{ section.settings.check_icon_size }}px;
    stroke: {{ section.settings.check_icon_color }};
    stroke-width: 3;
  }
 
  .comparison-table__icon-{{ section_id }}.empty {
    background-color: {{ section.settings.empty_bg_color }};
    border: {{ section.settings.empty_border_width }}px solid {{ section.settings.empty_border_color }};
  }
 .comparison-table__icon-{{ section_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
  }

  /* Opcional: Si tus imágenes ya tienen fondo, puedes quitar el fondo/borde configurado 
  .comparison-table__icon-{{ section_id }}.check,
  .comparison-table__icon-{{ section_id }}.empty {
    background-color: transparent !important;
    border: none !important;
  }*/

  .comparison-table__row-{{ section_id }}:hover .comparison-table__icon-{{ section_id }}.check {
    transform: scale(1.1);
  }
 
  .comparison-table__bottom-image-{{ section_id }} {
    margin-top: {{ section.settings.bottom_image_margin_top }}px;
    text-align: center;
    position: relative;
  }
 
  .comparison-table__bottom-image-wrapper-{{ section_id }} {
    position: relative;
    width: 100%;
    max-width: {{ section.settings.bottom_image_max_width }}px;
    margin: 0 auto;
    border-radius: {{ section.settings.bottom_image_border_radius }}px;
    overflow: hidden;
  }
 
  .comparison-table__bottom-image-img-{{ section_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ section.settings.bottom_image_border_radius }}px;
  }
 
  /* Responsive - Tablet */
  @media screen and (max-width: 1024px) {
    .comparison-table__heading-{{ section_id }} {
      font-size: calc({{ section.settings.heading_size }}px * 0.85);
    }
 
    .comparison-table__column-title-{{ section_id }} {
      font-size: calc({{ section.settings.column_title_size }}px * 0.9);
    }
 
    .comparison-table__header-cell-{{ section_id }} {
      padding: {{ section.settings.tablet_header_padding }}px;
    }
 
    .comparison-table__cell-{{ section_id }} {
      padding: {{ section.settings.tablet_cell_padding }}px;
    }
 
    .comparison-table__icon-{{ section_id }} {
      width: calc({{ section.settings.icon_size }}px * 0.9);
      height: calc({{ section.settings.icon_size }}px * 0.9);
    }
  }
 
  /* Responsive - Mobile */
  @media screen and (max-width: 768px) {
    .comparison-table-{{ section_id }} {
      padding: {{ section.settings.mobile_section_padding }}px 16px;
    }
 
    .comparison-table__heading-{{ section_id }} {
      font-size: calc({{ section.settings.heading_size }}px * 0.7);
    }
 
    .comparison-table__subheading-{{ section_id }} {
      font-size: calc({{ section.settings.subheading_size }}px * 0.9);
    }
 
    .comparison-table__wrapper-{{ section_id }} {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }
 
    .comparison-table__table-{{ section_id }} {
      min-width: 600px;
    }
 
    .comparison-table__header-cell-{{ section_id }} {
      padding: {{ section.settings.mobile_header_padding }}px;
    }
 
    .comparison-table__cell-{{ section_id }} {
      padding: {{ section.settings.mobile_cell_padding }}px;
    }
 
    .comparison-table__column-title-{{ section_id }} {
      font-size: calc({{ section.settings.column_title_size }}px * 0.8);
    }
 
    .comparison-table__column-subtitle-{{ section_id }} {
      font-size: calc({{ section.settings.column_subtitle_size }}px * 0.85);
    }
 
    .comparison-table__cell-{{ section_id }}:first-child {
      font-size: calc({{ section.settings.row_label_size }}px * 0.85);
    }
 
    .comparison-table__icon-{{ section_id }} {
      width: calc({{ section.settings.icon_size }}px * 0.8);
      height: calc({{ section.settings.icon_size }}px * 0.8);
    }
  }
{% endstyle %}
 
<section
  class="comparison-table-{{ section_id }}"
  {{ section.shopify_attributes }}
>
  <div class="comparison-table__container-{{ section_id }}">
 
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="comparison-table__header-{{ section_id }}">
        {% if section.settings.heading != blank %}
          <h2 class="comparison-table__heading-{{ section_id }}">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="comparison-table__subheading-{{ section_id }}">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}
 
    <div class="comparison-table__wrapper-{{ section_id }}">
      <table class="comparison-table__table-{{ section_id }}">
        <thead>
          <tr class="comparison-table__header-row-{{ section_id }}">
            <th class="comparison-table__header-cell-{{ section_id }}"></th>
 
            <th class="comparison-table__header-cell-{{ section_id }} highlight">
              <h3 class="comparison-table__column-title-{{ section_id }}">
                {{ section.settings.column_1_title }}
              </h3>
              {% if section.settings.column_1_subtitle != blank %}
                <p class="comparison-table__column-subtitle-{{ section_id }}">
                  {{ section.settings.column_1_subtitle }}
                </p>
              {% endif %}
            </th>
 
            <th class="comparison-table__header-cell-{{ section_id }}">
              <h3 class="comparison-table__column-title-{{ section_id }}">
                {{ section.settings.column_2_title }}
              </h3>
              {% if section.settings.column_2_subtitle != blank %}
                <p class="comparison-table__column-subtitle-{{ section_id }}">
                  {{ section.settings.column_2_subtitle }}
                </p>
              {% endif %}
            </th>
 
            <th class="comparison-table__header-cell-{{ section_id }}">
              <h3 class="comparison-table__column-title-{{ section_id }}">
                {{ section.settings.column_3_title }}
              </h3>
              {% if section.settings.column_3_subtitle != blank %}
                <p class="comparison-table__column-subtitle-{{ section_id }}">
                  {{ section.settings.column_3_subtitle }}
                </p>
              {% endif %}
            </th>
          </tr>
        </thead>
        <tbody>
          {% for i in (1..8) %}
            {% liquid
              assign row_label_key = 'row_' | append: i | append: '_label'
              assign row_col1_key = 'row_' | append: i | append: '_col1'
              assign row_col2_key = 'row_' | append: i | append: '_col2'
              assign row_col3_key = 'row_' | append: i | append: '_col3'
 
              assign row_label = section.settings[row_label_key]
              assign row_col1 = section.settings[row_col1_key]
              assign row_col2 = section.settings[row_col2_key]
              assign row_col3 = section.settings[row_col3_key]
            %}
 
            {% if row_label != blank %}
              <tr class="comparison-table__row-{{ section_id }}">
                <td class="comparison-table__cell-{{ section_id }}">
                  {{ row_label }}
                </td>

                <td class="comparison-table__cell-{{ section_id }} highlight">
                  {% if row_col1 == 'check' %}
                    <span class="comparison-table__icon-{{ section_id }} check">
                      <img src="https://cdn.shopify.com/s/files/1/0740/1675/1808/files/check-icon.png?v=1769206764" alt="Check" loading="lazy">
                    </span>
                  {% elsif row_col1 == 'empty' %}
                    <span class="comparison-table__icon-{{ section_id }} empty">
                      <img src="https://cdn.shopify.com/s/files/1/0740/1675/1808/files/x-icon.png?v=1769206764" alt="X" loading="lazy">
                    </span>
                  {% else %}
                    {{ row_col1 }}
                  {% endif %}
                </td>

                <td class="comparison-table__cell-{{ section_id }}">
                  {% if row_col2 == 'check' %}
                    <span class="comparison-table__icon-{{ section_id }} check">
                      <img src="https://cdn.shopify.com/s/files/1/0740/1675/1808/files/check-icon.png?v=1769206764" alt="Check" loading="lazy">
                    </span>
                  {% elsif row_col2 == 'empty' %}
                    <span class="comparison-table__icon-{{ section_id }} empty">
                      <img src="https://cdn.shopify.com/s/files/1/0740/1675/1808/files/x-icon.png?v=1769206764" alt="X" loading="lazy">
                    </span>
                  {% else %}
                    {{ row_col2 }}
                  {% endif %}
                </td>

                <td class="comparison-table__cell-{{ section_id }}">
                  {% if row_col3 == 'check' %}
                    <span class="comparison-table__icon-{{ section_id }} check">
                      <img src="https://cdn.shopify.com/s/files/1/0740/1675/1808/files/check-icon.png?v=1769206764" alt="Check" loading="lazy">
                    </span>
                  {% elsif row_col3 == 'empty' %}
                    <span class="comparison-table__icon-{{ section_id }} empty">
                      <img src="https://cdn.shopify.com/s/files/1/0740/1675/1808/files/x-icon.png?v=1769206764" alt="X" loading="lazy">
                    </span>
                  {% else %}
                    {{ row_col3 }}
                  {% endif %}
                </td>
              </tr>
            {% endif %}
          {% endfor %}
        </tbody>
      </table>
    </div>
 
    {% if section.settings.show_bottom_image and section.settings.bottom_image %}
      <div class="comparison-table__bottom-image-{{ section_id }}">
        <div class="comparison-table__bottom-image-wrapper-{{ section_id }}">
          <img
            src="{{ section.settings.bottom_image | image_url: width: 1200 }}"
            srcset="
              {{ section.settings.bottom_image | image_url: width: 600 }} 600w,
              {{ section.settings.bottom_image | image_url: width: 900 }} 900w,
              {{ section.settings.bottom_image | image_url: width: 1200 }} 1200w
            "
            sizes="(max-width: 768px) 100vw, {{ section.settings.bottom_image_max_width }}px"
            alt="{{ section.settings.bottom_image.alt | escape }}"
            class="comparison-table__bottom-image-img-{{ section_id }}"
            loading="lazy"
            width="{{ section.settings.bottom_image.width }}"
            height="{{ section.settings.bottom_image.height }}"
          >
        </div>
      </div>
    {% endif %}
 
  </div>
</section>
 
