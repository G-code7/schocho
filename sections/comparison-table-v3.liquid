{% liquid
  assign section_id = section.id
%}

{% style %}
  .comparison-table-v3-{{ section_id }} {
    --transition-speed: 0.3s;
    --ease-smooth: cubic-bezier(0.4, 0, 0.2, 1);
    
    position: relative;
    width: 100%;
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    overflow: hidden;
  }

  .comparison-table-v3__container-{{ section_id }} {
    width: 100%;
    max-width: var(--page-width, 1200px);
    margin: 0 auto;
    padding: 0 {{ section.settings.container_padding }}px;
  }

  .comparison-table-v3__layout-{{ section_id }} {
    display: flex;
    gap: {{ section.settings.layout_gap }}px;
    align-items: flex-start;
  }

  /* LEFT CONTENT - 30% */
  .comparison-table-v3__content-{{ section_id }} {
    flex: 0 0 {{ section.settings.content_width }}%;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.content_gap }}px;
    position: sticky;
    top: {{ section.settings.content_sticky_top }}px;
  }

  .comparison-table-v3__heading-{{ section_id }} {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    line-height: {{ section.settings.heading_line_height }};
    margin: 0;
    letter-spacing: {{ section.settings.heading_letter_spacing }}px;
  }

  .comparison-table-v3__subheading-{{ section_id }} {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.subheading_size }}px;
    font-weight: {{ section.settings.subheading_weight }};
    line-height: 1.6;
    margin: 0;
    opacity: 0.85;
  }

  .comparison-table-v3__cta-{{ section_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: {{ section.settings.cta_padding_y }}px {{ section.settings.cta_padding_x }}px;
    background-color: {{ section.settings.cta_bg_color }};
    color: {{ section.settings.cta_text_color }};
    font-size: {{ section.settings.cta_font_size }}px;
    font-weight: {{ section.settings.cta_font_weight }};
    text-decoration: none;
    border-radius: {{ section.settings.cta_border_radius }}px;
    border: {{ section.settings.cta_border_width }}px solid {{ section.settings.cta_border_color }};
    transition: all var(--transition-speed) var(--ease-smooth);
    cursor: pointer;
    text-align: center;
  }

  .comparison-table-v3__cta-{{ section_id }}:hover {
    background-color: {{ section.settings.cta_hover_bg }};
    color: {{ section.settings.cta_hover_text }};
    border-color: {{ section.settings.cta_hover_border }};
    transform: translateY(-2px);
    box-shadow: 0 4px 12px {{ section.settings.cta_bg_color }}40;
  }

  /* RIGHT TABLE - 70% */
  .comparison-table-v3__table-wrapper-{{ section_id }} {
    flex: 1;
    background-color: {{ section.settings.table_background }};
    border-radius: {{ section.settings.table_border_radius }}px;
    overflow: hidden;
    {% if section.settings.table_shadow_enabled %}
      box-shadow: 0 {{ section.settings.table_shadow_y }}px {{ section.settings.table_shadow_blur }}px {{ section.settings.table_shadow_spread }}px {{ section.settings.table_shadow_color }};
    {% endif %}
    {% if section.settings.table_border_width > 0 %}
      border: {{ section.settings.table_border_width }}px solid {{ section.settings.table_border_color }};
    {% endif %}
  }

  .comparison-table-v3__table-{{ section_id }} {
    width: 100%;
    border-collapse: collapse;
  }

  /* Table Rows */
  .comparison-table-v3__row-{{ section_id }} {
    border-bottom: 1px solid {{ section.settings.row_border_color }};
    transition: all 0.2s var(--ease-smooth);
  }

  .comparison-table-v3__row-{{ section_id }}:last-child {
    border-bottom: none;
  }

  .comparison-table-v3__row-{{ section_id }}:hover {
    background-color: {{ section.settings.row_hover_background }};
  }

  /* Negative rows styling */
  .comparison-table-v3__row-{{ section_id }}.negative {
    opacity: {{ section.settings.negative_row_opacity }};
  }

  .comparison-table-v3__row-{{ section_id }}.negative .comparison-table-v3__label-{{ section_id }} {
    color: {{ section.settings.negative_label_color }};
  }

  /* Table Cells */
  .comparison-table-v3__cell-{{ section_id }} {
    padding: {{ section.settings.cell_padding_y }}px {{ section.settings.cell_padding_x }}px;
    vertical-align: middle;
  }

  .comparison-table-v3__label-{{ section_id }} {
    color: {{ section.settings.row_label_color }};
    font-size: {{ section.settings.row_label_size }}px;
    font-weight: {{ section.settings.row_label_weight }};
    line-height: 1.4;
    margin: 0;
  }

  .comparison-table-v3__icon-wrapper-{{ section_id }} {
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }

  .comparison-table-v3__icon-{{ section_id }} {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.3s var(--ease-smooth);
  }

  /* Positive Check Icon */
  .comparison-table-v3__icon-{{ section_id }}.check {
    background-color: {{ section.settings.check_bg_color }};
    border: {{ section.settings.check_border_width }}px solid {{ section.settings.check_border_color }};
  }

  .comparison-table-v3__icon-{{ section_id }}.check svg {
    width: {{ section.settings.check_icon_size }}px;
    height: {{ section.settings.check_icon_size }}px;
    stroke: {{ section.settings.check_icon_color }};
    stroke-width: 2.5;
    fill: none;
  }

  /* Negative X Icon */
  .comparison-table-v3__icon-{{ section_id }}.cross {
    background-color: {{ section.settings.cross_bg_color }};
    border: {{ section.settings.cross_border_width }}px solid {{ section.settings.cross_border_color }};
  }

  .comparison-table-v3__icon-{{ section_id }}.cross svg {
    width: {{ section.settings.cross_icon_size }}px;
    height: {{ section.settings.cross_icon_size }}px;
    stroke: {{ section.settings.cross_icon_color }};
    stroke-width: 2.5;
    fill: none;
  }

  .comparison-table-v3__row-{{ section_id }}:hover .comparison-table-v3__icon-{{ section_id }}.check {
    transform: scale(1.08);
    box-shadow: 0 4px 12px {{ section.settings.check_bg_color }}30;
  }

  .comparison-table-v3__row-{{ section_id }}:hover .comparison-table-v3__icon-{{ section_id }}.cross {
    transform: scale(1.08);
  }

  /* Responsive - Tablet */
  @media screen and (max-width: 1024px) {
    .comparison-table-v3__layout-{{ section_id }} {
      gap: {{ section.settings.tablet_layout_gap }}px;
    }

    .comparison-table-v3__content-{{ section_id }} {
      flex: 0 0 35%;
    }

    .comparison-table-v3__heading-{{ section_id }} {
      font-size: calc({{ section.settings.heading_size }}px * 0.85);
    }

    .comparison-table-v3__subheading-{{ section_id }} {
      font-size: calc({{ section.settings.subheading_size }}px * 0.9);
    }

    .comparison-table-v3__cell-{{ section_id }} {
      padding: {{ section.settings.tablet_cell_padding }}px;
    }

    .comparison-table-v3__icon-{{ section_id }} {
      width: calc({{ section.settings.icon_size }}px * 0.9);
      height: calc({{ section.settings.icon_size }}px * 0.9);
    }
  }

  /* Responsive - Mobile */
  @media screen and (max-width: 768px) {
    .comparison-table-v3-{{ section_id }} {
      padding: {{ section.settings.mobile_section_padding }}px 0;
    }

    .comparison-table-v3__container-{{ section_id }} {
      padding: 0 {{ section.settings.mobile_container_padding }}px;
    }

    .comparison-table-v3__layout-{{ section_id }} {
      flex-direction: column;
      gap: {{ section.settings.mobile_layout_gap }}px;
    }

    .comparison-table-v3__content-{{ section_id }} {
      flex: 1;
      position: static;
      width: 100%;
    }

    .comparison-table-v3__heading-{{ section_id }} {
      font-size: calc({{ section.settings.heading_size }}px * 0.7);
    }

    .comparison-table-v3__subheading-{{ section_id }} {
      font-size: calc({{ section.settings.subheading_size }}px * 0.85);
    }

    .comparison-table-v3__cta-{{ section_id }} {
      width: 100%;
    }

    .comparison-table-v3__table-wrapper-{{ section_id }} {
      width: 100%;
    }

    .comparison-table-v3__cell-{{ section_id }} {
      padding: {{ section.settings.mobile_cell_padding }}px;
    }

    .comparison-table-v3__label-{{ section_id }} {
      font-size: calc({{ section.settings.row_label_size }}px * 0.9);
    }

    .comparison-table-v3__icon-{{ section_id }} {
      width: calc({{ section.settings.icon_size }}px * 0.85);
      height: calc({{ section.settings.icon_size }}px * 0.85);
    }
  }
{% endstyle %}

<section
  class="comparison-table-v3-{{ section_id }}"
  {{ section.shopify_attributes }}
>
  <div class="comparison-table-v3__container-{{ section_id }}">
    <div class="comparison-table-v3__layout-{{ section_id }}">
      
      <!-- LEFT CONTENT -->
      <div class="comparison-table-v3__content-{{ section_id }}">
        {% if section.settings.heading != blank %}
          <h2 class="comparison-table-v3__heading-{{ section_id }}">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="comparison-table-v3__subheading-{{ section_id }}">
            {{ section.settings.subheading }}
          </p>
        {% endif %}

        {% if section.settings.show_cta and section.settings.cta_text != blank %}
          <a 
            href="{{ section.settings.cta_url }}" 
            class="comparison-table-v3__cta-{{ section_id }}"
            {% if section.settings.cta_open_new_tab %}target="_blank" rel="noopener"{% endif %}
          >
            {{ section.settings.cta_text }}
            {% if section.settings.show_cta_arrow %}
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            {% endif %}
          </a>
        {% endif %}
      </div>

      <!-- RIGHT TABLE -->
      <div class="comparison-table-v3__table-wrapper-{{ section_id }}">
        <table class="comparison-table-v3__table-{{ section_id }}">
          <tbody>
            {% for block in section.blocks %}
              <tr class="comparison-table-v3__row-{{ section_id }} {% if block.settings.is_negative %}negative{% endif %}" {{ block.shopify_attributes }}>
                <td class="comparison-table-v3__cell-{{ section_id }}">
                  <p class="comparison-table-v3__label-{{ section_id }}">
                    {{ block.settings.feature_label }}
                  </p>
                </td>
                <td class="comparison-table-v3__cell-{{ section_id }}">
                  <div class="comparison-table-v3__icon-wrapper-{{ section_id }}">
                    {% if block.settings.is_negative %}
                      <div class="comparison-table-v3__icon-{{ section_id }} cross">
                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <path d="M18 6L6 18M6 6l12 12" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                      </div>
                    {% else %}
                      <div class="comparison-table-v3__icon-{{ section_id }} check">
                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                          <polyline points="20 6 9 17 4 12" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                      </div>
                    {% endif %}
                  </div>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>

    </div>
  </div>
</section>

