{% liquid
  assign section_id = section.id
%}

{% style %}
  .comparison-table-v3-{{ section_id }} {
    --transition-speed: 0.3s;
    --ease-smooth: cubic-bezier(0.4, 0, 0.2, 1);
    
    position: relative;
    width: 100%;
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    overflow: hidden;
  }

  .comparison-table-v3__container-{{ section_id }} {
    width: 100%;
    max-width: var(--page-width, 1200px);
    margin: 0 auto;
    padding: 0 {{ section.settings.container_padding }}px;
  }

  .comparison-table-v3__layout-{{ section_id }} {
    display: flex;
    gap: {{ section.settings.layout_gap }}px;
    align-items: flex-start;
  }

  /* LEFT CONTENT - 30% */
  .comparison-table-v3__content-{{ section_id }} {
    flex: 0 0 {{ section.settings.content_width }}%;
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.content_gap }}px;
    position: sticky;
    top: {{ section.settings.content_sticky_top }}px;
  }

  .comparison-table-v3__heading-{{ section_id }} {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    line-height: {{ section.settings.heading_line_height }};
    margin: 0;
    letter-spacing: {{ section.settings.heading_letter_spacing }}px;
  }

  .comparison-table-v3__subheading-{{ section_id }} {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.subheading_size }}px;
    font-weight: {{ section.settings.subheading_weight }};
    line-height: 1.6;
    margin: 0;
    opacity: 0.85;
  }

  .comparison-table-v3__cta-{{ section_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: {{ section.settings.cta_padding_y }}px {{ section.settings.cta_padding_x }}px;
    background-color: {{ section.settings.cta_bg_color }};
    color: {{ section.settings.cta_text_color }};
    font-size: {{ section.settings.cta_font_size }}px;
    font-weight: {{ section.settings.cta_font_weight }};
    text-decoration: none;
    border-radius: {{ section.settings.cta_border_radius }}px;
    border: {{ section.settings.cta_border_width }}px solid {{ section.settings.cta_border_color }};
    transition: all var(--transition-speed) var(--ease-smooth);
    cursor: pointer;
    text-align: center;
  }

  .comparison-table-v3__cta-{{ section_id }}:hover {
    background-color: {{ section.settings.cta_hover_bg }};
    color: {{ section.settings.cta_hover_text }};
    border-color: {{ section.settings.cta_hover_border }};
    transform: translateY(-2px);
    box-shadow: 0 4px 12px {{ section.settings.cta_bg_color }}40;
  }

  /* RIGHT TABLE - 70% */
  .comparison-table-v3__table-wrapper-{{ section_id }} {
    flex: 1;
    background-color: {{ section.settings.table_background }};
    border-radius: {{ section.settings.table_border_radius }}px;
    overflow: hidden;
    {% if section.settings.table_shadow_enabled %}
      box-shadow: 0 {{ section.settings.table_shadow_y }}px {{ section.settings.table_shadow_blur }}px {{ section.settings.table_shadow_spread }}px {{ section.settings.table_shadow_color }};
    {% endif %}
    {% if section.settings.table_border_width > 0 %}
      border: {{ section.settings.table_border_width }}px solid {{ section.settings.table_border_color }};
    {% endif %}
  }

  .comparison-table-v3__table-{{ section_id }} {
    width: 100%;
    border-collapse: collapse;
    table-layout: fixed;
  }

  /* Table Header */
  .comparison-table-v3__header-row-{{ section_id }} {
    background-color: {{ section.settings.header_row_background }};
  }

  .comparison-table-v3__header-cell-{{ section_id }} {
    padding: {{ section.settings.header_cell_padding }}px;
    text-align: center;
    border-right: {{ section.settings.cell_border_width }}px solid {{ section.settings.cell_border_color }};
    vertical-align: middle;
    width: 18%; /* Columnas más angostas */
  }

  .comparison-table-v3__header-cell-{{ section_id }}:last-child {
    border-right: none;
  }

  .comparison-table-v3__header-cell-{{ section_id }}:first-child {
    text-align: left;
    width: {{ section.settings.first_column_width }}%;
  }

  /* Highlight column (primera columna de comparación) */
  .comparison-table-v3__header-cell-{{ section_id }}.highlight {
    background-color: {{ section.settings.highlight_column_bg }};
  }

  .comparison-table-v3__header-cell-{{ section_id }}.highlight .comparison-table-v3__column-title-{{ section_id }} {
    color: {{ section.settings.highlight_column_title }};
  }

  .comparison-table-v3__header-cell-{{ section_id }}.highlight .comparison-table-v3__column-subtitle-{{ section_id }} {
    color: {{ section.settings.highlight_column_subtitle }};
  }

  .comparison-table-v3__column-title-{{ section_id }} {
    color: {{ section.settings.column_title_color }};
    font-size: {{ section.settings.column_title_size }}px;
    font-weight: {{ section.settings.column_title_weight }};
    margin: 0;
    line-height: 1.3;
  }

  .comparison-table-v3__column-subtitle-{{ section_id }} {
    color: {{ section.settings.column_subtitle_color }};
    font-size: {{ section.settings.column_subtitle_size }}px;
    font-weight: {{ section.settings.column_subtitle_weight }};
    margin: 4px 0 0 0;
    opacity: 0.8;
  }

  /* Table Rows */
  .comparison-table-v3__row-{{ section_id }} {
    border-bottom: {{ section.settings.row_border_width }}px solid {{ section.settings.row_border_color }};
    transition: all 0.2s var(--ease-smooth);
  }

  .comparison-table-v3__row-{{ section_id }}:last-child {
    border-bottom: none;
  }

  .comparison-table-v3__row-{{ section_id }}:hover {
    background-color: {{ section.settings.row_hover_background }};
  }

  /* Table Cells */
  .comparison-table-v3__cell-{{ section_id }} {
    padding: {{ section.settings.cell_padding }}px;
    text-align: center;
    border-right: {{ section.settings.cell_border_width }}px solid {{ section.settings.cell_border_color }};
    vertical-align: middle;
    width: 18%; /* Columnas más angostas */
  }

  .comparison-table-v3__cell-{{ section_id }}:last-child {
    border-right: none;
  }

  .comparison-table-v3__cell-{{ section_id }}:first-child {
    text-align: left;
    font-weight: {{ section.settings.row_label_weight }};
    color: {{ section.settings.row_label_color }};
    font-size: {{ section.settings.row_label_size }}px;
    text-transform: {{ section.settings.row_label_uppercase }};
    letter-spacing: {{ section.settings.row_label_letter_spacing }}px;
    width: {{ section.settings.first_column_width }}%;
  }

  .comparison-table-v3__cell-{{ section_id }}.highlight {
    background-color: {{ section.settings.highlight_cell_bg }};
  }

  /* Icons */
  .comparison-table-v3__icon-{{ section_id }} {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.3s var(--ease-smooth);
  }

  .comparison-table-v3__icon-{{ section_id }}.check {
    background-color: {{ section.settings.check_bg_color }};
    border: {{ section.settings.check_border_width }}px solid {{ section.settings.check_border_color }};
  }

  .comparison-table-v3__icon-{{ section_id }}.check img {
    width: {{ section.settings.check_icon_size }}px;
    height: {{ section.settings.check_icon_size }}px;
    object-fit: contain;
    display: block;
  }

  .comparison-table-v3__icon-{{ section_id }}.empty {
    background-color: {{ section.settings.empty_bg_color }};
    border: {{ section.settings.empty_border_width }}px solid {{ section.settings.empty_border_color }};
  }

  .comparison-table-v3__icon-{{ section_id }}.empty img {
    width: {{ section.settings.check_icon_size }}px;
    height: {{ section.settings.check_icon_size }}px;
    object-fit: contain;
    display: block;
  }

  .comparison-table-v3__row-{{ section_id }}:hover .comparison-table-v3__icon-{{ section_id }}.check {
    transform: scale(1.1);
  }

  /* Bottom Image */
  .comparison-table-v3__bottom-image-{{ section_id }} {
    margin-top: {{ section.settings.bottom_image_margin_top }}px;
    text-align: center;
    position: relative;
    width: 100%;
  }

  .comparison-table-v3__bottom-image-wrapper-{{ section_id }} {
    position: relative;
    width: 100%;
    max-width: {{ section.settings.bottom_image_max_width }}px;
    margin: 0 auto;
    border-radius: {{ section.settings.bottom_image_border_radius }}px;
    overflow: hidden;
  }

  .comparison-table-v3__bottom-image-img-{{ section_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ section.settings.bottom_image_border_radius }}px;
  }

  /* Responsive - Tablet */
  @media screen and (max-width: 1024px) {
    .comparison-table-v3__layout-{{ section_id }} {
      gap: {{ section.settings.tablet_layout_gap }}px;
    }

    .comparison-table-v3__content-{{ section_id }} {
      flex: 0 0 35%;
    }

    .comparison-table-v3__heading-{{ section_id }} {
      font-size: calc({{ section.settings.heading_size }}px * 0.85);
    }

    .comparison-table-v3__subheading-{{ section_id }} {
      font-size: calc({{ section.settings.subheading_size }}px * 0.9);
    }

    .comparison-table-v3__column-title-{{ section_id }} {
      font-size: calc({{ section.settings.column_title_size }}px * 0.9);
    }

    .comparison-table-v3__header-cell-{{ section_id }} {
      padding: {{ section.settings.tablet_header_padding }}px;
    }

    .comparison-table-v3__cell-{{ section_id }} {
      padding: {{ section.settings.tablet_cell_padding }}px;
    }

    .comparison-table-v3__icon-{{ section_id }} {
      width: calc({{ section.settings.icon_size }}px * 0.9);
      height: calc({{ section.settings.icon_size }}px * 0.9);
    }
  }

  /* Responsive - Mobile */
  @media screen and (max-width: 768px) {
    .comparison-table-v3-{{ section_id }} {
      padding: {{ section.settings.mobile_section_padding }}px 0;
    }

    .comparison-table-v3__container-{{ section_id }} {
      padding: 0 {{ section.settings.mobile_container_padding }}px;
    }

    .comparison-table-v3__layout-{{ section_id }} {
      flex-direction: column;
      gap: {{ section.settings.mobile_layout_gap }}px;
    }

    .comparison-table-v3__content-{{ section_id }} {
      flex: 1;
      position: static;
      width: 100%;
    }

    .comparison-table-v3__heading-{{ section_id }} {
      font-size: calc({{ section.settings.heading_size }}px * 0.7);
    }

    .comparison-table-v3__subheading-{{ section_id }} {
      font-size: calc({{ section.settings.subheading_size }}px * 0.85);
    }

    .comparison-table-v3__cta-{{ section_id }} {
      width: 100%;
    }

    .comparison-table-v3__table-wrapper-{{ section_id }} {
      width: 100%;
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
    }

    .comparison-table-v3__table-{{ section_id }} {
      min-width: 500px;
      table-layout: auto;
    }

    .comparison-table-v3__header-cell-{{ section_id }} {
      padding: {{ section.settings.mobile_header_padding }}px;
      width: auto;
    }

    .comparison-table-v3__cell-{{ section_id }} {
      padding: {{ section.settings.mobile_cell_padding }}px;
      width: auto;
    }

    .comparison-table-v3__column-title-{{ section_id }} {
      font-size: calc({{ section.settings.column_title_size }}px * 0.8);
    }

    .comparison-table-v3__column-subtitle-{{ section_id }} {
      font-size: calc({{ section.settings.column_subtitle_size }}px * 0.85);
    }

    .comparison-table-v3__cell-{{ section_id }}:first-child {
      font-size: calc({{ section.settings.row_label_size }}px * 0.85);
    }

    .comparison-table-v3__icon-{{ section_id }} {
      width: calc({{ section.settings.icon_size }}px * 0.8);
      height: calc({{ section.settings.icon_size }}px * 0.8);
    }
  }
{% endstyle %}

<section
  class="comparison-table-v3-{{ section_id }}"
  {{ section.shopify_attributes }}
>
  <div class="comparison-table-v3__container-{{ section_id }}">
    <div class="comparison-table-v3__layout-{{ section_id }}">
      
      <!-- LEFT CONTENT -->
      <div class="comparison-table-v3__content-{{ section_id }}">
        {% if section.settings.heading != blank %}
          <h2 class="comparison-table-v3__heading-{{ section_id }}">
            {{ section.settings.heading }}
          </h2>
        {% endif %}

        {% if section.settings.subheading != blank %}
          <p class="comparison-table-v3__subheading-{{ section_id }}">
            {{ section.settings.subheading }}
          </p>
        {% endif %}

        {% if section.settings.show_cta and section.settings.cta_text != blank %}
          <a 
            href="{{ section.settings.cta_url }}" 
            class="comparison-table-v3__cta-{{ section_id }}"
            {% if section.settings.cta_open_new_tab %}target="_blank" rel="noopener"{% endif %}
          >
            {{ section.settings.cta_text }}
            {% if section.settings.show_cta_arrow %}
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <line x1="5" y1="12" x2="19" y2="12"></line>
                <polyline points="12 5 19 12 12 19"></polyline>
              </svg>
            {% endif %}
          </a>
        {% endif %}
      </div>

      <!-- RIGHT TABLE -->
      <div class="comparison-table-v3__table-wrapper-{{ section_id }}">
        <table class="comparison-table-v3__table-{{ section_id }}">
          <thead>
            <tr class="comparison-table-v3__header-row-{{ section_id }}">
              <th class="comparison-table-v3__header-cell-{{ section_id }}"></th>

              <th class="comparison-table-v3__header-cell-{{ section_id }} highlight">
                <h3 class="comparison-table-v3__column-title-{{ section_id }}">
                  {{ section.settings.column_1_title }}
                </h3>
                {% if section.settings.column_1_subtitle != blank %}
                  <p class="comparison-table-v3__column-subtitle-{{ section_id }}">
                    {{ section.settings.column_1_subtitle }}
                  </p>
                {% endif %}
              </th>

              <th class="comparison-table-v3__header-cell-{{ section_id }}">
                <h3 class="comparison-table-v3__column-title-{{ section_id }}">
                  {{ section.settings.column_2_title }}
                </h3>
                {% if section.settings.column_2_subtitle != blank %}
                  <p class="comparison-table-v3__column-subtitle-{{ section_id }}">
                    {{ section.settings.column_2_subtitle }}
                  </p>
                {% endif %}
              </th>

              <th class="comparison-table-v3__header-cell-{{ section_id }}">
                <h3 class="comparison-table-v3__column-title-{{ section_id }}">
                  {{ section.settings.column_3_title }}
                </h3>
                {% if section.settings.column_3_subtitle != blank %}
                  <p class="comparison-table-v3__column-subtitle-{{ section_id }}">
                    {{ section.settings.column_3_subtitle }}
                  </p>
                {% endif %}
              </th>
            </tr>
          </thead>
          <tbody>
            {% for i in (1..8) %}
              {% liquid
                assign row_label_key = 'row_' | append: i | append: '_label'
                assign row_col1_key = 'row_' | append: i | append: '_col1'
                assign row_col2_key = 'row_' | append: i | append: '_col2'
                assign row_col3_key = 'row_' | append: i | append: '_col3'

                assign row_label = section.settings[row_label_key]
                assign row_col1 = section.settings[row_col1_key]
                assign row_col2 = section.settings[row_col2_key]
                assign row_col3 = section.settings[row_col3_key]
              %}

              {% if row_label != blank %}
                <tr class="comparison-table-v3__row-{{ section_id }}">
                  <td class="comparison-table-v3__cell-{{ section_id }}">
                    {{ row_label }}
                  </td>

                  <td class="comparison-table-v3__cell-{{ section_id }} highlight">
                    {% if row_col1 == 'check' %}
                      <span class="comparison-table-v3__icon-{{ section_id }} check">
                        <img src="https://cdn.shopify.com/s/files/1/0740/1675/1808/files/check-icon.png?v=1769206764" alt="Check" loading="lazy">
                      </span>
                    {% elsif row_col1 == 'empty' %}
                      <span class="comparison-table-v3__icon-{{ section_id }} empty">
                        <img src="https://cdn.shopify.com/s/files/1/0740/1675/1808/files/x-icon.png?v=1769206764" alt="X" loading="lazy">
                      </span>
                    {% else %}
                      {{ row_col1 }}
                    {% endif %}
                  </td>

                  <td class="comparison-table-v3__cell-{{ section_id }}">
                    {% if row_col2 == 'check' %}
                      <span class="comparison-table-v3__icon-{{ section_id }} check">
                        <img src="https://cdn.shopify.com/s/files/1/0740/1675/1808/files/check-icon.png?v=1769206764" alt="Check" loading="lazy">
                      </span>
                    {% elsif row_col2 == 'empty' %}
                      <span class="comparison-table-v3__icon-{{ section_id }} empty">
                        <img src="https://cdn.shopify.com/s/files/1/0740/1675/1808/files/x-icon.png?v=1769206764" alt="X" loading="lazy">
                      </span>
                    {% else %}
                      {{ row_col2 }}
                    {% endif %}
                  </td>

                  <td class="comparison-table-v3__cell-{{ section_id }}">
                    {% if row_col3 == 'check' %}
                      <span class="comparison-table-v3__icon-{{ section_id }} check">
                        <img src="https://cdn.shopify.com/s/files/1/0740/1675/1808/files/check-icon.png?v=1769206764" alt="Check" loading="lazy">
                      </span>
                    {% elsif row_col3 == 'empty' %}
                      <span class="comparison-table-v3__icon-{{ section_id }} empty">
                        <img src="https://cdn.shopify.com/s/files/1/0740/1675/1808/files/x-icon.png?v=1769206764" alt="X" loading="lazy">
                      </span>
                    {% else %}
                      {{ row_col3 }}
                    {% endif %}
                  </td>
                </tr>
              {% endif %}
            {% endfor %}
          </tbody>
        </table>
      </div>
    </div>

    {% if section.settings.show_bottom_image and section.settings.bottom_image %}
      <div class="comparison-table-v3__bottom-image-{{ section_id }}">
        <div class="comparison-table-v3__bottom-image-wrapper-{{ section_id }}">
          <img
            src="{{ section.settings.bottom_image | image_url: width: 1200 }}"
            srcset="
              {{ section.settings.bottom_image | image_url: width: 600 }} 600w,
              {{ section.settings.bottom_image | image_url: width: 900 }} 900w,
              {{ section.settings.bottom_image | image_url: width: 1200 }} 1200w
            "
            sizes="(max-width: 768px) 100vw, {{ section.settings.bottom_image_max_width }}px"
            alt="{{ section.settings.bottom_image.alt | escape }}"
            class="comparison-table-v3__bottom-image-img-{{ section_id }}"
            loading="lazy"
            width="{{ section.settings.bottom_image.width }}"
            height="{{ section.settings.bottom_image.height }}"
          >
        </div>
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Comparison Table v3",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "━━━ LAYOUT ━━━"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Section padding top",
      "default": 80
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Section padding bottom",
      "default": 80
    },
    {
      "type": "range",
      "id": "container_padding",
      "min": 20,
      "max": 60,
      "step": 4,
      "unit": "px",
      "label": "Container side padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "layout_gap",
      "min": 32,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Gap between content and table",
      "default": 60
    },
    {
      "type": "range",
      "id": "content_width",
      "min": 25,
      "max": 40,
      "step": 1,
      "unit": "%",
      "label": "Left content width",
      "default": 30
    },
    {
      "type": "range",
      "id": "content_gap",
      "min": 16,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Gap between content elements",
      "default": 24
    },
    {
      "type": "range",
      "id": "content_sticky_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Content sticky top offset",
      "default": 80
    },
    {
      "type": "header",
      "content": "━━━ LEFT CONTENT ━━━"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Choose Chocho?"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 24,
      "max": 64,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 42
    },
    {
      "type": "range",
      "id": "heading_weight",
      "min": 400,
      "max": 900,
      "step": 100,
      "label": "Heading weight",
      "default": 700
    },
    {
      "type": "range",
      "id": "heading_line_height",
      "min": 1,
      "max": 1.6,
      "step": 0.1,
      "label": "Heading line height",
      "default": 1.2
    },
    {
      "type": "range",
      "id": "heading_letter_spacing",
      "min": -2,
      "max": 2,
      "step": 0.1,
      "unit": "px",
      "label": "Heading letter spacing",
      "default": 0
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Compare the superior nutritional profile"
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 14,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Subheading size",
      "default": 16
    },
    {
      "type": "range",
      "id": "subheading_weight",
      "min": 300,
      "max": 600,
      "step": 100,
      "label": "Subheading weight",
      "default": 400
    },
    {
      "type": "header",
      "content": "━━━ CTA BUTTON ━━━"
    },
    {
      "type": "checkbox",
      "id": "show_cta",
      "label": "Show CTA button",
      "default": true
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "CTA text",
      "default": "Shop Now"
    },
    {
