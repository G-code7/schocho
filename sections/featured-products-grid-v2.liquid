{% liquid
  assign section_id = section.id
%}

{% style %}
  .featured-products-{{ section_id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .featured-products__container-{{ section_id }} {
    max-width: {{ section.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  /* Header - Title Left Aligned */
  .featured-products__header-{{ section_id }} {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: {{ section.settings.header_margin_bottom }}px;
  }

  .featured-products__title-{{ section_id }} {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    color: {{ section.settings.heading_color }};
    line-height: 1.2;
    margin: 0;
    letter-spacing: {{ section.settings.heading_letter_spacing }}em;
    text-transform: {{ section.settings.heading_transform }};
  }

  .featured-products__title-{{ section_id }} img {
    display: inline-block;
    vertical-align: middle;
    height: {{ section.settings.heading_icon_size }}px;
    width: auto;
    margin: 0 8px;
    border-radius: {{ section.settings.heading_icon_radius }}%;
  }

  .featured-products__subtitle-{{ section_id }} {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.subtitle_color }};
    margin: 16px 0 0;
    font-weight: 400;
  }

  /* Products Grid with Size Control */
  .featured-products__grid-wrapper-{{ section_id }} {
    display: flex;
    justify-content: center;
  }

  .featured-products__grid-{{ section_id }} {
    display: grid;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, minmax(0, {{ section.settings.product_max_width }}px));
    gap: {{ section.settings.grid_gap }}px;
    width: 100%;
    max-width: calc(({{ section.settings.product_max_width }}px * {{ section.settings.columns_desktop }}) + ({{ section.settings.grid_gap }}px * {{ section.settings.columns_desktop | minus: 1 }}));
    justify-content: center;
  }

  @media screen and (max-width: 989px) {
    .featured-products__grid-{{ section_id }} {
      grid-template-columns: repeat(2, minmax(0, {{ section.settings.product_max_width_tablet }}px));
      max-width: calc(({{ section.settings.product_max_width_tablet }}px * 2) + {{ section.settings.grid_gap }}px);
    }
  }

  /* Mobile Slider */
  @media screen and (max-width: 749px) {
    .featured-products__header-{{ section_id }} {
      padding: 0 20px;
    }

    .featured-products__grid-wrapper-{{ section_id }} {
      overflow: hidden;
      margin: 0 -20px;
      padding: 0;
    }

    .featured-products__grid-{{ section_id }} {
      display: flex;
      gap: {{ section.settings.grid_gap_mobile }}px;
      max-width: none;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      scrollbar-width: none;
      -ms-overflow-style: none;
      padding: 0 20px;
      scroll-behavior: smooth;
    }

    .featured-products__grid-{{ section_id }}::-webkit-scrollbar {
      display: none;
    }

    .featured-products__grid-{{ section_id }} .featured-products__card-{{ section_id }} {
      flex: 0 0 {{ section.settings.product_max_width_mobile }}px;
      scroll-snap-align: center;
    }

    .featured-products__title-{{ section_id }} {
      font-size: {{ section.settings.heading_size_mobile }}px;
    }

    .featured-products__title-{{ section_id }} img {
      height: {{ section.settings.heading_icon_size | times: 0.7 }}px;
    }
  }

  /* Slider Dots */
  .featured-products__dots-{{ section_id }} {
    display: none;
  }

  @media screen and (max-width: 749px) {
    .featured-products__dots-{{ section_id }} {
      display: flex;
      justify-content: center;
      gap: 8px;
      margin-top: 20px;
    }

    .featured-products__dot-{{ section_id }} {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background-color: {{ section.settings.heading_color }};
      opacity: 0.25;
      border: none;
      padding: 0;
      cursor: pointer;
      transition: opacity 0.3s ease, transform 0.3s ease;
    }

    .featured-products__dot-{{ section_id }}.is-active {
      opacity: 1;
      transform: scale(1.2);
    }
  }

  /* Product Card */
  .featured-products__card-{{ section_id }} {
    display: flex;
    flex-direction: column;
  }

  .featured-products__image-wrapper-{{ section_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ section.settings.image_aspect_ratio }};
    overflow: hidden;
    background-color: {{ section.settings.image_background }};
    border-radius: {{ section.settings.image_border_radius }}px;
  }

  .featured-products__image-{{ section_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: {{ section.settings.image_fit }};
    transition: opacity {{ section.settings.transition_duration }}ms ease;
  }

  .featured-products__image-{{ section_id }}--hover {
    opacity: 0;
  }

  .featured-products__image-wrapper-{{ section_id }}:hover .featured-products__image-{{ section_id }}--primary {
    opacity: 0;
  }

  .featured-products__image-wrapper-{{ section_id }}:hover .featured-products__image-{{ section_id }}--hover {
    opacity: 1;
  }

  /* Add to Cart Overlay */
  .featured-products__overlay-{{ section_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: {{ section.settings.overlay_padding }}px;
    opacity: 0;
    transform: translateY(20px);
    transition: all {{ section.settings.transition_duration }}ms ease;
    z-index: 10;
  }

  .featured-products__image-wrapper-{{ section_id }}:hover .featured-products__overlay-{{ section_id }} {
    opacity: 1;
    transform: translateY(0);
  }

  .featured-products__add-btn-{{ section_id }} {
    width: 100%;
    padding: {{ section.settings.button_padding_y }}px {{ section.settings.button_padding_x }}px;
    background-color: {{ section.settings.button_bg }};
    color: {{ section.settings.button_color }};
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_font_size }}px;
    font-weight: {{ section.settings.button_font_weight }};
    text-transform: {{ section.settings.button_text_transform }};
    letter-spacing: {{ section.settings.button_letter_spacing }}em;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .featured-products__add-btn-{{ section_id }}:hover {
    background-color: {{ section.settings.button_bg_hover }};
    color: {{ section.settings.button_color_hover }};
    border-color: {{ section.settings.button_border_hover }};
  }

  .featured-products__add-btn-{{ section_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  /* Loading spinner */
  .featured-products__spinner-{{ section_id }} {
    display: none;
    width: 18px;
    height: 18px;
    border: 2px solid transparent;
    border-top-color: currentColor;
    border-radius: 50%;
    animation: fp-spin-{{ section_id }} 0.8s linear infinite;
    margin: 0 auto;
  }

  .featured-products__add-btn-{{ section_id }}.is-loading .featured-products__btn-text-{{ section_id }} {
    display: none;
  }

  .featured-products__add-btn-{{ section_id }}.is-loading .featured-products__spinner-{{ section_id }} {
    display: block;
  }

  @keyframes fp-spin-{{ section_id }} {
    to { transform: rotate(360deg); }
  }

  /* Product Info */
  .featured-products__info-{{ section_id }} {
    padding: {{ section.settings.info_padding_top }}px 0 0;
  }

  .featured-products__product-title-{{ section_id }} {
    font-size: {{ section.settings.product_title_size }}px;
    font-weight: {{ section.settings.product_title_weight }};
    color: {{ section.settings.product_title_color }};
    margin: 0 0 12px;
    line-height: 1.3;
    text-align: {{ section.settings.info_alignment }};
  }

  .featured-products__product-title-{{ section_id }} a {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .featured-products__product-title-{{ section_id }} a:hover {
    color: {{ section.settings.product_title_hover }};
  }

  /* ===== REDISEÑO: Precio y Cantidad en la misma línea ===== */
  .featured-products__price-row-{{ section_id }} {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    gap: 12px;
    flex-wrap: wrap;
  }

  .featured-products__price-{{ section_id }} {
    font-size: {{ section.settings.price_size }}px;
    font-weight: {{ section.settings.price_weight }};
    color: {{ section.settings.price_color }};
    margin: 0;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .featured-products__compare-price-{{ section_id }} {
    text-decoration: line-through;
    opacity: 0.6;
    font-size: 0.85em;
  }

  /* Quantity + Add Button Group */
  .featured-products__cart-controls-{{ section_id }} {
    display: flex;
    align-items: center;
    gap: {{ section.settings.quantity_gap }}px;
  }

  .featured-products__quantity-selector-{{ section_id }} {
    display: inline-flex;
    align-items: center;
    border: {{ section.settings.quantity_border_width }}px solid {{ section.settings.quantity_border_color }};
    border-radius: {{ section.settings.quantity_border_radius }}px;
    background-color: {{ section.settings.quantity_bg }};
    overflow: hidden;
  }

  .featured-products__qty-btn-{{ section_id }} {
    width: {{ section.settings.quantity_button_size }}px;
    height: {{ section.settings.quantity_button_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: transparent;
    border: none;
    color: {{ section.settings.quantity_color }};
    font-size: {{ section.settings.quantity_button_font_size }}px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s ease;
    padding: 0;
    user-select: none;
  }

  .featured-products__qty-btn-{{ section_id }}:hover {
    background-color: {{ section.settings.quantity_button_hover_bg }};
    color: {{ section.settings.quantity_button_hover_color }};
  }

  .featured-products__qty-btn-{{ section_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .featured-products__qty-input-{{ section_id }} {
    width: {{ section.settings.quantity_input_width }}px;
    height: {{ section.settings.quantity_button_size }}px;
    border: none;
    background-color: transparent;
    text-align: center;
    font-size: {{ section.settings.quantity_font_size }}px;
    font-weight: {{ section.settings.quantity_font_weight }};
    color: {{ section.settings.quantity_color }};
    -moz-appearance: textfield;
    padding: 0;
  }

  .featured-products__qty-input-{{ section_id }}::-webkit-outer-spin-button,
  .featured-products__qty-input-{{ section_id }}::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
  }

  .featured-products__qty-input-{{ section_id }}:focus {
    outline: none;
  }

  .featured-products__qty-add-btn-{{ section_id }} {
    padding: {{ section.settings.quantity_add_button_padding_y }}px {{ section.settings.quantity_add_button_padding_x }}px;
    background-color: {{ section.settings.quantity_add_button_bg }};
    color: {{ section.settings.quantity_add_button_color }};
    border: {{ section.settings.quantity_add_button_border_width }}px solid {{ section.settings.quantity_add_button_border_color }};
    border-radius: {{ section.settings.quantity_add_button_border_radius }}px;
    font-size: {{ section.settings.quantity_add_button_font_size }}px;
    font-weight: {{ section.settings.quantity_add_button_font_weight }};
    text-transform: {{ section.settings.quantity_add_button_text_transform }};
    letter-spacing: {{ section.settings.quantity_add_button_letter_spacing }}em;
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    min-width: 44px;
  }

  .featured-products__qty-add-btn-{{ section_id }}:hover {
    background-color: {{ section.settings.quantity_add_button_bg_hover }};
    color: {{ section.settings.quantity_add_button_color_hover }};
    border-color: {{ section.settings.quantity_add_button_border_hover }};
  }

  .featured-products__qty-add-btn-{{ section_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .featured-products__qty-add-btn-{{ section_id }}.is-loading .featured-products__qty-btn-text-{{ section_id }} {
    display: none;
  }

  .featured-products__qty-add-btn-{{ section_id }}.is-loading .featured-products__qty-spinner-{{ section_id }} {
    display: block;
  }

  .featured-products__qty-spinner-{{ section_id }} {
    display: none;
    width: 16px;
    height: 16px;
    border: 2px solid transparent;
    border-top-color: currentColor;
    border-radius: 50%;
    animation: fp-spin-{{ section_id }} 0.8s linear infinite;
  }

  /* Mobile: Stack en columna */
  @media screen and (max-width: 749px) {
    .featured-products__price-row-{{ section_id }} {
      flex-direction: column;
      align-items: stretch;
      gap: 12px;
    }

    .featured-products__price-{{ section_id }} {
      justify-content: center;
    }

    .featured-products__cart-controls-{{ section_id }} {
      justify-content: center;
    }
  }

  /* Shop All Button */
  .featured-products__view-all-{{ section_id }} {
    text-align: center;
    margin-top: {{ section.settings.view_all_margin_top }}px;
  }

  .featured-products__view-all-btn-{{ section_id }} {
    display: inline-block;
    padding: {{ section.settings.view_all_padding_y }}px {{ section.settings.view_all_padding_x }}px;
    background-color: {{ section.settings.view_all_bg }};
    color: {{ section.settings.view_all_color }};
    border: {{ section.settings.view_all_border_width }}px solid {{ section.settings.view_all_border_color }};
    border-radius: {{ section.settings.view_all_border_radius }}px;
    font-size: {{ section.settings.view_all_font_size }}px;
    font-weight: {{ section.settings.view_all_font_weight }};
    text-decoration: none;
    text-transform: {{ section.settings.view_all_text_transform }};
    letter-spacing: {{ section.settings.view_all_letter_spacing }}em;
    transition: all 0.3s ease;
  }

  .featured-products__view-all-btn-{{ section_id }}:hover {
    background-color: {{ section.settings.view_all_bg_hover }};
    color: {{ section.settings.view_all_color_hover }};
    border-color: {{ section.settings.view_all_border_hover }};
  }

  /* Placeholder */
  .featured-products__placeholder-{{ section_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #ffffff;
  }

  .featured-products__placeholder-{{ section_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  /* Hide forms visually but keep functional */
  .featured-products__qty-form-{{ section_id }} {
    display: contents;
  }
{% endstyle %}

<section class="featured-products-{{ section_id }}" data-section-id="{{ section_id }}" {{ section.shopify_attributes }}>
  <div class="featured-products__container-{{ section_id }}">
    {%- comment -%} Header with Title {%- endcomment -%}
    {% if section.settings.heading != blank or section.settings.subtitle != blank %}
      <div class="featured-products__header-{{ section_id }}">
        {% if section.settings.heading != blank %}
          <h2 class="featured-products__title-{{ section_id }}">
            {%- liquid
              assign heading_parts = section.settings.heading | split: '[icon'
              for part in heading_parts
                if forloop.first
                  echo part
                else
                  assign icon_and_text = part | split: ']'
                  assign icon_index = icon_and_text[0] | strip | plus: 0

                  if icon_index == 1 and section.settings.heading_icon_1 != blank
                    echo '<img src="' | append: section.settings.heading_icon_1 | image_url: height: 100 | append: '" alt="" loading="lazy">'
                  elsif icon_index == 2 and section.settings.heading_icon_2 != blank
                    echo '<img src="' | append: section.settings.heading_icon_2 | image_url: height: 100 | append: '" alt="" loading="lazy">'
                  elsif icon_index == 3 and section.settings.heading_icon_3 != blank
                    echo '<img src="' | append: section.settings.heading_icon_3 | image_url: height: 100 | append: '" alt="" loading="lazy">'
                  endif

                  if icon_and_text.size > 1
                    echo icon_and_text[1]
                  endif
                endif
              endfor
            -%}
          </h2>
        {% endif %}
        {% if section.settings.subtitle != blank %}
          <p class="featured-products__subtitle-{{ section_id }}">{{ section.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    {%- comment -%} Products Grid / Slider {%- endcomment -%}
    <div class="featured-products__grid-wrapper-{{ section_id }}">
      <div class="featured-products__grid-{{ section_id }}" data-slider>

        {% for i in (1..3) %}
          {%- liquid
            case i
              when 1
                assign product = section.settings.product_1
                assign custom_image = section.settings.product_1_image
                assign hover_image = section.settings.product_1_hover_image
                assign custom_title = section.settings.product_1_title
              when 2
                assign product = section.settings.product_2
                assign custom_image = section.settings.product_2_image
                assign hover_image = section.settings.product_2_hover_image
                assign custom_title = section.settings.product_2_title
              when 3
                assign product = section.settings.product_3
                assign custom_image = section.settings.product_3_image
                assign hover_image = section.settings.product_3_hover_image
                assign custom_title = section.settings.product_3_title
            endcase
          -%}

          {% if product != blank or custom_image != blank %}
            <div class="featured-products__card-{{ section_id }}" data-slide-index="{{ forloop.index0 }}" data-product-id="{{ product.id }}">
              <div class="featured-products__image-wrapper-{{ section_id }}">
                {%- comment -%} Primary Image {%- endcomment -%}
                {% if custom_image != blank %}
                  <img
                    src="{{ custom_image | image_url: width: 800 }}"
                    alt="{{ custom_image.alt | default: product.title | escape }}"
                    class="featured-products__image-{{ section_id }} featured-products__image-{{ section_id }}--primary"
                    loading="lazy"
                    width="800"
                    height="{{ 800 | divided_by: custom_image.aspect_ratio | round }}"
                  >
                {% elsif product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 800 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="featured-products__image-{{ section_id }} featured-products__image-{{ section_id }}--primary"
                    loading="lazy"
                    width="800"
                    height="{{ 800 | divided_by: product.featured_image.aspect_ratio | round }}"
                  >
                {% else %}
                  <div class="featured-products__placeholder-{{ section_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                {%- comment -%} Hover Image {%- endcomment -%}
                {% if hover_image != blank %}
                  <img
                    src="{{ hover_image | image_url: width: 800 }}"
                    alt="{{ hover_image.alt | default: product.title | escape }}"
                    class="featured-products__image-{{ section_id }} featured-products__image-{{ section_id }}--hover"
                    loading="lazy"
                    width="800"
                    height="{{ 800 | divided_by: hover_image.aspect_ratio | round }}"
                  >
                {% elsif product.images[1] %}
                  <img
                    src="{{ product.images[1] | image_url: width: 800 }}"
                    alt="{{ product.images[1].alt | escape }}"
                    class="featured-products__image-{{ section_id }} featured-products__image-{{ section_id }}--hover"
                    loading="lazy"
                    width="800"
                    height="{{ 800 | divided_by: product.images[1].aspect_ratio | round }}"
                  >
                {% endif %}

                {%- comment -%} Add to Cart Button Overlay (opcional) {%- endcomment -%}
                {% if product != blank and section.settings.show_add_to_cart %}
                  <div class="featured-products__overlay-{{ section_id }}">
                    <form action="/cart/add" method="post" class="featured-products__form" data-product-form>
                      <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                      <input type="hidden" name="quantity" value="1">
                      <button
                        type="submit"
                        class="featured-products__add-btn-{{ section_id }}"
                        {% unless product.available %}disabled{% endunless %}
                        data-add-to-cart-overlay
                      >
                        <span class="featured-products__btn-text-{{ section_id }}">
                          {% if product.available %}
                            {{ section.settings.add_to_cart_text }}
                          {% else %}
                            {{ section.settings.sold_out_text }}
                          {% endif %}
                        </span>
                        <span class="featured-products__spinner-{{ section_id }}"></span>
                      </button>
                    </form>
                  </div>
                {% endif %}
              </div>

              {%- comment -%} Product Info {%- endcomment -%}
              <div class="featured-products__info-{{ section_id }}">
                {% if product != blank %}
                  <h3 class="featured-products__product-title-{{ section_id }}">
                    <a href="{{ product.url }}">
                      {{ custom_title | default: product.title }}
                    </a>
                  </h3>

                  {%- comment -%} REDISEÑO: Precio y Cantidad en la misma fila {%- endcomment -%}
                  <div class="featured-products__price-row-{{ section_id }}">
                    {%- comment -%} Precio (izquierda) {%- endcomment -%}
                    <div class="featured-products__price-{{ section_id }}">
                      <span>{{ product.price | money }}</span>
                      {% if product.compare_at_price > product.price %}
                        <span class="featured-products__compare-price-{{ section_id }}">
                          {{ product.compare_at_price | money }}
                        </span>
                      {% endif %}
                    </div>

                    {%- comment -%} Cantidad + Botón Add (derecha) {%- endcomment -%}
                    {% if section.settings.show_quantity_selector and product.available %}
                      <div class="featured-products__cart-controls-{{ section_id }}">
                        <div class="featured-products__quantity-selector-{{ section_id }}">
                          <button
                            type="button"
                            class="featured-products__qty-btn-{{ section_id }}"
                            data-qty-decrease="{{ product.id }}"
                            aria-label="Decrease quantity"
                          >
                            −
                          </button>
                          <input
                            type="number"
                            class="featured-products__qty-input-{{ section_id }}"
                            value="1"
                            min="1"
                            max="{{ product.selected_or_first_available_variant.inventory_quantity | default: 999 }}"
                            data-qty-input="{{ product.id }}"
                            aria-label="Quantity"
                          >
                          <button
                            type="button"
                            class="featured-products__qty-btn-{{ section_id }}"
                            data-qty-increase="{{ product.id }}"
                            aria-label="Increase quantity"
                          >
                            +
                          </button>
                        </div>

                        <button
                          type="button"
                          class="featured-products__qty-add-btn-{{ section_id }}"
                          data-add-to-cart-btn="{{ product.id }}"
                          data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                        >
                          <span class="featured-products__qty-btn-text-{{ section_id }}">
                            {{ section.settings.quantity_add_button_text }}
                          </span>
                          <span class="featured-products__qty-spinner-{{ section_id }}"></span>
                        </button>
                      </div>
                    {% elsif product.available == false %}
                      <div class="featured-products__cart-controls-{{ section_id }}">
                        <button
                          type="button"
                          class="featured-products__qty-add-btn-{{ section_id }}"
                          disabled
                        >
                          <span class="featured-products__qty-btn-text-{{ section_id }}">
                            {{ section.settings.sold_out_text }}
