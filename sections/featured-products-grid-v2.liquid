<script>
  (function () {
    const section = document.querySelector('.featured-products-{{ section_id }}');
    if (!section) return;

    const sectionId = '{{ section_id }}';
    const slider = section.querySelector('[data-slider]');
    const dots = section.querySelectorAll('[data-dot-index]');
    const cards = section.querySelectorAll('[data-slide-index]');
    const autoplaySpeed = {{ section.settings.slider_autoplay_speed }} * 1000;
    const enableAutoplay = {{ section.settings.slider_autoplay }};

    let currentIndex = 0;
    let autoplayInterval = null;
    let isMobile = window.innerWidth <= 749;

    // ===== SLIDER FUNCTIONALITY =====
    function updateDots(index) {
      dots.forEach((dot, i) => {
        dot.classList.toggle('is-active', i === index);
      });
    }

    function goToSlide(index) {
      if (!isMobile || !cards[index]) return;

      const card = cards[index];
      const sliderRect = slider.getBoundingClientRect();
      const cardRect = card.getBoundingClientRect();
      const scrollLeft = card.offsetLeft - (sliderRect.width / 2) + (cardRect.width / 2);

      slider.scrollTo({
        left: scrollLeft,
        behavior: 'smooth'
      });

      currentIndex = index;
      updateDots(index);
    }

    function handleScroll() {
      if (!isMobile) return;

      const sliderRect = slider.getBoundingClientRect();
      const centerX = sliderRect.left + sliderRect.width / 2;

      let closestIndex = 0;
      let closestDistance = Infinity;

      cards.forEach((card, index) => {
        const cardRect = card.getBoundingClientRect();
        const cardCenterX = cardRect.left + cardRect.width / 2;
        const distance = Math.abs(centerX - cardCenterX);

        if (distance < closestDistance) {
          closestDistance = distance;
          closestIndex = index;
        }
      });

      if (closestIndex !== currentIndex) {
        currentIndex = closestIndex;
        updateDots(currentIndex);
      }
    }

    function startAutoplay() {
      if (!enableAutoplay || !isMobile || cards.length <= 1) return;
      stopAutoplay();
      autoplayInterval = setInterval(() => {
        const nextIndex = (currentIndex + 1) % cards.length;
        goToSlide(nextIndex);
      }, autoplaySpeed);
    }

    function stopAutoplay() {
      if (autoplayInterval) {
        clearInterval(autoplayInterval);
        autoplayInterval = null;
      }
    }

    // Dot clicks
    dots.forEach((dot) => {
      dot.addEventListener('click', () => {
        const index = parseInt(dot.dataset.dotIndex);
        goToSlide(index);
        stopAutoplay();
        setTimeout(startAutoplay, autoplaySpeed);
      });
    });

    // Scroll listener
    let scrollTimeout;
    slider.addEventListener('scroll', () => {
      clearTimeout(scrollTimeout);
      scrollTimeout = setTimeout(handleScroll, 50);
    }, { passive: true });

    // Touch/mouse interaction
    slider.addEventListener('touchstart', stopAutoplay, { passive: true });
    slider.addEventListener('mouseenter', stopAutoplay);
    slider.addEventListener('touchend', () => setTimeout(startAutoplay, 2000), { passive: true });
    slider.addEventListener('mouseleave', startAutoplay);

    // Resize handler
    let resizeTimeout;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimeout);
      resizeTimeout = setTimeout(() => {
        const wasMobile = isMobile;
        isMobile = window.innerWidth <= 749;
        if (isMobile && !wasMobile) startAutoplay();
        else if (!isMobile && wasMobile) stopAutoplay();
      }, 100);
    });

    if (isMobile) startAutoplay();

    // ===== QUANTITY SELECTOR FUNCTIONALITY =====
    
    // Decrease button
    section.querySelectorAll('[data-qty-decrease]').forEach(btn => {
      btn.addEventListener('click', function() {
        const productId = this.getAttribute('data-qty-decrease');
        const input = section.querySelector(`[data-qty-input="${productId}"]`);
        if (input) {
          let value = parseInt(input.value) || 1;
          if (value > 1) {
            input.value = --value;
          }
        }
      });
    });

    // Increase button
    section.querySelectorAll('[data-qty-increase]').forEach(btn => {
      btn.addEventListener('click', function() {
        const productId = this.getAttribute('data-qty-increase');
        const input = section.querySelector(`[data-qty-input="${productId}"]`);
        if (input) {
          let value = parseInt(input.value) || 1;
          const max = parseInt(input.max) || 999;
          if (value < max) {
            input.value = ++value;
          }
        }
      });
    });

    // Input change validation
    section.querySelectorAll('[data-qty-input]').forEach(input => {
      input.addEventListener('change', function() {
        let value = parseInt(this.value) || 1;
        const min = parseInt(this.min) || 1;
        const max = parseInt(this.max) || 999;
        if (value < min) value = min;
        if (value > max) value = max;
        this.value = value;
      });
    });

    // ===== ADD TO CART FUNCTIONALITY =====
    
    // Helper function for add to cart
    async function addToCart(variantId, quantity, button) {
      if (button.disabled) return;

      button.classList.add('is-loading');
      button.disabled = true;

      try {
        const response = await fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json'
          },
          body: JSON.stringify({
            id: variantId,
            quantity: quantity
          })
        });

        const data = await response.json();

        if (response.ok) {
          // Success feedback
          const btnText = button.querySelector('[class*="btn-text"]');
          if (btnText) {
            const originalText = btnText.textContent;
            btnText.textContent = '{{ section.settings.added_text }}';
            
            setTimeout(() => {
              btnText.textContent = originalText;
            }, 2000);
          }

          // Dispatch cart update event
          document.dispatchEvent(new CustomEvent('cart:refresh'));

          // Try to open cart drawer if available
          const cartDrawer = document.querySelector('cart-drawer');
          if (cartDrawer && typeof cartDrawer.open === 'function') {
            cartDrawer.open();
          }

          // Also try common cart drawer selectors
          const cartDrawerAlt = document.querySelector('[data-cart-drawer]');
          if (cartDrawerAlt) {
            cartDrawerAlt.classList.add('is-open', 'active');
          }

        } else {
          console.error('Add to cart error:', data);
          alert(data.description || 'Error adding to cart');
        }
      } catch (error) {
        console.error('Add to cart error:', error);
        alert('Error adding to cart. Please try again.');
      } finally {
        setTimeout(() => {
          button.classList.remove('is-loading');
          button.disabled = false;
        }, 2000);
      }
    }

    // Add to cart button (with quantity)
    section.querySelectorAll('[data-add-to-cart-btn]').forEach(btn => {
      btn.addEventListener('click', function() {
        const productId = this.getAttribute('data-add-to-cart-btn');
        const variantId = this.getAttribute('data-variant-id');
        const input = section.querySelector(`[data-qty-input="${productId}"]`);
        const quantity = input ? parseInt(input.value) || 1 : 1;
        
        addToCart(variantId, quantity, this);
      });
    });

    // Add to cart overlay button
    section.querySelectorAll('[data-add-to-cart-overlay]').forEach(btn => {
      btn.addEventListener('click', function(e) {
        e.preventDefault();
        const form = this.closest('form');
        const variantId = form.querySelector('input[name="id"]').value;
        const quantity = 1;
        
        addToCart(variantId, quantity, this);
      });
    });

    // Prevent form submission (we handle it via JS)
    section.querySelectorAll('form[data-product-form]').forEach(form => {
      form.addEventListener('submit', function(e) {
        e.preventDefault();
      });
    });

  })();
</script>

