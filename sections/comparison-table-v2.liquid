{% liquid
  assign section_id = section.id
%}

{% style %}
  .comparison-table-v2-{{ section_id }} {
    --transition-speed: 0.4s;
    --ease-smooth: cubic-bezier(0.4, 0, 0.2, 1);

    position: relative;
    width: 100%;
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    overflow: hidden;
  }

  /* Usar el contenedor del tema para consistencia */
  .comparison-table-v2__container-{{ section_id }} {
    width: 100%;
    max-width: var(--page-width, 1200px);
    margin: 0 auto;
    padding: 0 {{ section.settings.container_padding }}px;
  }

  .comparison-table-v2__header-{{ section_id }} {
    text-align: {{ section.settings.heading_alignment }};
    margin-bottom: {{ section.settings.header_margin_bottom }}px;
  }

  .comparison-table-v2__eyebrow-{{ section_id }} {
    display: inline-block;
    color: {{ section.settings.eyebrow_color }};
    font-size: {{ section.settings.eyebrow_size }}px;
    font-weight: {{ section.settings.eyebrow_weight }};
    text-transform: uppercase;
    letter-spacing: 2px;
    margin-bottom: 12px;
    position: relative;
  }

  .comparison-table-v2__eyebrow-{{ section_id }}::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 50%;
    transform: translateX(-50%);
    width: 40px;
    height: 2px;
    background: {{ section.settings.accent_color }};
    border-radius: 2px;
  }

  .comparison-table-v2__heading-{{ section_id }} {
    color: {{ section.settings.heading_color }};
    font-size: {{ section.settings.heading_size }}px;
    font-weight: {{ section.settings.heading_weight }};
    line-height: {{ section.settings.heading_line_height }};
    margin: 0 0 {{ section.settings.heading_margin_bottom }}px 0;
    letter-spacing: {{ section.settings.heading_letter_spacing }}px;
  }

  .comparison-table-v2__subheading-{{ section_id }} {
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.subheading_size }}px;
    font-weight: {{ section.settings.subheading_weight }};
    margin: 0 auto;
    max-width: 600px;
    opacity: 0.85;
    line-height: 1.6;
  }

  .comparison-table-v2__wrapper-{{ section_id }} {
    background-color: {{ section.settings.table_background }};
    border-radius: {{ section.settings.table_border_radius }}px;
    overflow: hidden;
    {% if section.settings.table_shadow_enabled %}
      box-shadow: 0 {{ section.settings.table_shadow_y }}px {{ section.settings.table_shadow_blur }}px {{ section.settings.table_shadow_spread }}px {{ section.settings.table_shadow_color }};
    {% endif %}
    {% if section.settings.table_border_width > 0 %}
      border: {{ section.settings.table_border_width }}px solid {{ section.settings.table_border_color }};
    {% endif %}
  }

  .comparison-table-v2__table-{{ section_id }} {
    width: 100%;
    border-collapse: collapse;
  }

  /* Header Row */
  .comparison-table-v2__header-row-{{ section_id }} {
    background: {{ section.settings.header_row_background }};
  }

  .comparison-table-v2__header-cell-{{ section_id }} {
    padding: {{ section.settings.header_cell_padding_y }}px {{ section.settings.header_cell_padding_x }}px;
    text-align: center;
    vertical-align: bottom;
    position: relative;
  }

  .comparison-table-v2__header-cell-{{ section_id }}:not(:last-child)::after {
    content: '';
    position: absolute;
    right: 0;
    top: 20%;
    height: 60%;
    width: 1px;
    background: {{ section.settings.header_divider_color }};
  }

  .comparison-table-v2__header-cell-{{ section_id }}:first-child {
    text-align: left;
    width: {{ section.settings.first_column_width }}%;
  }

  .comparison-table-v2__header-cell-{{ section_id }}:first-child::after {
    display: none;
  }

  .comparison-table-v2__column-icon-{{ section_id }} {
    width: {{ section.settings.column_icon_size }}px;
    height: {{ section.settings.column_icon_size }}px;
    margin: 0 auto 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .comparison-table-v2__column-icon-{{ section_id }} img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .comparison-table-v2__column-title-{{ section_id }} {
    color: {{ section.settings.column_title_color }};
    font-size: {{ section.settings.column_title_size }}px;
    font-weight: {{ section.settings.column_title_weight }};
    margin: 0;
    line-height: 1.3;
  }

  .comparison-table-v2__column-subtitle-{{ section_id }} {
    color: {{ section.settings.column_subtitle_color }};
    font-size: {{ section.settings.column_subtitle_size }}px;
    font-weight: {{ section.settings.column_subtitle_weight }};
    margin: 6px 0 0 0;
    opacity: 0.7;
  }

  /* Highlight column styling */
  .comparison-table-v2__header-cell-{{ section_id }}.highlight {
    background: {{ section.settings.highlight_header_bg }};
    position: relative;
  }

  .comparison-table-v2__header-cell-{{ section_id }}.highlight::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: {{ section.settings.accent_color }};
  }

  .comparison-table-v2__header-cell-{{ section_id }}.highlight .comparison-table-v2__column-title-{{ section_id }} {
    color: {{ section.settings.highlight_title_color }};
  }

  .comparison-table-v2__header-cell-{{ section_id }}.highlight .comparison-table-v2__column-subtitle-{{ section_id }} {
    color: {{ section.settings.highlight_subtitle_color }};
  }

  /* Badge for highlighted column */
  .comparison-table-v2__badge-{{ section_id }} {
    display: inline-block;
    background: {{ section.settings.accent_color }};
    color: {{ section.settings.badge_text_color }};
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    padding: 4px 12px;
    border-radius: 20px;
    margin-bottom: 12px;
  }

  /* Body Rows */
  .comparison-table-v2__row-{{ section_id }} {
    border-bottom: 1px solid {{ section.settings.row_border_color }};
    transition: background-color 0.25s var(--ease-smooth);
  }

  .comparison-table-v2__row-{{ section_id }}:last-child {
    border-bottom: none;
  }

  .comparison-table-v2__row-{{ section_id }}:nth-child(even) {
    background-color: {{ section.settings.row_alt_background }};
  }

  .comparison-table-v2__row-{{ section_id }}:hover {
    background-color: {{ section.settings.row_hover_background }};
  }

  .comparison-table-v2__cell-{{ section_id }} {
    padding: {{ section.settings.cell_padding_y }}px {{ section.settings.cell_padding_x }}px;
    text-align: center;
    vertical-align: middle;
    position: relative;
  }

  .comparison-table-v2__cell-{{ section_id }}:first-child {
    text-align: left;
    font-weight: {{ section.settings.row_label_weight }};
    color: {{ section.settings.row_label_color }};
    font-size: {{ section.settings.row_label_size }}px;
    {% if section.settings.row_label_uppercase == 'uppercase' %}
      text-transform: uppercase;
      letter-spacing: {{ section.settings.row_label_letter_spacing }}px;
    {% endif %}
  }

  .comparison-table-v2__cell-{{ section_id }}.highlight {
    background-color: {{ section.settings.highlight_cell_bg }};
  }

  /* Icons */
  .comparison-table-v2__icon-{{ section_id }} {
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: all 0.3s var(--ease-smooth);
  }

  .comparison-table-v2__icon-{{ section_id }}.check {
    background: {{ section.settings.check_bg_color }};
    {% if section.settings.check_border_width > 0 %}
      border: {{ section.settings.check_border_width }}px solid {{ section.settings.check_border_color }};
    {% endif %}
  }

  .comparison-table-v2__icon-{{ section_id }}.check svg {
    width: {{ section.settings.check_icon_size }}px;
    height: {{ section.settings.check_icon_size }}px;
    stroke: {{ section.settings.check_icon_color }};
    stroke-width: 2.5;
    fill: none;
  }

  .comparison-table-v2__icon-{{ section_id }}.empty {
    background: {{ section.settings.empty_bg_color }};
    border: {{ section.settings.empty_border_width }}px solid {{ section.settings.empty_border_color }};
  }

  .comparison-table-v2__icon-{{ section_id }}.partial {
    background: {{ section.settings.partial_bg_color }};
    border: {{ section.settings.partial_border_width }}px solid {{ section.settings.partial_border_color }};
  }

  .comparison-table-v2__icon-{{ section_id }}.partial::before {
    content: '';
    width: 12px;
    height: 2px;
    background: {{ section.settings.partial_icon_color }};
    border-radius: 2px;
  }

  .comparison-table-v2__row-{{ section_id }}:hover .comparison-table-v2__icon-{{ section_id }}.check {
    transform: scale(1.1);
    box-shadow: 0 4px 12px {{ section.settings.check_bg_color }}40;
  }

  /* Custom text in cells */
  .comparison-table-v2__cell-text-{{ section_id }} {
    font-size: {{ section.settings.cell_text_size }}px;
    font-weight: {{ section.settings.cell_text_weight }};
    color: {{ section.settings.cell_text_color }};
  }

  /* Bottom Image */
  .comparison-table-v2__bottom-image-{{ section_id }} {
    margin-top: {{ section.settings.bottom_image_margin_top }}px;
    text-align: center;
  }

  .comparison-table-v2__bottom-image-wrapper-{{ section_id }} {
    position: relative;
    width: 100%;
    max-width: {{ section.settings.bottom_image_max_width }}px;
    margin: 0 auto;
    border-radius: {{ section.settings.bottom_image_border_radius }}px;
    overflow: hidden;
  }

  .comparison-table-v2__bottom-image-img-{{ section_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Responsive - Tablet */
  @media screen and (max-width: 1024px) {
    .comparison-table-v2__heading-{{ section_id }} {
      font-size: calc({{ section.settings.heading_size }}px * 0.85);
    }

    .comparison-table-v2__column-title-{{ section_id }} {
      font-size: calc({{ section.settings.column_title_size }}px * 0.9);
    }

    .comparison-table-v2__header-cell-{{ section_id }} {
      padding: {{ section.settings.tablet_header_padding }}px;
    }

    .comparison-table-v2__cell-{{ section_id }} {
      padding: {{ section.settings.tablet_cell_padding }}px;
    }

    .comparison-table-v2__icon-{{ section_id }} {
      width: calc({{ section.settings.icon_size }}px * 0.9);
      height: calc({{ section.settings.icon_size }}px * 0.9);
    }
  }

  /* Responsive - Mobile */
  @media screen and (max-width: 768px) {
    .comparison-table-v2-{{ section_id }} {
      padding: {{ section.settings.mobile_section_padding }}px 0;
    }

    .comparison-table-v2__container-{{ section_id }} {
      padding: 0 16px;
    }

    .comparison-table-v2__heading-{{ section_id }} {
      font-size: calc({{ section.settings.heading_size }}px * 0.7);
    }

    .comparison-table-v2__subheading-{{ section_id }} {
      font-size: calc({{ section.settings.subheading_size }}px * 0.9);
    }

    .comparison-table-v2__wrapper-{{ section_id }} {
      overflow-x: auto;
      -webkit-overflow-scrolling: touch;
      margin: 0 -16px;
      padding: 0 16px;
      scrollbar-width: none;
      -ms-overflow-style: none;
    }

    .comparison-table-v2__wrapper-{{ section_id }}::-webkit-scrollbar {
      display: none;
    }

    .comparison-table-v2__table-{{ section_id }} {
      min-width: {{ section.settings.mobile_table_min_width }}px;
    }

    .comparison-table-v2__header-cell-{{ section_id }} {
      padding: {{ section.settings.mobile_header_padding }}px;
    }

    .comparison-table-v2__cell-{{ section_id }} {
      padding: {{ section.settings.mobile_cell_padding }}px;
    }

    .comparison-table-v2__column-title-{{ section_id }} {
      font-size: calc({{ section.settings.column_title_size }}px * 0.8);
    }

    .comparison-table-v2__column-subtitle-{{ section_id }} {
      font-size: calc({{ section.settings.column_subtitle_size }}px * 0.85);
    }

    .comparison-table-v2__cell-{{ section_id }}:first-child {
      font-size: calc({{ section.settings.row_label_size }}px * 0.9);
    }

    .comparison-table-v2__icon-{{ section_id }} {
      width: calc({{ section.settings.icon_size }}px * 0.75);
      height: calc({{ section.settings.icon_size }}px * 0.75);
    }

    .comparison-table-v2__badge-{{ section_id }} {
      font-size: 9px;
      padding: 3px 10px;
    }

    .comparison-table-v2__column-icon-{{ section_id }} {
      width: calc({{ section.settings.column_icon_size }}px * 0.7);
      height: calc({{ section.settings.column_icon_size }}px * 0.7);
      margin-bottom: 8px;
    }

    /* Scroll indicator */
    .comparison-table-v2__scroll-hint-{{ section_id }} {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 6px;
      margin-top: 12px;
      color: {{ section.settings.text_color }};
      font-size: 12px;
      opacity: 0.6;
    }

    .comparison-table-v2__scroll-hint-{{ section_id }} svg {
      width: 16px;
      height: 16px;
      animation: scrollHint-{{ section_id }} 1.5s ease-in-out infinite;
    }

    @keyframes scrollHint-{{ section_id }} {
      0%, 100% { transform: translateX(0); }
      50% { transform: translateX(4px); }
    }
  }

  @media screen and (min-width: 769px) {
    .comparison-table-v2__scroll-hint-{{ section_id }} {
      display: none;
    }
  }
{% endstyle %}

<section
  class="comparison-table-v2-{{ section_id }}"
  {{ section.shopify_attributes }}
>
  <div class="comparison-table-v2__container-{{ section_id }}">

    {% if section.settings.eyebrow != blank or section.settings.heading != blank or section.settings.subheading != blank %}
      <div class="comparison-table-v2__header-{{ section_id }}">
        {% if section.settings.eyebrow != blank %}
          <span class="comparison-table-v2__eyebrow-{{ section_id }}">{{ section.settings.eyebrow }}</span>
        {% endif %}
        {% if section.settings.heading != blank %}
          <h2 class="comparison-table-v2__heading-{{ section_id }}">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <p class="comparison-table-v2__subheading-{{ section_id }}">{{ section.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="comparison-table-v2__wrapper-{{ section_id }}">
      <table class="comparison-table-v2__table-{{ section_id }}">
        <thead>
          <tr class="comparison-table-v2__header-row-{{ section_id }}">
            <th class="comparison-table-v2__header-cell-{{ section_id }}">
              {% if section.settings.feature_column_title != blank %}
                <span class="comparison-table-v2__column-title-{{ section_id }}">{{ section.settings.feature_column_title }}</span>
              {% endif %}
            </th>

            <th class="comparison-table-v2__header-cell-{{ section_id }} highlight">
              {% if section.settings.show_badge %}
                <span class="comparison-table-v2__badge-{{ section_id }}">{{ section.settings.badge_text }}</span>
              {% endif %}
              {% if section.settings.column_1_icon != blank %}
                <div class="comparison-table-v2__column-icon-{{ section_id }}">
                  <img 
                    src="{{ section.settings.column_1_icon | image_url: width: 100 }}" 
                    alt="{{ section.settings.column_1_title }}"
                    width="50"
                    height="50"
                    loading="lazy"
                  >
                </div>
              {% endif %}
              <h3 class="comparison-table-v2__column-title-{{ section_id }}">
                {{ section.settings.column_1_title }}
              </h3>
              {% if section.settings.column_1_subtitle != blank %}
                <p class="comparison-table-v2__column-subtitle-{{ section_id }}">
                  {{ section.settings.column_1_subtitle }}
                </p>
              {% endif %}
            </th>

            <th class="comparison-table-v2__header-cell-{{ section_id }}">
              {% if section.settings.column_2_icon != blank %}
                <div class="comparison-table-v2__column-icon-{{ section_id }}">
                  <img 
                    src="{{ section.settings.column_2_icon | image_url: width: 100 }}" 
                    alt="{{ section.settings.column_2_title }}"
                    width="50"
                    height="50"
                    loading="lazy"
                  >
                </div>
              {% endif %}
              <h3 class="comparison-table-v2__column-title-{{ section_id }}">
                {{ section.settings.column_2_title }}
              </h3>
              {% if section.settings.column_2_subtitle != blank %}
                <p class="comparison-table-v2__column-subtitle-{{ section_id }}">
                  {{ section.settings.column_2_subtitle }}
                </p>
              {% endif %}
            </th>

            <th class="comparison-table-v2__header-cell-{{ section_id }}">
              {% if section.settings.column_3_icon != blank %}
                <div class="comparison-table-v2__column-icon-{{ section_id }}">
                  <img 
                    src="{{ section.settings.column_3_icon | image_url: width: 100 }}" 
                    alt="{{ section.settings.column_3_title }}"
                    width="50"
                    height="50"
                    loading="lazy"
                  >
                </div>
              {% endif %}
              <h3 class="comparison-table-v2__column-title-{{ section_id }}">
                {{ section.settings.column_3_title }}
              </h3>
              {% if section.settings.column_3_subtitle != blank %}
                <p class="comparison-table-v2__column-subtitle-{{ section_id }}">
                  {{ section.settings.column_3_subtitle }}
                </p>
              {% endif %}
            </th>
          </tr>
        </thead>
        <tbody>
          {% for i in (1..10) %}
            {% liquid
              assign row_label_key = 'row_' | append: i | append: '_label'
              assign row_col1_key = 'row_' | append: i | append: '_col1'
              assign row_col2_key = 'row_' | append: i | append: '_col2'
              assign row_col3_key = 'row_' | append: i | append: '_col3'
              assign row_col1_text_key = 'row_' | append: i | append: '_col1_text'
              assign row_col2_text_key = 'row_' | append: i | append: '_col2_text'
              assign row_col3_text_key = 'row_' | append: i | append: '_col3_text'

              assign row_label = section.settings[row_label_key]
              assign row_col1 = section.settings[row_col1_key]
              assign row_col2 = section.settings[row_col2_key]
              assign row_col3 = section.settings[row_col3_key]
              assign row_col1_text = section.settings[row_col1_text_key]
              assign row_col2_text = section.settings[row_col2_text_key]
              assign row_col3_text = section.settings[row_col3_text_key]
            %}

            {% if row_label != blank %}
              <tr class="comparison-table-v2__row-{{ section_id }}">
                <td class="comparison-table-v2__cell-{{ section_id }}">
                  {{ row_label }}
                </td>

                <td class="comparison-table-v2__cell-{{ section_id }} highlight">
                  {% if row_col1 == 'check' %}
                    <span class="comparison-table-v2__icon-{{ section_id }} check">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="20 6 9 17 4 12"></polyline>
                      </svg>
                    </span>
                  {% elsif row_col1 == 'empty' %}
                    <span class="comparison-table-v2__icon-{{ section_id }} empty"></span>
                  {% elsif row_col1 == 'partial' %}
                    <span class="comparison-table-v2__icon-{{ section_id }} partial"></span>
                  {% elsif row_col1 == 'text' and row_col1_text != blank %}
                    <span class="comparison-table-v2__cell-text-{{ section_id }}">{{ row_col1_text }}</span>
                  {% endif %}
                </td>

                <td class="comparison-table-v2__cell-{{ section_id }}">
                  {% if row_col2 == 'check' %}
                    <span class="comparison-table-v2__icon-{{ section_id }} check">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="20 6 9 17 4 12"></polyline>
                      </svg>
                    </span>
                  {% elsif row_col2 == 'empty' %}
                    <span class="comparison-table-v2__icon-{{ section_id }} empty"></span>
                  {% elsif row_col2 == 'partial' %}
                    <span class="comparison-table-v2__icon-{{ section_id }} partial"></span>
                  {% elsif row_col2 == 'text' and row_col2_text != blank %}
                    <span class="comparison-table-v2__cell-text-{{ section_id }}">{{ row_col2_text }}</span>
                  {% endif %}
                </td>

                <td class="comparison-table-v2__cell-{{ section_id }}">
                  {% if row_col3 == 'check' %}
                    <span class="comparison-table-v2__icon-{{ section_id }} check">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                        <polyline points="20 6 9 17 4 12"></polyline>
                      </svg>
                    </span>
                  {% elsif row_col3 == 'empty' %}
                    <span class="comparison-table-v2__icon-{{ section_id }} empty"></span>
                  {% elsif row_col3 == 'partial' %}
                    <span class="comparison-table-v2__icon-{{ section_id }} partial"></span>
                  {% elsif row_col3 == 'text' and row_col3_text != blank %}
                    <span class="comparison-table-v2__cell-text-{{ section_id }}">{{ row_col3_text }}</span>
                  {% endif %}
                </td>
              </tr>
            {% endif %}
          {% endfor %}
        </tbody>
      </table>
    </div>

    <div class="comparison-table-v2__scroll-hint-{{ section_id }}">
      <span>Desliza para ver más</span>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="9 18 15 12 9 6"></polyline>
      </svg>
    </div>

    {% if section.settings.show_bottom_image and section.settings.bottom_image %}
      <div class="comparison-table-v2__bottom-image-{{ section_id }}">
        <div class="comparison-table-v2__bottom-image-wrapper-{{ section_id }}">
          <img
            src="{{ section.settings.bottom_image | image_url: width: 1200 }}"
            srcset="
              {{ section.settings.bottom_image | image_url: width: 600 }} 600w,
              {{ section.settings.bottom_image | image_url: width: 900 }} 900w,
              {{ section.settings.bottom_image | image_url: width: 1200 }} 1200w
            "
            sizes="(max-width: 768px) 100vw, {{ section.settings.bottom_image_max_width }}px"
            alt="{{ section.settings.bottom_image.alt | escape }}"
            class="comparison-table-v2__bottom-image-img-{{ section_id }}"
            loading="lazy"
            width="{{ section.settings.bottom_image.width }}"
            height="{{ section.settings.bottom_image.height }}"
          >
        </div>
      </div>
    {% endif %}

  </div>
</section>

{% schema %}
{
  "name": "Comparison Table v2",
  "tag": "section",
  "class": "comparison-table-v2-section",
  "settings": [
    {
      "type": "header",
      "content": "━━━ LAYOUT ━━━"
    },
    {
      "type": "range",
      "id": "container_padding",
      "min": 0,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Container side padding",
      "default": 20,
      "info": "El ancho máximo usa la variable del tema (--page-width)"
