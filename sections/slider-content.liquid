{% assign section_id = section.id | replace: '_', '' | replace: '-', '' | slice: 0, 8 %}

{% style %}
  /* === SECCIÓN PRINCIPAL === */
  .sc-section-{{ section_id }} {
    display: block;
    width: 100%;
    background-color: {{ section.settings.section_background_color }};
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_x }}px {{ section.settings.section_padding_bottom }}px;
  }

  .sc-wrapper-{{ section_id }} {
    max-width: {{ section.settings.section_max_width }}px;
    margin: 0 auto;
    {% if section.settings.wrapper_border_radius > 0 %}
    border-radius: {{ section.settings.wrapper_border_radius }}px;
    overflow: hidden;
    {% endif %}
    {% if section.settings.wrapper_shadow %}
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.10);
    {% endif %}
    {% if section.settings.wrapper_border_width > 0 %}
    border: {{ section.settings.wrapper_border_width }}px solid {{ section.settings.wrapper_border_color }};
    {% endif %}
    background-color: {{ section.settings.wrapper_bg_color }};
  }

  /* === LAYOUT DOS COLUMNAS === */
  .sc-container-{{ section_id }} {
    display: flex;
    flex-direction: {% if section.settings.image_position == 'right' %}row-reverse{% else %}row{% endif %};
    min-height: {{ section.settings.section_min_height }}px;
  }

  /* =============================================
     COLUMNA SLIDER
  ============================================= */
  .sc-slider-col-{{ section_id }} {
    flex: 0 0 {{ section.settings.image_column_width }}%;
    position: relative;
    background-color: {{ section.settings.slider_bg_color }};
    overflow: hidden;
  }

  /* Track */
  .sc-track-{{ section_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: {{ section.settings.section_min_height }}px;
  }

  /* Slides */
  .sc-slide-{{ section_id }} {
    position: absolute;
    inset: 0;
    opacity: 0;
    transition: opacity {{ section.settings.transition_duration }}ms ease;
    z-index: 1;
  }

  .sc-slide-{{ section_id }}.active {
    opacity: 1;
    z-index: 2;
  }

  .sc-slide-{{ section_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: {{ section.settings.image_object_position }};
    display: block;
  }

  /* Placeholder */
  .sc-placeholder-{{ section_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f0f0f0, #e0e0e0);
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: {{ section.settings.section_min_height }}px;
  }
  .sc-placeholder-{{ section_id }} svg { width: 100px; height: 100px; opacity: 0.35; }

  /* Overlay */
  .sc-overlay-{{ section_id }} {
    position: absolute;
    inset: 0;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    pointer-events: none;
    z-index: 3;
  }

  /* Flechas */
  .sc-arrow-{{ section_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    width: {{ section.settings.arrow_size }}px;
    height: {{ section.settings.arrow_size }}px;
    border-radius: {{ section.settings.arrow_radius }}px;
    background-color: {{ section.settings.arrow_bg }};
    border: {{ section.settings.arrow_border_width }}px solid {{ section.settings.arrow_border_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    padding: 0;
    opacity: {{ section.settings.arrow_opacity | divided_by: 100.0 }};
    transition: opacity 0.2s ease, transform 0.2s ease, background-color 0.2s ease;
  }
  .sc-arrow-{{ section_id }}:hover {
    opacity: 1;
    background-color: {{ section.settings.arrow_bg_hover }};
    transform: translateY(-50%) scale(1.06);
  }
  .sc-arrow-{{ section_id }} svg {
    width: {{ section.settings.arrow_icon_size }}px;
    height: {{ section.settings.arrow_icon_size }}px;
    fill: none;
    stroke: {{ section.settings.arrow_icon_color }};
    stroke-width: 2;
    stroke-linecap: round;
    stroke-linejoin: round;
  }
  .sc-arrow-prev-{{ section_id }} { left: {{ section.settings.arrow_offset }}px; }
  .sc-arrow-next-{{ section_id }} { right: {{ section.settings.arrow_offset }}px; }

  /* Dots */
  .sc-dots-{{ section_id }} {
    position: absolute;
    bottom: {{ section.settings.dots_bottom }}px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: {{ section.settings.dots_gap }}px;
    z-index: 10;
  }
  .sc-dot-{{ section_id }} {
    width: {{ section.settings.dot_size }}px;
    height: {{ section.settings.dot_size }}px;
    border-radius: 50%;
    background-color: {{ section.settings.dot_color }};
    opacity: {{ section.settings.dot_opacity | divided_by: 100.0 }};
    border: none;
    padding: 0;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  .sc-dot-{{ section_id }}:hover { opacity: 0.85; transform: scale(1.2); }
  .sc-dot-{{ section_id }}.active {
    background-color: {{ section.settings.dot_active_color }};
    opacity: 1;
    transform: scale(1.3);
  }

  /* =============================================
     COLUMNA CONTENIDO
  ============================================= */
  .sc-content-col-{{ section_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: {{ section.settings.content_valign }};
    padding: {{ section.settings.content_padding_top }}px {{ section.settings.content_padding_right }}px {{ section.settings.content_padding_bottom }}px {{ section.settings.content_padding_left }}px;
    background-color: {{ section.settings.content_bg_color }};
  }

  .sc-content-inner-{{ section_id }} {
    max-width: {{ section.settings.content_max_width }}px;
  }

  /* Eyebrow / Subtítulo superior */
  .sc-eyebrow-{{ section_id }} {
    display: block;
    font-size: {{ section.settings.eyebrow_size }}px;
    font-weight: {{ section.settings.eyebrow_weight }};
    color: {{ section.settings.eyebrow_color }};
    letter-spacing: {{ section.settings.eyebrow_letter_spacing }}px;
    margin-bottom: {{ section.settings.eyebrow_margin_bottom }}px;
    {% if section.settings.eyebrow_uppercase %}text-transform: uppercase;{% endif %}
  }

  /* Título */
  .sc-title-{{ section_id }} {
    font-size: {{ section.settings.title_size }}px;
    font-weight: {{ section.settings.title_weight }};
    color: {{ section.settings.title_color }};
    line-height: {{ section.settings.title_line_height }};
    letter-spacing: {{ section.settings.title_letter_spacing }}px;
    margin: 0 0 {{ section.settings.title_margin_bottom }}px 0;
  }

  /* Subtítulo */
  .sc-subtitle-{{ section_id }} {
    font-size: {{ section.settings.subtitle_size }}px;
    font-weight: {{ section.settings.subtitle_weight }};
    color: {{ section.settings.subtitle_color }};
    line-height: 1.4;
    margin: 0 0 {{ section.settings.subtitle_margin_bottom }}px 0;
  }

  /* Párrafo */
  .sc-paragraph-{{ section_id }} {
    font-size: {{ section.settings.paragraph_size }}px;
    color: {{ section.settings.paragraph_color }};
    line-height: {{ section.settings.paragraph_line_height }};
    margin: 0;
  }

  .sc-paragraph-{{ section_id }} p { margin: 0 0 1em 0; }
  .sc-paragraph-{{ section_id }} p:last-child { margin-bottom: 0; }

  /* =============================================
     RESPONSIVE
  ============================================= */
  @media screen and (max-width: 990px) {
    .sc-section-{{ section_id }} {
      padding: {{ section.settings.section_padding_top_mobile }}px {{ section.settings.section_padding_x_mobile }}px {{ section.settings.section_padding_bottom_mobile }}px;
    }
    .sc-wrapper-{{ section_id }} {
      {% if section.settings.wrapper_border_radius_mobile > 0 %}
      border-radius: {{ section.settings.wrapper_border_radius_mobile }}px;
      {% else %}
      border-radius: 0;
      {% endif %}
    }
    .sc-container-{{ section_id }} {
      flex-direction: {% if section.settings.mobile_image_position == 'bottom' %}column-reverse{% else %}column{% endif %};
      min-height: auto;
    }
    .sc-slider-col-{{ section_id }} {
      flex: none;
      width: 100%;
      height: {{ section.settings.mobile_slider_height }}px;
    }
    .sc-track-{{ section_id }} {
      min-height: {{ section.settings.mobile_slider_height }}px;
    }
    .sc-placeholder-{{ section_id }} {
      min-height: {{ section.settings.mobile_slider_height }}px;
    }
    .sc-content-col-{{ section_id }} {
      padding: {{ section.settings.mobile_content_padding }}px;
    }
    .sc-title-{{ section_id }} {
      font-size: {{ section.settings.title_size_mobile }}px;
    }
    .sc-subtitle-{{ section_id }} {
      font-size: {{ section.settings.subtitle_size | times: 0.9 | round }}px;
    }
    .sc-paragraph-{{ section_id }} {
      font-size: {{ section.settings.paragraph_size | times: 0.95 | round }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .sc-slider-col-{{ section_id }} {
      height: {{ section.settings.mobile_slider_height | times: 0.8 | round }}px;
    }
    .sc-title-{{ section_id }} {
      font-size: {{ section.settings.title_size_mobile | times: 0.85 | round }}px;
    }
    {% if section.settings.hide_arrows_mobile %}
    .sc-arrow-{{ section_id }} { display: none; }
    {% endif %}
  }

  @media (prefers-reduced-motion: reduce) {
    .sc-slide-{{ section_id }},
    .sc-dot-{{ section_id }},
    .sc-arrow-{{ section_id }} { transition: none; }
  }
{% endstyle %}

{%- liquid
  assign slide_count = 0
  for block in section.blocks
    if block.type == 'slide'
      assign slide_count = slide_count | plus: 1
    endif
  endfor
-%}

<section class="sc-section-{{ section_id }}">
  <div class="sc-wrapper-{{ section_id }}">
    <div class="sc-container-{{ section_id }}">

      <!-- ── Columna Slider ── -->
      <div class="sc-slider-col-{{ section_id }}">
        <div class="sc-track-{{ section_id }}" data-sc-track>

          {% if section.blocks.size == 0 %}
            <div class="sc-slide-{{ section_id }} active" data-slide-index="0">
              <div class="sc-placeholder-{{ section_id }}">{{ 'image' | placeholder_svg_tag }}</div>
            </div>
          {% else %}
            {% for block in section.blocks %}
              {% if block.type == 'slide' %}
                <div class="sc-slide-{{ section_id }}{% if forloop.first %} active{% endif %}"
                     data-slide-index="{{ forloop.index0 }}"
                     {{ block.shopify_attributes }}>
                  {% if block.settings.image != blank %}
                    <img
                      src="{{ block.settings.image | image_url: width: 1400 }}"
                      srcset="
                        {{ block.settings.image | image_url: width: 600 }}  600w,
                        {{ block.settings.image | image_url: width: 900 }}  900w,
                        {{ block.settings.image | image_url: width: 1200 }} 1200w,
                        {{ block.settings.image | image_url: width: 1600 }} 1600w"
                      sizes="(max-width: 990px) 100vw, {{ section.settings.image_column_width }}vw"
                      alt="{{ block.settings.image.alt | default: '' | escape }}"
                      loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                      width="{{ block.settings.image.width }}"
                      height="{{ block.settings.image.height }}">
                  {% else %}
                    <div class="sc-placeholder-{{ section_id }}">{{ 'image' | placeholder_svg_tag }}</div>
                  {% endif %}
                </div>
              {% endif %}
            {% endfor %}
          {% endif %}

          {% if section.settings.show_overlay %}
            <div class="sc-overlay-{{ section_id }}"></div>
          {% endif %}

          {% if slide_count > 1 and section.settings.show_arrows %}
            <button class="sc-arrow-{{ section_id }} sc-arrow-prev-{{ section_id }}"
                    data-sc-prev type="button" aria-label="Imagen anterior">
              <svg viewBox="0 0 24 24" aria-hidden="true"><polyline points="15 18 9 12 15 6"></polyline></svg>
            </button>
            <button class="sc-arrow-{{ section_id }} sc-arrow-next-{{ section_id }}"
                    data-sc-next type="button" aria-label="Imagen siguiente">
              <svg viewBox="0 0 24 24" aria-hidden="true"><polyline points="9 18 15 12 9 6"></polyline></svg>
            </button>
          {% endif %}

        </div>

        {% if slide_count > 1 and section.settings.show_dots %}
          <div class="sc-dots-{{ section_id }}" data-sc-dots role="tablist">
            {% assign di = 0 %}
            {% for block in section.blocks %}
              {% if block.type == 'slide' %}
                <button class="sc-dot-{{ section_id }}{% if forloop.first %} active{% endif %}"
                        data-dot="{{ di }}" role="tab"
                        aria-label="Ir a imagen {{ di | plus: 1 }}"
                        aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
                        type="button"></button>
                {% assign di = di | plus: 1 %}
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}
      </div>

      <!-- ── Columna Contenido ── -->
      <div class="sc-content-col-{{ section_id }}">
        <div class="sc-content-inner-{{ section_id }}">

          {% if section.settings.eyebrow != blank %}
            <span class="sc-eyebrow-{{ section_id }}">{{ section.settings.eyebrow }}</span>
          {% endif %}

          {% if section.settings.title != blank %}
            <h2 class="sc-title-{{ section_id }}">{{ section.settings.title }}</h2>
          {% endif %}

          {% if section.settings.subtitle != blank %}
            <p class="sc-subtitle-{{ section_id }}">{{ section.settings.subtitle }}</p>
          {% endif %}

          {% if section.settings.paragraph != blank %}
            <div class="sc-paragraph-{{ section_id }}">{{ section.settings.paragraph }}</div>
          {% endif %}

        </div>
      </div>

    </div>
  </div>
</section>

<script>
(function () {
  const section = document.querySelector('.sc-section-{{ section_id }}');
  if (!section) return;

  const slides  = Array.from(section.querySelectorAll('.sc-slide-{{ section_id }}'));
  const dots    = Array.from(section.querySelectorAll('[data-dot]'));
  const prevBtn = section.querySelector('[data-sc-prev]');
  const nextBtn = section.querySelector('[data-sc-next]');

  if (slides.length <= 1) return;

  const autoplay      = {{ section.settings.autoplay | json }};
  const autoplayDelay = {{ section.settings.autoplay_delay }};

  let current = 0;
  let timer   = null;

  function goTo(i) {
    if (i < 0) i = slides.length - 1;
    if (i >= slides.length) i = 0;

    slides[current].classList.remove('active');
    if (dots[current]) {
      dots[current].classList.remove('active');
      dots[current].setAttribute('aria-selected', 'false');
    }

    current = i;

    slides[current].classList.add('active');
    if (dots[current]) {
      dots[current].classList.add('active');
      dots[current].setAttribute('aria-selected', 'true');
    }
  }

  function startTimer() {
    if (!autoplay) return;
    stopTimer();
    timer = setInterval(() => goTo(current + 1), autoplayDelay);
  }
  function stopTimer() { if (timer) { clearInterval(timer); timer = null; } }

  if (prevBtn) prevBtn.addEventListener('click', () => { stopTimer(); goTo(current - 1); setTimeout(startTimer, autoplayDelay * 2); });
  if (nextBtn) nextBtn.addEventListener('click', () => { stopTimer(); goTo(current + 1); setTimeout(startTimer, autoplayDelay * 2); });

  dots.forEach((d) => {
    d.addEventListener('click', () => {
      stopTimer();
      goTo(parseInt(d.dataset.dot, 10));
      setTimeout(startTimer, autoplayDelay * 2);
    });
  });

  /* Pausa hover */
  const sliderCol = section.querySelector('.sc-slider-col-{{ section_id }}');
  if (sliderCol) {
    sliderCol.addEventListener('mouseenter', stopTimer);
    sliderCol.addEventListener('mouseleave', startTimer);
  }

  /* Swipe */
  let tx = 0;
  const track = section.querySelector('[data-sc-track]');
  if (track) {
    track.addEventListener('touchstart', e => { tx = e.changedTouches[0].screenX; stopTimer(); }, { passive: true });
    track.addEventListener('touchend',   e => {
      const diff = tx - e.changedTouches[0].screenX;
      if (Math.abs(diff) > 50) goTo(diff > 0 ? current + 1 : current - 1);
      setTimeout(startTimer, autoplayDelay * 2);
    }, { passive: true });
  }

  /* Teclado */
  section.addEventListener('keydown', e => {
    if (e.key === 'ArrowLeft')  { stopTimer(); goTo(current - 1); setTimeout(startTimer, autoplayDelay * 2); }
    if (e.key === 'ArrowRight') { stopTimer(); goTo(current + 1); setTimeout(startTimer, autoplayDelay * 2); }
  });

  /* Inicio */
  document.readyState === 'loading'
    ? document.addEventListener('DOMContentLoaded', startTimer)
    : startTimer();

  window.addEventListener('beforeunload', stopTimer);
})();
</script>

{% schema %}
{
  "name": "Slider + Contenido",
  "tag": "section",
  "class": "section-slider-content",
  "settings": [
    {
      "type": "header",
      "content": "── Contenedor ──"
    },
    {
      "type": "range",
      "id": "section_max_width",
      "label": "Ancho máximo",
      "min": 800,
      "max": 1920,
      "step": 40,
      "unit": "px",
      "default": 1400
    },
    {
      "type": "color",
      "id": "section_background_color",
      "label": "Fondo exterior",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "label": "Padding superior",
      "min": 0,
      "max": 120,
      "step": 10,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "label": "Padding inferior",
      "min": 0,
      "max": 120,
      "step": 10,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "section_padding_x",
      "label": "Padding horizontal",
      "min": 0,
      "max": 80,
      "step": 10,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "section_min_height",
      "label": "Altura mínima",
      "min": 300,
      "max": 900,
      "step": 50,
      "unit": "px",
      "default": 550
    },
    {
      "type": "header",
      "content": "── Wrapper ──"
    },
    {
      "type": "color",
      "id": "wrapper_bg_color",
      "label": "Color de fondo",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "wrapper_border_radius",
      "label": "Radio de borde (desktop)",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "wrapper_border_radius_mobile",
      "label": "Radio de borde (móvil)",
      "min": 0,
      "max": 24,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "wrapper_border_width",
      "label": "Grosor de borde",
      "min": 0,
      "max": 4,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    {
      "type": "color",
      "id": "wrapper_border_color",
      "label": "Color de borde",
      "default": "#e0e0e0"
    },
    {
      "type": "checkbox",
      "id": "wrapper_shadow",
      "label": "Mostrar sombra",
      "default": false
    },
    {
      "type": "header",
      "content": "── Layout ──"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Posición del slider (desktop)",
      "options": [
        { "value": "left",  "label": "Izquierda" },
        { "value": "right", "label": "Derecha"   }
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "mobile_image_position",
      "label": "Posición del slider (móvil)",
      "options": [
        { "value": "top",    "label": "Arriba" },
        { "value": "bottom", "label": "Abajo"  }
      ],
      "default": "top"
    },
    {
      "type": "range",
      "id": "image_column_width",
      "label": "Ancho columna slider (%)",
      "min": 30,
      "max": 65,
      "step": 5,
      "unit": "%",
      "default": 50
    },
    {
      "type": "header",
      "content": "── Slider - Imagen ──"
    },
    {
      "type": "color",
      "id": "slider_bg_color",
      "label": "Fondo del slider",
      "default": "#f0f0f0"
    },
    {
      "type": "select",
      "id": "image_object_position",
      "label": "Foco de imagen",
      "options": [
        { "value": "center center", "label": "Centro"    },
        { "value": "top center",    "label": "Arriba"    },
        { "value": "bottom center", "label": "Abajo"     },
        { "value": "center left",   "label": "Izquierda" },
        { "value": "center right",  "label": "Derecha"   }
      ],
      "default": "center center"
    },
    {
      "type": "range",
      "id": "transition_duration",
      "label": "Duración transición",
      "min": 200,
      "max": 1200,
      "step": 100,
      "unit": "ms",
      "default": 500
    },
    {
      "type": "header",
      "content": "── Overlay ──"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Mostrar overlay",
      "default": false
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Opacidad",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "default": 20
    },
    {
      "type": "header",
      "content": "── Flechas ──"
    },
    {
      "type": "checkbox",
      "id": "show_arrows",
      "label": "Mostrar flechas",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "hide_arrows_mobile",
      "label": "Ocultar flechas en móvil",
      "default": false
    },
    {
      "type": "range",
      "id": "arrow_size",
      "label": "Tamaño botón",
      "min": 32,
      "max": 72,
      "step": 4,
      "unit": "px",
      "default": 44
    },
    {
      "type": "range",
      "id": "arrow_icon_size",
      "label": "Tamaño ícono",
      "min": 14,
      "max": 32,
      "step": 2,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "arrow_offset",
      "label": "Distancia del borde",
      "min": 8,
      "max": 40,
      "step": 4,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "arrow_opacity",
      "label": "Opacidad",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 85
    },
    {
      "type": "range",
      "id": "arrow_radius",
      "label": "Radio de borde",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "arrow_border_width",
      "label": "Grosor borde",
      "min": 0,
