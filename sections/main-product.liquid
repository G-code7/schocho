{% comment %}
  sections/product-chocho.liquid
  Product page estilo Ka'Chava
{% endcomment %}

<div class="product-chocho page-width">
  <div class="product-chocho__grid">
    
    {% comment %} Galería de imágenes {% endcomment %}
    <div class="product-chocho__media">
      <img 
        src="{{ product.featured_image | image_url: width: 800 }}" 
        alt="{{ product.featured_image.alt | escape }}"
        class="product-chocho__main-image"
        data-main-image
        width="600"
        height="600"
      >
    </div>
    
    {% comment %} Información del producto {% endcomment %}
    <div class="product-chocho__info">
      
      {% comment %} Badge de confianza {% endcomment %}
      <div class="product-chocho__trust-badges">
        <span>✓ 30-Day Money Back</span>
        <span>✓ Free Shipping</span>
      </div>
      
      <h1 class="product-chocho__title">{{ product.title }}</h1>
      
      <div class="product-chocho__rating">
        ⭐⭐⭐⭐⭐ (4.8/5 from 2,000+ reviews)
      </div>
      
      {% comment %} Precio dinámico {% endcomment %}
      <div class="product-chocho__price" data-price-container>
        <span class="product-chocho__compare" data-compare-price>
          {{ product.selected_or_first_available_variant.compare_at_price | money }}
        </span>
        <span class="product-chocho__current" data-current-price>
          {{ product.selected_or_first_available_variant.price | money }}
        </span>
      </div>
      
      {% comment %} Formulario de compra {% endcomment %}
      {% render 'product-form-complete', product: product %}
      
      {% comment %} Beneficios del producto {% endcomment %}
      <div class="product-chocho__benefits">
        <h3>Why Choose {{ product.title }}?</h3>
        <ul>
          <li>✓ 85+ Superfoods & Nutrients</li>
          <li>✓ Plant-Based Protein</li>
          <li>✓ No Artificial Sweeteners</li>
          <li>✓ Gluten-Free & Soy-Free</li>
        </ul>
      </div>
      
    </div>
  </div>
</div>

<style>
  .product-chocho {
    padding: 40px 20px;
  }
  
  .product-chocho__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .product-chocho__media {
    position: sticky;
    top: 20px;
    height: fit-content;
  }
  
  .product-chocho__main-image {
    width: 100%;
    height: auto;
    border-radius: 12px;
  }
  
  .product-chocho__trust-badges {
    display: flex;
    gap: 16px;
    margin-bottom: 16px;
    font-size: 12px;
    color: #4A6B1A;
    font-weight: 600;
  }
  
  .product-chocho__title {
    font-size: 32px;
    font-weight: 800;
    margin-bottom: 12px;
    line-height: 1.2;
  }
  
  .product-chocho__rating {
    color: #f5a623;
    font-size: 14px;
    margin-bottom: 16px;
  }
  
  .product-chocho__price {
    margin-bottom: 24px;
  }
  
  .product-chocho__compare {
    font-size: 20px;
    color: #999;
    text-decoration: line-through;
    margin-right: 12px;
  }
  
  .product-chocho__current {
    font-size: 28px;
    font-weight: 700;
    color: #4A6B1A;
  }
  
  .product-chocho__add-btn {
    width: 100%;
    padding: 18px 32px;
    background: #1a1a1a;
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 700;
    text-transform: uppercase;
    cursor: pointer;
    margin-top: 20px;
    transition: all 0.2s;
  }
  
  .product-chocho__add-btn:hover {
    background: #333;
    transform: translateY(-2px);
  }
  
  .product-chocho__benefits {
    margin-top: 32px;
    padding-top: 32px;
    border-top: 1px solid #e6e6e6;
  }
  
  .product-chocho__benefits h3 {
    font-size: 18px;
    margin-bottom: 16px;
  }
  
  .product-chocho__benefits ul {
    list-style: none;
    padding: 0;
  }
  
  .product-chocho__benefits li {
    padding: 8px 0;
    color: #555;
  }
  
  @media (max-width: 768px) {
    .product-chocho__grid {
      grid-template-columns: 1fr;
      gap: 32px;
    }
    
    .product-chocho__media {
      position: static;
    }
  }
</style>

<script>
// Actualizar precio cuando cambia la variante
document.addEventListener('variant:change', function(e) {
  const currentPrice = document.querySelector('[data-current-price]');
  const comparePrice = document.querySelector('[data-compare-price]');
  const addBtn = document.querySelector('[data-add-to-cart]');
  
  if (currentPrice) {
    currentPrice.textContent = formatMoney(e.detail.price);
  }
  if (comparePrice && e.detail.comparePrice !== e.detail.price) {
    comparePrice.textContent = formatMoney(e.detail.comparePrice);
  }
  if (addBtn) {
    addBtn.textContent = 'Add to Cart - ' + formatMoney(e.detail.price);
  }
});

function formatMoney(cents) {
  return new Intl.NumberFormat('{{ shop.locale }}', {
    style: 'currency',
    currency: '{{ shop.currency }}'
  }).format(cents / 100);
}
</script>

