{%- comment -%} 
  Product Showcase Section
  Displays products in a two-column layout with background images
{%- endcomment -%}

{{ 'component-product-showcase.css' | asset_url | stylesheet_tag }}

{%- style -%}
  /* Aqu√≠ ir√°n los estilos din√°micos basados en configuraciones */
{%- endstyle -%}

<section class="product-showcase section-{{ section.id }}" id="product-showcase-{{ section.id }}">
  <div class="product-showcase__container">
    
    <!-- LEFT COLUMN - Product Info -->
    <div class="product-showcase__left">
      {%- for block in section.blocks -%}
        {%- assign product = block.settings.product -%}
        {%- if product != blank -%}
          <div class="product-showcase__bg {% if forloop.first %}is-active{% endif %}" 
               data-bg="{{ forloop.index0 }}"
               style="background: linear-gradient(135deg, {{ block.settings.gradient_start }} 0%, {{ block.settings.gradient_end }} 100%);">
          </div>
        {%- endif -%}
      {%- endfor -%}
      
      <div class="product-showcase__content-wrapper">
        <!-- Indicators -->
        {%- for block in section.blocks -%}
          {%- assign product = block.settings.product -%}
          {%- if product != blank -%}
            <div class="product-showcase__indicator {% if forloop.first %}is-active{% endif %}" 
                 data-indicator="{{ forloop.index0 }}">
              {{ forloop.index | prepend: '00' | slice: -2, 2 }} ‚Äî {{ product.title }}
            </div>
          {%- endif -%}
        {%- endfor -%}
        
        <!-- Product Slides -->
        <div class="product-showcase__slides">
          {%- for block in section.blocks -%}
            {%- assign product = block.settings.product -%}
            {%- if product != blank -%}
              <div class="product-showcase__slide {% if forloop.first %}is-active{% endif %}" 
                   data-slide="{{ forloop.index0 }}">
                
                <div class="product-showcase__image">
                  {%- if product.featured_image != blank -%}
                    <img 
                      src="{{ product.featured_image | img_url: '800x' }}" 
                      alt="{{ product.featured_image.alt | escape }}" 
                      loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                      width="800"
                      height="{{ 800 | divided_by: product.featured_image.aspect_ratio | round }}"
                    >
                  {%- else -%}
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  {%- endif -%}
                </div>
                
                <h2 class="product-showcase__title">{{ product.title }}</h2>
                
                <p class="product-showcase__description">
                  {{ product.description | strip_html | truncatewords: 25 }}
                </p>
                
                <div class="product-showcase__price">
                  {{ product.price | money }}
                </div>
                
                <a href="{{ product.url }}" class="product-showcase__cta">
                  Comprar Ahora
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M5 12h14M12 5l7 7-7 7"/>
                  </svg>
                </a>
              </div>
            {%- endif -%}
          {%- endfor -%}
        </div>
        
        <!-- Navigation -->
        {%- if section.settings.show_navigation -%}
          <nav class="product-showcase__nav" aria-label="Product navigation">
            <button class="product-showcase__nav-arrow" data-dir="-1" aria-label="Previous product">
              <svg viewBox="0 0 24 24"><path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/></svg>
            </button>
            
            <div class="product-showcase__dots">
              {%- for block in section.blocks -%}
                {%- if block.settings.product != blank -%}
                  <button class="product-showcase__dot {% if forloop.first %}is-active{% endif %}" 
                          data-goto="{{ forloop.index0 }}" 
                          aria-label="Go to product {{ forloop.index }}">
                  </button>
                {%- endif -%}
              {%- endfor -%}
            </div>
            
            <button class="product-showcase__nav-arrow" data-dir="1" aria-label="Next product">
              <svg viewBox="0 0 24 24"><path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/></svg>
            </button>
          </nav>
        {%- endif -%}
      </div>
    </div>
    
    <!-- RIGHT COLUMN - Background Images -->
    <div class="product-showcase__right">
      {%- for block in section.blocks -%}
        {%- if block.settings.background_image != blank -%}
          <div class="product-showcase__bg-image {% if forloop.first %}is-active{% endif %}" 
               data-bg-img="{{ forloop.index0 }}">
            <img 
              src="{{ block.settings.background_image | img_url: '2000x' }}" 
              alt="{{ block.settings.hero_text | default: 'Background image' | escape }}" 
              loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
              width="2000"
              height="{{ 2000 | divided_by: block.settings.background_image.aspect_ratio | round }}"
            >
            <div class="product-showcase__hero-text">
              <h3 class="product-showcase__hero-title">{{ block.settings.hero_text }}</h3>
            </div>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
    
  </div>
</section>

<script src="{{ 'component-product-showcase.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "üè∑Ô∏è Product Showcase",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Products"
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 3333,
      "max": 9999,
      "step": 1111,
      "unit": "ms",
      "label": "Autoplay speed",
      "default": 6666
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "Show navigation",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "Auto rotate products",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "image_picker",
          "id": "background_image",
          "label": "Background image"
        },
        {
          "type": "text",
          "id": "hero_text",
          "label": "Hero text",
          "default": "Featured product"
        },
        {
          "type": "color",
          "id": "gradient_start",
          "label": "Gradient start color",
          "default": "#FF6B35"
        },
        {
          "type": "color",
          "id": "gradient_end", 
          "label": "Gradient end color",
          "default": "#FF8E53"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Showcase",
      "blocks": [
        {
          "type": "product"
        },
        {
          "type": "product"
        },
        {
          "type": "product"
        }
      ]
    }
  ]
}
{% endschema %}