      "max": 28,
      "step": 2,
      "unit": "px",
      "default": 14
    },
    {
      "type": "range",
      "id": "dots_gap",
      "label": "Espacio entre dots",
      "min": 4,
      "max": 20,
      "step": 2,
      "unit": "px",
      "default": 8
    },
    {
      "type": "range",
      "id": "dot_size",
      "label": "Tamaño",
      "min": 6,
      "max": 20,
      "step": 2,
      "unit": "px",
      "default": 10
    },
    {
      "type": "range",
      "id": "dot_border_radius",
      "label": "Radio borde",
      "min": 0,
