{% assign section_id = section.id | replace: '_', '' | replace: '-', '' | slice: 0, 8 %}

{% style %}
  .pure-slider-section-{{ section_id }} {
    display: block;
    width: 100%;
    background-color: {{ section.settings.section_background_color }};
    padding: {{ section.settings.section_padding_top }}px {{ section.settings.section_padding_x }}px {{ section.settings.section_padding_bottom }}px;
  }

  .pure-slider-wrapper-{{ section_id }} {
    max-width: {{ section.settings.section_max_width }}px;
    margin: 0 auto;
    position: relative;
    {% if section.settings.wrapper_border_radius > 0 %}border-radius: {{ section.settings.wrapper_border_radius }}px; overflow: hidden;{% endif %}
    {% if section.settings.wrapper_shadow %}box-shadow: 0 4px 24px rgba(0,0,0,0.12);{% endif %}
    {% if section.settings.wrapper_border_width > 0 %}border: {{ section.settings.wrapper_border_width }}px solid {{ section.settings.wrapper_border_color }};{% endif %}
    background-color: {{ section.settings.slider_bg_color }};
  }

  .pure-slider-track-{{ section_id }} {
    position: relative;
    width: 100%;
    height: {{ section.settings.slider_height }}px;
    overflow: hidden;
  }

  .pure-slide-{{ section_id }} {
    position: absolute; top: 0; left: 0;
    width: 100%; height: 100%;
    opacity: 0;
    transition: opacity {{ section.settings.transition_duration }}ms ease;
    z-index: 1;
  }
  .pure-slide-{{ section_id }}.active { opacity: 1; z-index: 2; }

  .pure-slide-{{ section_id }} img {
    width: 100%; height: 100%;
    object-fit: {{ section.settings.image_fit }};
    object-position: {{ section.settings.image_object_position }};
    display: block;
  }

  .pure-slide-placeholder-{{ section_id }} {
    width: 100%; height: 100%;
    background: linear-gradient(135deg, #f0f0f0 0%, #e0e0e0 100%);
    display: flex; align-items: center; justify-content: center;
  }
  .pure-slide-placeholder-{{ section_id }} svg { width: 120px; height: 120px; opacity: 0.4; }

  .pure-slider-overlay-{{ section_id }} {
    position: absolute; inset: 0;
    background: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    pointer-events: none; z-index: 3;
  }

  /* Caption */
  .pure-slide-caption-{{ section_id }} {
    position: absolute; z-index: 5;
    {% if section.settings.caption_position == 'bottom-left' %}
      bottom: {{ section.settings.caption_padding }}px; left: {{ section.settings.caption_padding }}px; text-align: left;
    {% elsif section.settings.caption_position == 'bottom-center' %}
      bottom: {{ section.settings.caption_padding }}px; left: 50%; transform: translateX(-50%); text-align: center; width: 90%;
    {% elsif section.settings.caption_position == 'bottom-right' %}
      bottom: {{ section.settings.caption_padding }}px; right: {{ section.settings.caption_padding }}px; text-align: right;
    {% elsif section.settings.caption_position == 'center' %}
      top: 50%; left: 50%; transform: translate(-50%,-50%); text-align: center; width: 80%;
    {% elsif section.settings.caption_position == 'top-left' %}
      top: {{ section.settings.caption_padding }}px; left: {{ section.settings.caption_padding }}px; text-align: left;
    {% endif %}
  }
  .pure-slide-caption-title-{{ section_id }} {
    font-size: {{ section.settings.caption_title_size }}px;
    font-weight: {{ section.settings.caption_title_weight }};
    color: {{ section.settings.caption_title_color }};
    margin: 0 0 6px 0; line-height: 1.2;
  }
  .pure-slide-caption-text-{{ section_id }} {
    font-size: {{ section.settings.caption_text_size }}px;
    color: {{ section.settings.caption_text_color }};
    margin: 0; line-height: 1.5;
  }

  /* Flechas */
  .pure-slider-arrow-{{ section_id }} {
    position: absolute; top: 50%; transform: translateY(-50%);
    z-index: 10;
    width: {{ section.settings.arrow_size }}px;
    height: {{ section.settings.arrow_size }}px;
    background-color: {{ section.settings.arrow_bg_color }};
    border: {{ section.settings.arrow_border_width }}px solid {{ section.settings.arrow_border_color }};
    border-radius: {{ section.settings.arrow_border_radius }}px;
    cursor: pointer; display: flex; align-items: center; justify-content: center;
    transition: all 0.25s ease; padding: 0;
    opacity: {{ section.settings.arrow_opacity | divided_by: 100.0 }};
  }
  .pure-slider-arrow-{{ section_id }}:hover {
    background-color: {{ section.settings.arrow_bg_hover_color }};
    opacity: 1; transform: translateY(-50%) scale(1.05);
  }
  .pure-slider-arrow-{{ section_id }} svg {
    width: {{ section.settings.arrow_icon_size }}px;
    height: {{ section.settings.arrow_icon_size }}px;
    fill: none; stroke: {{ section.settings.arrow_icon_color }};
    stroke-width: 2; stroke-linecap: round; stroke-linejoin: round;
  }
  .pure-slider-arrow-prev-{{ section_id }} { left: {{ section.settings.arrow_offset }}px; }
  .pure-slider-arrow-next-{{ section_id }} { right: {{ section.settings.arrow_offset }}px; }

  /* Dots */
  .pure-slider-dots-{{ section_id }} {
    display: flex; align-items: center; justify-content: center;
    gap: {{ section.settings.dots_gap }}px;
    padding: {{ section.settings.dots_padding_y }}px 0;
    background-color: {{ section.settings.dots_bar_bg }};
  }
  .pure-slider-dot-{{ section_id }} {
    width: {{ section.settings.dot_size }}px;
    height: {{ section.settings.dot_size }}px;
    border-radius: {{ section.settings.dot_border_radius }}px;
    background-color: {{ section.settings.dot_color }};
    opacity: {{ section.settings.dot_opacity | divided_by: 100.0 }};
    border: {{ section.settings.dot_border_width }}px solid {{ section.settings.dot_border_color }};
    padding: 0; cursor: pointer; transition: all 0.3s ease;
  }
  .pure-slider-dot-{{ section_id }}:hover {
    opacity: {{ section.settings.dot_hover_opacity | divided_by: 100.0 }};
    transform: scale(1.2);
  }
  .pure-slider-dot-{{ section_id }}.active {
    background-color: {{ section.settings.dot_active_color }};
    opacity: 1;
    transform: scale({{ section.settings.dot_active_scale | divided_by: 10.0 }});
    border-color: {{ section.settings.dot_active_border_color }};
  }

  /* Responsive */
  @media screen and (max-width: 990px) {
    .pure-slider-section-{{ section_id }} {
      padding: {{ section.settings.section_padding_top_mobile }}px {{ section.settings.section_padding_x_mobile }}px {{ section.settings.section_padding_bottom_mobile }}px;
    }
    .pure-slider-wrapper-{{ section_id }} {
      {% if section.settings.wrapper_border_radius_mobile > 0 %}border-radius: {{ section.settings.wrapper_border_radius_mobile }}px;{% else %}border-radius: 0;{% endif %}
    }
    .pure-slider-track-{{ section_id }} { height: {{ section.settings.slider_height_mobile }}px; }
    .pure-slider-arrow-{{ section_id }} {
      width: {{ section.settings.arrow_size | times: 0.8 | round }}px;
      height: {{ section.settings.arrow_size | times: 0.8 | round }}px;
    }
    .pure-slide-caption-title-{{ section_id }} { font-size: {{ section.settings.caption_title_size | times: 0.75 | round }}px; }
    .pure-slide-caption-text-{{ section_id }}  { font-size: {{ section.settings.caption_text_size | times: 0.85 | round }}px; }
  }

  @media screen and (max-width: 480px) {
    .pure-slider-track-{{ section_id }} { height: {{ section.settings.slider_height_mobile | times: 0.8 | round }}px; }
    {% if section.settings.hide_arrows_mobile %}.pure-slider-arrow-{{ section_id }} { display: none; }{% endif %}
  }

  @media (prefers-reduced-motion: reduce) {
    .pure-slide-{{ section_id }}, .pure-slider-dot-{{ section_id }}, .pure-slider-arrow-{{ section_id }} { transition: none; }
  }
{% endstyle %}

{%- liquid
  assign slide_count = 0
  for block in section.blocks
    if block.type == 'slide'
      assign slide_count = slide_count | plus: 1
    endif
  endfor
-%}

<section class="pure-slider-section-{{ section_id }}">
  <div class="pure-slider-wrapper-{{ section_id }}">
    <div class="pure-slider-track-{{ section_id }}" data-slider-track>
      {% for block in section.blocks %}
        {% if block.type == 'slide' %}
          <div
            class="pure-slide-{{ section_id }}{% if forloop.first %} active{% endif %}"
            data-slide-index="{{ forloop.index0 }}"
            {{ block.shopify_attributes }}
          >
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url: width: 1600 }}"
                srcset="
                  {{ block.settings.image | image_url: width: 600 }}   600w,
                  {{ block.settings.image | image_url: width: 900 }}   900w,
                  {{ block.settings.image | image_url: width: 1200 }} 1200w,
                  {{ block.settings.image | image_url: width: 1600 }} 1600w,
                  {{ block.settings.image | image_url: width: 2000 }} 2000w
                "
                sizes="(max-width: 990px) 100vw, {{ section.settings.section_max_width }}px"
                alt="{{ block.settings.image.alt | default: block.settings.caption_title | escape }}"
                loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                width="{{ block.settings.image.width }}"
                height="{{ block.settings.image.height }}"
              >
            {% else %}
              <div class="pure-slide-placeholder-{{ section_id }}">{{ 'image' | placeholder_svg_tag }}</div>
            {% endif %}

            {% if block.settings.caption_title != blank or block.settings.caption_text != blank %}
              <div class="pure-slide-caption-{{ section_id }}">
                {% if block.settings.caption_title != blank %}
                  <p class="pure-slide-caption-title-{{ section_id }}">{{ block.settings.caption_title }}</p>
                {% endif %}
                {% if block.settings.caption_text != blank %}
                  <p class="pure-slide-caption-text-{{ section_id }}">{{ block.settings.caption_text }}</p>
                {% endif %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}

      {% if section.blocks.size == 0 %}
        <div class="pure-slide-{{ section_id }} active" data-slide-index="0">
          <div class="pure-slide-placeholder-{{ section_id }}">{{ 'image' | placeholder_svg_tag }}</div>
        </div>
      {% endif %}

      {% if section.settings.show_overlay %}<div class="pure-slider-overlay-{{ section_id }}"></div>{% endif %}

      {% if slide_count > 1 and section.settings.show_arrows %}
        <button
          class="pure-slider-arrow-{{ section_id }} pure-slider-arrow-prev-{{ section_id }}"
          data-prev
          type="button"
          aria-label="Imagen anterior"
        >
          <svg viewBox="0 0 24 24" aria-hidden="true">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>
        <button
          class="pure-slider-arrow-{{ section_id }} pure-slider-arrow-next-{{ section_id }}"
          data-next
          type="button"
          aria-label="Imagen siguiente"
        >
          <svg viewBox="0 0 24 24" aria-hidden="true">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      {% endif %}
    </div>

    {% if slide_count > 1 and section.settings.show_dots %}
      <div class="pure-slider-dots-{{ section_id }}" data-dots-bar role="tablist" aria-label="Selector de imagen">
        {% assign dot_i = 0 %}
        {% for block in section.blocks %}
          {% if block.type == 'slide' %}
            <button
              class="pure-slider-dot-{{ section_id }}{% if forloop.first %} active{% endif %}"
              data-dot-index="{{ dot_i }}"
              role="tab"
              aria-label="Ir a imagen {{ dot_i | plus: 1 }}"
              aria-selected="{% if forloop.first %}true{% else %}false{% endif %}"
              type="button"
            ></button>
            {% assign dot_i = dot_i | plus: 1 %}
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>

<script>
  (function () {
    const section = document.querySelector('.pure-slider-section-{{ section_id }}');
    if (!section) return;

    const slides   = Array.from(section.querySelectorAll('.pure-slide-{{ section_id }}'));
    const dots     = Array.from(section.querySelectorAll('.pure-slider-dot-{{ section_id }}'));
    const prevBtn  = section.querySelector('[data-prev]');
    const nextBtn  = section.querySelector('[data-next]');

    const autoplayEnabled = {{ section.settings.autoplay | json }};
    const autoplayDelay   = {{ section.settings.autoplay_delay }};

    let current = 0, timer = null;

    function goTo(i) {
      if (i < 0) i = slides.length - 1;
      if (i >= slides.length) i = 0;
      slides[current].classList.remove('active');
      if (dots[current]) { dots[current].classList.remove('active'); dots[current].setAttribute('aria-selected','false'); }
      current = i;
      slides[current].classList.add('active');
      if (dots[current]) { dots[current].classList.add('active'); dots[current].setAttribute('aria-selected','true'); }
    }

    function start() {
      if (!autoplayEnabled || slides.length <= 1) return;
      stop(); timer = setInterval(() => goTo(current + 1), autoplayDelay);
    }
    function stop() { if (timer) { clearInterval(timer); timer = null; } }

    if (prevBtn) prevBtn.addEventListener('click', () => { stop(); goTo(current - 1); setTimeout(start, autoplayDelay * 2); });
    if (nextBtn) nextBtn.addEventListener('click', () => { stop(); goTo(current + 1); setTimeout(start, autoplayDelay * 2); });

    dots.forEach((d, i) => d.addEventListener('click', () => { stop(); goTo(i); setTimeout(start, autoplayDelay * 2); }));

    const wrapper = section.querySelector('.pure-slider-wrapper-{{ section_id }}');
    if (wrapper) { wrapper.addEventListener('mouseenter', stop); wrapper.addEventListener('mouseleave', start); }

    let tx = 0;
    const track = section.querySelector('[data-slider-track]');
    if (track) {
      track.addEventListener('touchstart', e => { tx = e.changedTouches[0].screenX; stop(); }, { passive: true });
      track.addEventListener('touchend',   e => {
        const diff = tx - e.changedTouches[0].screenX;
        if (Math.abs(diff) > 50) goTo(diff > 0 ? current + 1 : current - 1);
        setTimeout(start, autoplayDelay * 2);
      }, { passive: true });
    }

    section.addEventListener('keydown', e => {
      if (e.key === 'ArrowLeft')  { stop(); goTo(current - 1); setTimeout(start, autoplayDelay * 2); }
      if (e.key === 'ArrowRight') { stop(); goTo(current + 1); setTimeout(start, autoplayDelay * 2); }
    });

    if (autoplayEnabled && slides.length > 1) {
      document.readyState === 'loading' ? document.addEventListener('DOMContentLoaded', start) : start();
    }

    window.addEventListener('beforeunload', stop);
  })();
</script>

