    { "type": "header", "content": "── Contenedor ──" },
    {
      "type": "range",
      "id": "section_max_width",
      "label": "Ancho máximo",
      "min": 600,
      "max": 1920,
      "step": 40,
      "unit": "px",
      "default": 1400
    },
    { "type": "color", "id": "section_background_color", "label": "Fondo exterior", "default": "#ffffff" },
    { "type": "color", "id": "slider_bg_color", "label": "Fondo del slider", "default": "#f0f0f0" },
    {
      "type": "range",
      "id": "section_padding_top",
      "label": "Padding superior",
      "min": 0,
      "max": 120,
      "step": 10,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "label": "Padding inferior",
      "min": 0,
      "max": 120,
      "step": 10,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "section_padding_x",
      "label": "Padding horizontal",
      "min": 0,
      "max": 80,
      "step": 10,
      "unit": "px",
      "default": 20
    },
    { "type": "header", "content": "── Wrapper ──" },
    {
      "type": "range",
      "id": "wrapper_border_radius",
      "label": "Radio borde (desktop)",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "wrapper_border_radius_mobile",
      "label": "Radio borde (móvil)",
      "min": 0,
      "max": 24,
      "step": 4,
      "unit": "px",
      "default": 8
    },
    {
      "type": "range",
      "id": "wrapper_border_width",
      "label": "Grosor borde",
      "min": 0,
      "max": 4,
      "step": 1,
      "unit": "px",
      "default": 0
    },
    { "type": "color", "id": "wrapper_border_color", "label": "Color borde", "default": "#e0e0e0" },
    { "type": "checkbox", "id": "wrapper_shadow", "label": "Mostrar sombra", "default": false },
    { "type": "header", "content": "── Tamaño ──" },
