{% doc %}
  @prompt
    podemos crear un menu donde tenga la posibilidad de modificar tamaños,  pesos,   animaciones on hover. 
    a demás de ser responsive.
    
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-menu-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
  }

  .ai-menu-list-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.item_spacing }}px;
    list-style: none;
    margin: 0;
    padding: 0;
    justify-content: {{ block.settings.alignment }};
    align-items: center;
  }

  .ai-menu-item-{{ ai_gen_id }} {
    margin: 0;
  }

  .ai-menu-link-{{ ai_gen_id }} {
    display: inline-block;
    font-size: {{ block.settings.font_size }}px;
    font-weight: {{ block.settings.font_weight }};
    color: {{ block.settings.text_color }};
    text-decoration: none;
    text-transform: {% if block.settings.text_transform == 'uppercase' %}uppercase{% else %}none{% endif %};
    transition: all {{ block.settings.hover_animation_speed }}s ease;
    position: relative;
    padding: {{ block.settings.link_padding_vertical }}px {{ block.settings.link_padding_horizontal }}px;
  }

  .ai-menu-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.hover_text_color }};
    {% if block.settings.hover_effect == 'scale' %}
      transform: scale({{ block.settings.hover_scale }});
    {% elsif block.settings.hover_effect == 'slide_up' %}
      transform: translateY(-{{ block.settings.hover_translate }}px);
    {% elsif block.settings.hover_effect == 'slide_down' %}
      transform: translateY({{ block.settings.hover_translate }}px);
    {% endif %}
  }

  {% if block.settings.hover_effect == 'underline' %}
    .ai-menu-link-{{ ai_gen_id }}::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 0;
      height: {{ block.settings.underline_thickness }}px;
      background-color: {{ block.settings.hover_text_color }};
      transition: width {{ block.settings.hover_animation_speed }}s ease;
    }

    .ai-menu-link-{{ ai_gen_id }}:hover::after {
      width: 100%;
    }
  {% elsif block.settings.hover_effect == 'background' %}
    .ai-menu-link-{{ ai_gen_id }} {
      border-radius: {{ block.settings.background_radius }}px;
    }

    .ai-menu-link-{{ ai_gen_id }}:hover {
      background-color: {{ block.settings.hover_background_color }};
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-menu-{{ ai_gen_id }} {
      width: 100%;
      padding: {{ block.settings.mobile_padding_vertical }}px {{ block.settings.mobile_padding_horizontal }}px;
    }

    .ai-menu-list-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_layout }};
      gap: {{ block.settings.mobile_item_spacing }}px;
      justify-content: {{ block.settings.mobile_alignment }};
    }

    .ai-menu-link-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_font_size }}px;
    }

    {% if block.settings.mobile_layout == 'column' %}
      .ai-menu-item-{{ ai_gen_id }} {
        width: 100%;
      }

      .ai-menu-link-{{ ai_gen_id }} {
        width: 100%;
        text-align: {{ block.settings.mobile_text_align }};
      }
    {% endif %}
  }
{% endstyle %}

<nav class="ai-menu-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <ul class="ai-menu-list-{{ ai_gen_id }}">
    {% for i in (1..8) %}
      {% liquid
        assign link_key = 'menu_link_' | append: i
        assign text_key = 'menu_text_' | append: i
        assign link_url = block.settings[link_key]
        assign link_text = block.settings[text_key]
      %}
      
      {% if link_text != blank %}
        <li class="ai-menu-item-{{ ai_gen_id }}">
          <a 
            href="{% if link_url != blank %}{{ link_url }}{% else %}#{% endif %}" 
            class="ai-menu-link-{{ ai_gen_id }}"
          >
            {{ link_text }}
          </a>
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</nav>

