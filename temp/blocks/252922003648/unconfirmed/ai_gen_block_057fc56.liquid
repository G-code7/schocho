    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
  }

  .ai-purchase-options__container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .ai-purchase-options__option-{{ ai_gen_id }} {
    border: 2px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: 20px;
    cursor: pointer;
    transition: all 0.3s ease;
    background-color: {{ block.settings.option_background }};
  }

  .ai-purchase-options__option-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.border_hover_color }};
  }

  .ai-purchase-options__option-{{ ai_gen_id }}.active {
    border-color: {{ block.settings.active_border_color }};
    background-color: {{ block.settings.active_background }};
  }

  .ai-purchase-options__option-header-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
  }

  .ai-purchase-options__radio-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
    border: 2px solid {{ block.settings.border_color }};
    border-radius: 50%;
    position: relative;
    flex-shrink: 0;
  }

  .ai-purchase-options__option-{{ ai_gen_id }}.active .ai-purchase-options__radio-{{ ai_gen_id }} {
    border-color: {{ block.settings.active_border_color }};
  }

  .ai-purchase-options__option-{{ ai_gen_id }}.active .ai-purchase-options__radio-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: {{ block.settings.active_border_color }};
  }

  .ai-purchase-options__option-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.option_title_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0;
  }

  .ai-purchase-options__badge-{{ ai_gen_id }} {
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    margin-left: auto;
  }

  .ai-purchase-options__option-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 0 32px;
  }

  .ai-purchase-options__price-section-{{ ai_gen_id }} {
    margin-top: 20px;
    padding-top: 20px;
    border-top: 1px solid {{ block.settings.border_color }};
  }

  .ai-purchase-options__price-row-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 8px;
  }

  .ai-purchase-options__price-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-purchase-options__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
  }

  .ai-purchase-options__quantity-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
  }

  .ai-purchase-options__quantity-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-purchase-options__quantity-selector-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    border: 1px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    overflow: hidden;
  }

