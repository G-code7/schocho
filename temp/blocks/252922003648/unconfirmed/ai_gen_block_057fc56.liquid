<purchase-options-{{ ai_gen_id }}
  class="ai-purchase-options-{{ ai_gen_id }}"
  data-product-id="{{ product.id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-purchase-options__container-{{ ai_gen_id }}">
    <div
      class="ai-purchase-options__option-{{ ai_gen_id }} active"
      data-option="onetime"
    >
      <div class="ai-purchase-options__option-header-{{ ai_gen_id }}">
        <div class="ai-purchase-options__radio-{{ ai_gen_id }}"></div>
        <h3 class="ai-purchase-options__option-title-{{ ai_gen_id }}">{{ block.settings.onetime_title }}</h3>
      </div>
      <p class="ai-purchase-options__option-description-{{ ai_gen_id }}">{{ block.settings.onetime_description }}</p>
    </div>

    <div
      class="ai-purchase-options__option-{{ ai_gen_id }}"
      data-option="subscription"
    >
      <div class="ai-purchase-options__option-header-{{ ai_gen_id }}">
        <div class="ai-purchase-options__radio-{{ ai_gen_id }}"></div>
        <h3 class="ai-purchase-options__option-title-{{ ai_gen_id }}">{{ block.settings.subscription_title }}</h3>
        {% if block.settings.show_discount_badge %}
          <span class="ai-purchase-options__badge-{{ ai_gen_id }}">{{ block.settings.discount_percentage }}% {{ block.settings.discount_badge_text }}</span>
        {% endif %}
      </div>
      <p class="ai-purchase-options__option-description-{{ ai_gen_id }}">{{ block.settings.subscription_description }}</p>
    </div>

    <div class="ai-purchase-options__price-section-{{ ai_gen_id }}">
      <div class="ai-purchase-options__price-row-{{ ai_gen_id }}">
        <span class="ai-purchase-options__price-label-{{ ai_gen_id }}">{{ block.settings.price_label }}</span>
        <span class="ai-purchase-options__price-{{ ai_gen_id }}" data-price-display>
          {{ product.selected_or_first_available_variant.price | money }}
        </span>
      </div>
      <div class="ai-purchase-options__price-row-{{ ai_gen_id }}" data-subscription-price style="display: none;">
        <span class="ai-purchase-options__price-label-{{ ai_gen_id }}">{{ block.settings.subscription_price_label }}</span>
        <span class="ai-purchase-options__price-{{ ai_gen_id }}" data-subscription-price-display></span>
      </div>
    </div>

    <div class="ai-purchase-options__quantity-{{ ai_gen_id }}">
      <span class="ai-purchase-options__quantity-label-{{ ai_gen_id }}">{{ block.settings.quantity_label }}</span>
      <div class="ai-purchase-options__quantity-selector-{{ ai_gen_id }}">
        <button
          type="button"
          class="ai-purchase-options__quantity-button-{{ ai_gen_id }}"
          data-quantity-decrease
          aria-label="Decrease quantity"
        >
          −
        </button>
        <input
          type="number"
          class="ai-purchase-options__quantity-input-{{ ai_gen_id }}"
          value="1"
          min="1"
          data-quantity-input
          aria-label="Quantity"
        >
        <button
          type="button"
          class="ai-purchase-options__quantity-button-{{ ai_gen_id }}"
          data-quantity-increase
          aria-label="Increase quantity"
        >
          +
        </button>
      </div>
    </div>

    <div class="ai-purchase-options__buttons-{{ ai_gen_id }}">
      <button
        type="button"
        class="ai-purchase-options__add-to-cart-{{ ai_gen_id }}"
        data-add-to-cart
      >
        {{ block.settings.add_to_cart_text }}
      </button>

      {% if block.settings.show_accelerated_checkout %}
        <div class="ai-purchase-options__accelerated-checkout-{{ ai_gen_id }}">
          {{ form | payment_button }}
        </div>
      {% endif %}
    </div>
  </div>
</purchase-options-{{ ai_gen_id }}>

<script>
  (function() {
    class PurchaseOptions{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.selectedOption = 'onetime';
        this.quantity = 1;
        this.basePrice = {{ product.selected_or_first_available_variant.price }};
        this.discountPercentage = {{ block.settings.discount_percentage }};
      }

      connectedCallback() {
        this.options = this.querySelectorAll('[data-option]');
        this.quantityInput = this.querySelector('[data-quantity-input]');
        this.decreaseBtn = this.querySelector('[data-quantity-decrease]');
        this.increaseBtn = this.querySelector('[data-quantity-increase]');
        this.addToCartBtn = this.querySelector('[data-add-to-cart]');
        this.priceDisplay = this.querySelector('[data-price-display]');
        this.subscriptionPriceRow = this.querySelector('[data-subscription-price]');
        this.subscriptionPriceDisplay = this.querySelector('[data-subscription-price-display]');

        this.setupEventListeners();
        this.updatePrice();
      }

      setupEventListeners() {
        this.options.forEach(option => {
          option.addEventListener('click', () => {
            this.selectOption(option.dataset.option);
          });
        });

        this.decreaseBtn.addEventListener('click', () => {
          if (this.quantity > 1) {
            this.quantity--;
            this.quantityInput.value = this.quantity;
          }
        });

        this.increaseBtn.addEventListener('click', () => {
          this.quantity++;
          this.quantityInput.value = this.quantity;
        });

        this.quantityInput.addEventListener('change', (e) => {
          const value = parseInt(e.target.value);
          if (value >= 1) {
            this.quantity = value;
          } else {
            this.quantity = 1;
            this.quantityInput.value = 1;
          }
        });

        this.addToCartBtn.addEventListener('click', () => {
          this.addToCart();
        });
      }

      selectOption(option) {
        this.selectedOption = option;
        this.options.forEach(opt => {
          opt.classList.remove('active');
        });
        this.querySelector(`[data-option="${option}"]`).classList.add('active');
        this.updatePrice();
      }

      updatePrice() {
        if (this.selectedOption === 'subscription') {
          const discountedPrice = this.basePrice * (1 - this.discountPercentage / 100);
          this.subscriptionPriceDisplay.textContent = this.formatMoney(discountedPrice);
          this.subscriptionPriceRow.style.display = 'flex';
        } else {
          this.subscriptionPriceRow.style.display = 'none';
        }
      }

      formatMoney(cents) {
        return new Intl.NumberFormat('{{ localization.language.iso_code }}', {
          style: 'currency',
          currency: '{{ cart.currency.iso_code }}'
        }).format(cents / 100);
      }

      async addToCart() {
        const formData = {
          items: [{
            id: {{ product.selected_or_first_available_variant.id }},
            quantity: this.quantity,
            properties: {
              '_purchase_type': this.selectedOption
            }
          }]
        };

        try {
          const response = await fetch('/cart/add.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(formData)
          });

          if (response.ok) {
            window.location.href = '/cart';
          }
        } catch (error) {
          console.error('Error adding to cart:', error);
        }
      }
    }

    customElements.define('purchase-options-{{ ai_gen_id }}', PurchaseOptions{{ ai_gen_id }});
  })();
</script>

