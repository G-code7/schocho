<script>
  (function() {
    class SubscriptionPurchase{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.radioButtons = this.querySelectorAll('input[type="radio"]');
        this.addToCartButton = this.querySelector('.ai-subscription-purchase__button-{{ ai_gen_id }}');
        this.summaryElement = this.querySelector('.ai-subscription-purchase__summary-{{ ai_gen_id }}');
        
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.radioButtons.forEach(radio => {
          radio.addEventListener('change', () => this.handleOptionChange());
        });

        if (this.addToCartButton) {
          this.addToCartButton.addEventListener('click', () => this.handleAddToCart());
        }
      }

      handleOptionChange() {
        const selectedOption = this.querySelector('input[type="radio"]:checked').value;
        
        if (this.summaryElement) {
          if (selectedOption === 'subscription') {
            this.summaryElement.style.display = 'block';
          } else {
            this.summaryElement.style.display = 'none';
          }
        }
      }

      handleAddToCart() {
        const selectedOption = this.querySelector('input[type="radio"]:checked').value;
        console.log('Adding to cart with option:', selectedOption);
      }
    }

    customElements.define('subscription-purchase-{{ ai_gen_id }}', SubscriptionPurchase{{ ai_gen_id }});
  })();
</script>

