    border-radius: {{ block.settings.border_radius }}px;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .ai-subscription-purchase__option-{{ ai_gen_id }} input[type="radio"] {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }

  .ai-subscription-purchase__card-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    padding: {{ block.settings.card_padding }}px;
    border: {{ block.settings.border_width }}px solid;
