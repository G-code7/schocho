{% doc %}
  @prompt
    Sección con título, párrafo y botón con DOS imágenes flotantes que giran con scroll
    - Una imagen a la izquierda y otra a la derecha
    - Cada imagen con controles independientes (tamaño, offset, velocidad de rotación)
    - Imágenes con z-index: 1, contenido con z-index: 2 (texto por encima)
    - Centradas verticalmente respecto al contenedor
    - Optimizado para móvil
{% enddoc %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-dual-floating-{{ ai_gen_id }} {
    --dfs-bg: {{ block.settings.background_color }};
    --dfs-title-color: {{ block.settings.title_color }};
    --dfs-title-size: {{ block.settings.title_size }}px;
    --dfs-paragraph-color: {{ block.settings.paragraph_color }};
    --dfs-paragraph-size: {{ block.settings.paragraph_size }}px;
    --dfs-btn-bg: {{ block.settings.button_background_color }};
    --dfs-btn-color: {{ block.settings.button_text_color }};
    --dfs-btn-hover-bg: {{ block.settings.button_hover_background_color }};
    --dfs-btn-hover-color: {{ block.settings.button_hover_text_color }};
    
    /* Image sizes */
    --dfs-left-size: {{ block.settings.left_image_size }}px;
    --dfs-right-size: {{ block.settings.right_image_size }}px;

    position: relative;
    width: 100%;
    min-height: {{ block.settings.min_height }}px;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: var(--dfs-bg);
    overflow: hidden;
    display: flex;
    align-items: center;
  }

  /* ═══════════════════════════════════════
     FLOATING IMAGES - Z-INDEX 1
  ═══════════════════════════════════════ */
  .ai-dual-floating__image-{{ ai_gen_id }} {
    position: absolute;
    z-index: 1;
    will-change: transform;
    pointer-events: none;
    top: 50%;
  }

  .ai-dual-floating__image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  .ai-dual-floating__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f0f0f0 0%, #e0e0e0 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-dual-floating__image-placeholder-{{ ai_gen_id }} svg {
    width: 35%;
    height: 35%;
    opacity: 0.3;
  }

  /* Left Image */
  .ai-dual-floating__image--left-{{ ai_gen_id }} {
    width: var(--dfs-left-size);
    height: var(--dfs-left-size);
    left: 0;
    transform: translateY(-50%) translateX(-{{ block.settings.left_image_offset }}%);
    {% if block.settings.left_image_shadow %}
    filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.12));
    {% endif %}
  }

  /* Right Image */
  .ai-dual-floating__image--right-{{ ai_gen_id }} {
    width: var(--dfs-right-size);
    height: var(--dfs-right-size);
    right: 0;
    transform: translateY(-50%) translateX({{ block.settings.right_image_offset }}%);
    {% if block.settings.right_image_shadow %}
    filter: drop-shadow(0 10px 30px rgba(0, 0, 0, 0.12));
    {% endif %}
  }

  /* ═══════════════════════════════════════
     CONTAINER & CONTENT - Z-INDEX 2
  ═══════════════════════════════════════ */
  .ai-dual-floating__container-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.container_max_width }}px;
    margin: 0 auto;
    padding: 0 {{ block.settings.container_padding }}px;
    position: relative;
    z-index: 2;
  }

  .ai-dual-floating__content-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
    position: relative;
    
    {% if block.settings.content_alignment == 'center' %}
    margin: 0 auto;
    text-align: center;
    {% elsif block.settings.content_alignment == 'right' %}
    margin-left: auto;
    margin-right: 0;
    text-align: right;
    {% else %}
    margin-right: auto;
    margin-left: 0;
    text-align: left;
    {% endif %}
  }

  /* Eyebrow */
  .ai-dual-floating__eyebrow-{{ ai_gen_id }} {
    font-size: 11px;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: {{ block.settings.eyebrow_color }};
    font-weight: 500;
    margin: 0 0 {{ block.settings.eyebrow_margin_bottom }}px 0;
    display: block;
  }

  /* Title */
  .ai-dual-floating__title-{{ ai_gen_id }} {
    color: var(--dfs-title-color);
    font-size: var(--dfs-title-size);
    font-weight: {{ block.settings.title_weight }};
    line-height: {{ block.settings.title_line_height }};
    margin: 0 0 {{ block.settings.title_margin_bottom }}px 0;
    {% if block.settings.title_uppercase %}
    text-transform: uppercase;
    letter-spacing: 0.02em;
    {% endif %}
  }

  .ai-dual-floating__title-{{ ai_gen_id }} p {
    margin: 0;
  }

  /* Paragraph */
  .ai-dual-floating__paragraph-{{ ai_gen_id }} {
    color: var(--dfs-paragraph-color);
    font-size: var(--dfs-paragraph-size);
    font-weight: {{ block.settings.paragraph_weight }};
    line-height: {{ block.settings.paragraph_line_height }};
    margin: 0 0 {{ block.settings.paragraph_margin_bottom }}px 0;
  }

  .ai-dual-floating__paragraph-{{ ai_gen_id }} p {
    margin: 0 0 1em 0;
  }

  .ai-dual-floating__paragraph-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  /* Button */
  .ai-dual-floating__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: {{ block.settings.button_padding_y }}px {{ block.settings.button_padding_x }}px;
    background-color: var(--dfs-btn-bg);
    color: var(--dfs-btn-color);
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-decoration: none;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-dual-floating__button-{{ ai_gen_id }}:hover {
    background-color: var(--dfs-btn-hover-bg);
    color: var(--dfs-btn-hover-color);
    border-color: {{ block.settings.button_hover_border_color }};
  }

  /* ═══════════════════════════════════════
     RESPONSIVE - TABLET
  ═══════════════════════════════════════ */
  @media screen and (max-width: 991px) {
    .ai-dual-floating__image--left-{{ ai_gen_id }} {
      --dfs-left-size: {{ block.settings.left_image_size_tablet }}px;
    }

    .ai-dual-floating__image--right-{{ ai_gen_id }} {
      --dfs-right-size: {{ block.settings.right_image_size_tablet }}px;
    }
  }

  /* ═══════════════════════════════════════
     RESPONSIVE - MOBILE
  ═══════════════════════════════════════ */
  @media screen and (max-width: 749px) {
    .ai-dual-floating-{{ ai_gen_id }} {
      min-height: auto;
      padding: {{ block.settings.section_padding_top_mobile }}px 0 {{ block.settings.section_padding_bottom_mobile }}px;
    }

    .ai-dual-floating__container-{{ ai_gen_id }} {
      padding: 0 {{ block.settings.container_padding_mobile }}px;
    }

    .ai-dual-floating__content-{{ ai_gen_id }} {
      max-width: 100%;
      {% if block.settings.content_alignment_mobile == 'center' %}
      text-align: center;
      margin: 0 auto;
      {% else %}
      text-align: left;
      margin: 0;
      {% endif %}
    }

    .ai-dual-floating__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size_mobile }}px;
      margin-bottom: {{ block.settings.title_margin_bottom_mobile }}px;
    }

    .ai-dual-floating__paragraph-{{ ai_gen_id }} {
      font-size: {{ block.settings.paragraph_size_mobile }}px;
      margin-bottom: {{ block.settings.paragraph_margin_bottom_mobile }}px;
    }

    .ai-dual-floating__button-{{ ai_gen_id }} {
      {% if block.settings.button_full_width_mobile %}
      width: 100%;
      {% endif %}
    }

    /* Left image mobile */
    .ai-dual-floating__image--left-{{ ai_gen_id }} {
      {% if block.settings.left_image_mobile_behavior == 'hide' %}
      display: none;
      {% elsif block.settings.left_image_mobile_behavior == 'reduce' %}
      --dfs-left-size: {{ block.settings.left_image_size_mobile }}px;
      opacity: {{ block.settings.left_image_mobile_opacity }};
      {% endif %}
    }

    /* Right image mobile */
    .ai-dual-floating__image--right-{{ ai_gen_id }} {
      {% if block.settings.right_image_mobile_behavior == 'hide' %}
      display: none;
      {% elsif block.settings.right_image_mobile_behavior == 'reduce' %}
      --dfs-right-size: {{ block.settings.right_image_size_mobile }}px;
      opacity: {{ block.settings.right_image_mobile_opacity }};
      {% endif %}
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .ai-dual-floating__image-{{ ai_gen_id }} {
      transition: none !important;
    }
  }
{% endstyle %}

<dual-floating-section-{{ ai_gen_id }}
  class="ai-dual-floating-{{ ai_gen_id }}"
  data-left-rotation="{{ block.settings.left_rotation_speed }}"
  data-right-rotation="{{ block.settings.right_rotation_speed }}"
  data-left-offset="{{ block.settings.left_image_offset }}"
  data-right-offset="{{ block.settings.right_image_offset }}"
  {{ block.shopify_attributes }}
>
  {%- comment -%} ══════ LEFT FLOATING IMAGE ══════ {%- endcomment -%}
  {% if block.settings.show_left_image %}
    <div class="ai-dual-floating__image-{{ ai_gen_id }} ai-dual-floating__image--left-{{ ai_gen_id }}" data-floating-left>
      {% if block.settings.left_image != blank %}
        <img
          src="{{ block.settings.left_image | image_url: width: 800 }}"
          srcset="{{ block.settings.left_image | image_url: width: 300 }} 300w,
                  {{ block.settings.left_image | image_url: width: 500 }} 500w,
                  {{ block.settings.left_image | image_url: width: 800 }} 800w"
          sizes="(max-width: 749px) {{ block.settings.left_image_size_mobile }}px, (max-width: 991px) {{ block.settings.left_image_size_tablet }}px, {{ block.settings.left_image_size }}px"
          alt="{{ block.settings.left_image.alt | default: 'Decorative image' | escape }}"
          loading="lazy"
          width="{{ block.settings.left_image_size }}"
          height="{{ block.settings.left_image_size }}"
        >
      {% else %}
        <div class="ai-dual-floating__image-placeholder-{{ ai_gen_id }}">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
            <circle cx="8.5" cy="8.5" r="1.5"/>
            <polyline points="21 15 16 10 5 21"/>
          </svg>
        </div>
      {% endif %}
    </div>
  {% endif %}

  {%- comment -%} ══════ RIGHT FLOATING IMAGE ══════ {%- endcomment -%}
  {% if block.settings.show_right_image %}
    <div class="ai-dual-floating__image-{{ ai_gen_id }} ai-dual-floating__image--right-{{ ai_gen_id }}" data-floating-right>
      {% if block.settings.right_image != blank %}
        <img
          src="{{ block.settings.right_image | image_url: width: 800 }}"
          srcset="{{ block.settings.right_image | image_url: width: 300 }} 300w,
                  {{ block.settings.right_image | image_url: width: 500 }} 500w,
                  {{ block.settings.right_image | image_url: width: 800 }} 800w"
          sizes="(max-width: 749px) {{ block.settings.right_image_size_mobile }}px, (max-width: 991px) {{ block.settings.right_image_size_tablet }}px, {{ block.settings.right_image_size }}px"
          alt="{{ block.settings.right_image.alt | default: 'Decorative image' | escape }}"
          loading="lazy"
          width="{{ block.settings.right_image_size }}"
          height="{{ block.settings.right_image_size }}"
        >
      {% else %}
        <div class="ai-dual-floating__image-placeholder-{{ ai_gen_id }}">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
            <rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
            <circle cx="8.5" cy="8.5" r="1.5"/>
            <polyline points="21 15 16 10 5 21"/>
          </svg>
        </div>
      {% endif %}
    </div>
  {% endif %}

  {%- comment -%} ══════ CONTENT (Z-INDEX 2) ══════ {%- endcomment -%}
  <div class="ai-dual-floating__container-{{ ai_gen_id }}">
    <div class="ai-dual-floating__content-{{ ai_gen_id }}">
      
      {% if block.settings.eyebrow != blank %}
        <span class="ai-dual-floating__eyebrow-{{ ai_gen_id }}">{{ block.settings.eyebrow | escape }}</span>
      {% endif %}

      {% if block.settings.title != blank %}
        <div class="ai-dual-floating__title-{{ ai_gen_id }}">
          {{ block.settings.title }}
        </div>
      {% endif %}

      {% if block.settings.paragraph != blank %}
        <div class="ai-dual-floating__paragraph-{{ ai_gen_id }}">
          {{ block.settings.paragraph }}
        </div>
      {% endif %}

      {% if block.settings.button_text != blank %}
        <a
          href="{{ block.settings.button_link | default: '#' }}"
          class="ai-dual-floating__button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
          {% if block.settings.button_show_arrow %}
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          {% endif %}
        </a>
      {% endif %}

    </div>
  </div>
</dual-floating-section-{{ ai_gen_id }}>

<script>
(function() {
  if (customElements.get('dual-floating-section-{{ ai_gen_id }}')) return;

  class DualFloatingSection extends HTMLElement {
    constructor() {
      super();
      this.leftImage = null;
      this.rightImage = null;
      this.leftRotation = 0;
      this.rightRotation = 0;
      this.leftRotationSpeed = 0;
      this.rightRotationSpeed = 0;
      this.leftOffset = 50;
      this.rightOffset = 50;
      this.lastScrollY = window.scrollY;
      this.ticking = false;
    }

    connectedCallback() {
      this.leftImage = this.querySelector('[data-floating-left]');
      this.rightImage = this.querySelector('[data-floating-right]');
      
      this.leftRotationSpeed = parseFloat(this.dataset.leftRotation) || 0;
      this.rightRotationSpeed = parseFloat(this.dataset.rightRotation) || 0;
      this.leftOffset = parseFloat(this.dataset.leftOffset) || 50;
      this.rightOffset = parseFloat(this.dataset.rightOffset) || 50;

      // Only add scroll listener if at least one image has rotation
      if ((this.leftImage && this.leftRotationSpeed > 0) || 
          (this.rightImage && this.rightRotationSpeed > 0)) {
        this.boundHandleScroll = this.handleScroll.bind(this);
        window.addEventListener('scroll', this.boundHandleScroll, { passive: true });
      }
    }

    disconnectedCallback() {
      if (this.boundHandleScroll) {
        window.removeEventListener('scroll', this.boundHandleScroll);
      }
    }

    handleScroll() {
      if (!this.ticking) {
        requestAnimationFrame(() => {
          this.updateRotations();
          this.ticking = false;
        });
        this.ticking = true;
      }
    }

    updateRotations() {
      const currentScrollY = window.scrollY;
      const scrollDelta = currentScrollY - this.lastScrollY;

      // Update left image
      if (this.leftImage && this.leftRotationSpeed > 0) {
        this.leftRotation += scrollDelta * this.leftRotationSpeed;
        this.leftImage.style.transform = `translateY(-50%) translateX(-${this.leftOffset}%) rotate(${this.leftRotation}deg)`;
      }

      // Update right image (rotates opposite direction for visual interest)
      if (this.rightImage && this.rightRotationSpeed > 0) {
        this.rightRotation -= scrollDelta * this.rightRotationSpeed;
        this.rightImage.style.transform = `translateY(-50%) translateX(${this.rightOffset}%) rotate(${this.rightRotation}deg)`;
      }

      this.lastScrollY = currentScrollY;
    }
  }

  customElements.define('dual-floating-section-{{ ai_gen_id }}', DualFloatingSection);
})();
</script>

