{% endstyle %}

<featured-collection-slider-{{ ai_gen_id }}
  class="ai-featured-collection-slider-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-featured-collection-slider__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.description != blank %}
      <div class="ai-featured-collection-slider__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-featured-collection-slider__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.description != blank %}
          <p class="ai-featured-collection-slider__description-{{ ai_gen_id }}">{{ block.settings.description }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-featured-collection-slider__swiper-{{ ai_gen_id }} swiper">
      <div class="swiper-wrapper">
        {% if block.settings.collection != blank %}
          {% for product in block.settings.collection.products limit: block.settings.products_limit %}
            <div class="swiper-slide">
              <div class="ai-featured-collection-slider__card-{{ ai_gen_id }}">
                <a href="{{ product.url }}" class="ai-featured-collection-slider__image-wrapper-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 600 }}"
                      alt="{{ product.featured_image.alt | escape }}"
                      class="ai-featured-collection-slider__image-{{ ai_gen_id }}"
                      loading="lazy"
                      width="600"
                      height="600"
                    >
                    {% if product.images[1] %}
                      <img
                        src="{{ product.images[1] | image_url: width: 600 }}"
                        alt="{{ product.images[1].alt | escape }}"
                        class="ai-featured-collection-slider__image-{{ ai_gen_id }} ai-featured-collection-slider__image-{{ ai_gen_id }}--secondary"
                        loading="lazy"
                        width="600"
                        height="600"
                      >
                    {% endif %}
                  {% else %}
                    <div class="ai-featured-collection-slider__image-placeholder-{{ ai_gen_id }}">
                      {{ 'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </a>

                <div class="ai-featured-collection-slider__info-{{ ai_gen_id }}">
                  <h3 class="ai-featured-collection-slider__product-title-{{ ai_gen_id }}">
                    <a href="{{ product.url }}">{{ product.title }}</a>
                  </h3>

                  <div class="ai-featured-collection-slider__price-wrapper-{{ ai_gen_id }}">
                    <span class="ai-featured-collection-slider__price-{{ ai_gen_id }}">
                      {{ product.price | money }}
                    </span>
                    {% if product.compare_at_price > product.price %}
                      <span class="ai-featured-collection-slider__compare-price-{{ ai_gen_id }}">
                        {{ product.compare_at_price | money }}
                      </span>
                      {% if block.settings.show_sale_badge %}
                        <span class="ai-featured-collection-slider__sale-badge-{{ ai_gen_id }}">
                          {{ block.settings.sale_badge_label }}
                        </span>
                      {% endif %}
                    {% endif %}
                  </div>

                  {% if block.settings.show_quick_add %}
                    <div class="ai-featured-collection-slider__quick-add-{{ ai_gen_id }}">
                      {% form 'product', product, class: 'ai-product-form', data-product-id: product.id %}
                        <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
                        <button
                          type="submit"
                          class="ai-featured-collection-slider__quick-add-button-{{ ai_gen_id }}"
                          {% unless product.available %}disabled{% endunless %}
                        >
                          {% if product.available %}
                            {{ block.settings.quick_add_text }}
                          {% else %}
                            {{ block.settings.sold_out_text }}
                          {% endif %}
                        </button>
                      {% endform %}
                    </div>
                  {% endif %}
                </div>
              </div>
            </div>
          {% endfor %}
        {% else %}
          {% for i in (1..6) %}
            <div class="swiper-slide">
              <div class="ai-featured-collection-slider__card-{{ ai_gen_id }}">
                <div class="ai-featured-collection-slider__image-wrapper-{{ ai_gen_id }}">
                  <div class="ai-featured-collection-slider__image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                </div>
                <div class="ai-featured-collection-slider__info-{{ ai_gen_id }}">
                  <h3 class="ai-featured-collection-slider__product-title-{{ ai_gen_id }}">Product Title</h3>
                  <div class="ai-featured-collection-slider__price-wrapper-{{ ai_gen_id }}">
                    <span class="ai-featured-collection-slider__price-{{ ai_gen_id }}">$29.99</span>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      </div>
    </div>

    <div class="ai-featured-collection-slider__navigation-{{ ai_gen_id }}">
      <button class="ai-featured-collection-slider__nav-button-{{ ai_gen_id }} swiper-button-prev-{{ ai_gen_id }}" aria-label="Previous slide">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
        </svg>
      </button>
      <div class="ai-featured-collection-slider__scrollbar-{{ ai_gen_id }} swiper-scrollbar"></div>
      <button class="ai-featured-collection-slider__nav-button-{{ ai_gen_id }} swiper-button-next-{{ ai_gen_id }}" aria-label="Next slide">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
          <path d="M8.59 16.59L10 18l6-6-6-6-1.41 1.41L13.17 12z"/>
        </svg>
      </button>
    </div>

    {% if block.settings.show_view_all and block.settings.collection != blank %}
      <div class="ai-featured-collection-slider__view-all-{{ ai_gen_id }}">
        <a href="{{ block.settings.collection.url }}" class="ai-featured-collection-slider__view-all-button-{{ ai_gen_id }}">
          {{ block.settings.view_all_text }}
        </a>
      </div>
    {% endif %}
  </div>
</featured-collection-slider-{{ ai_gen_id }}>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">

<script>
  (function() {
    class FeaturedCollectionSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.swiper = null;
      }

      connectedCallback() {
        this.initSwiper();
        this.initQuickAdd();
      }

      initSwiper() {
        const swiperConfig = {
          slidesPerView: 1.3,
          spaceBetween: {{ block.settings.gap }},
          speed: 150,
          scrollbar: {
            el: '.ai-featured-collection-slider__scrollbar-{{ ai_gen_id }}',
            draggable: true,
          },
          navigation: {
            nextEl: '.swiper-button-next-{{ ai_gen_id }}',
            prevEl: '.swiper-button-prev-{{ ai_gen_id }}',
          },
          breakpoints: {
            750: {
              slidesPerView: 3,
              spaceBetween: {{ block.settings.gap }},
            },
            990: {
              slidesPerView: {{ block.settings.slides_desktop }},
              spaceBetween: {{ block.settings.gap }},
            }
          }
        };

        this.swiper = new Swiper('.ai-featured-collection-slider__swiper-{{ ai_gen_id }}', swiperConfig);
      }

      initQuickAdd() {
        const forms = this.querySelectorAll('.ai-product-form');
        
        forms.forEach(form => {
          form.addEventListener('submit', async (e) => {
            e.preventDefault();
            
            const button = form.querySelector('.ai-featured-collection-slider__quick-add-button-{{ ai_gen_id }}');
            const originalText = button.textContent;
            button.disabled = true;
            button.textContent = '{{ block.settings.adding_text }}';

            const formData = new FormData(form);

            try {
              const response = await fetch('/cart/add.js', {
                method: 'POST',
                body: formData
              });

              if (response.ok) {
                button.textContent = '{{ block.settings.added_text }}';
                
                document.dispatchEvent(new CustomEvent('cart:refresh'));
                
                setTimeout(() => {
                  button.textContent = originalText;
                  button.disabled = false;
                }, 2000);
              } else {
                throw new Error('Failed to add to cart');
              }
            } catch (error) {
              button.textContent = originalText;
              button.disabled = false;
              console.error('Error adding to cart:', error);
            }
          });
        });
      }

      disconnectedCallback() {
        if (this.swiper) {
          this.swiper.destroy();
        }
      }
    }

    customElements.define('featured-collection-slider-{{ ai_gen_id }}', FeaturedCollectionSlider{{ ai_gen_id }});
  })();
</script>

