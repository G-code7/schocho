    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-featured-collection-slider__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-featured-collection-slider__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px;
  }

  .ai-featured-collection-slider__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
  }

  .ai-featured-collection-slider__swiper-{{ ai_gen_id }} {
    position: relative;
    overflow: visible;
    margin-bottom: 40px;
  }

  .ai-featured-collection-slider__swiper-{{ ai_gen_id }} .swiper-wrapper {
    display: flex;
  }

  .ai-featured-collection-slider__swiper-{{ ai_gen_id }} .swiper-slide {
    height: auto;
  }

  .ai-featured-collection-slider__card-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    height: 100%;
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-featured-collection-slider__card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .ai-featured-collection-slider__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-featured-collection-slider__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.3s ease;
  }

  .ai-featured-collection-slider__image-{{ ai_gen_id }}--secondary {
    opacity: 0;
  }

  .ai-featured-collection-slider__card-{{ ai_gen_id }}:hover .ai-featured-collection-slider__image-{{ ai_gen_id }}--secondary {
    opacity: 1;
  }

  .ai-featured-collection-slider__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
  }

  .ai-featured-collection-slider__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-featured-collection-slider__info-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-featured-collection-slider__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0;
    line-height: 1.3;
    font-weight: 500;
  }

  .ai-featured-collection-slider__price-wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
  }

