{% comment %}
  Subscription Purchase Component - Section Version
  Compatible with Shopify Subscriptions app
  Estilo Ka'Chava: Tarjetas de suscripción/one-time con quantity selectors por variante
{% endcomment %}

{% assign ai_gen_id = section.id | replace: '_', '' | slice: 0, 8 %}

{% if product == blank %}
  {% comment %} Fallback para preview del theme editor {% endcomment %}
  {% assign current_variant = nil %}
  {% assign has_subscription = false %}
{% else %}
  {% assign current_variant = product.selected_or_first_available_variant %}
  {% assign has_subscription = false %}
  {% if product.selling_plan_groups.size > 0 %}
    {% assign has_subscription = true %}
    {% assign selling_plan_group = product.selling_plan_groups.first %}
    {% assign selling_plan = selling_plan_group.selling_plans.first %}
  {% endif %}
{% endif %}

{% style %}
  .subscription-purchase-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

  .subscription-purchase__container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .subscription-purchase__form-{{ ai_gen_id }} {
    margin: 0;
  }

  .subscription-purchase__variants-{{ ai_gen_id }} {
    margin-bottom: 16px;
  }

  .subscription-purchase__variants-title-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 700;
    margin-bottom: 12px;
    color: {{ section.settings.text_color }};
  }

  .subscription-purchase__variants-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(80px, 1fr));
    gap: 12px;
    margin-bottom: 16px;
  }

  .subscription-purchase__variant-item-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    padding: 8px;
    background: #F3F3F3;
    border-radius: 8px;
    border: 2px solid transparent;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .subscription-purchase__variant-item-{{ ai_gen_id }}:hover {
    border-color: #CCCCCC;
  }

  .subscription-purchase__variant-item-{{ ai_gen_id }}.selected {
    border-color: #4A6B1A;
    background: #FCF3EC;
  }

  .subscription-purchase__variant-image-{{ ai_gen_id }} {
    width: 64px;
    height: 64px;
    object-fit: cover;
    border-radius: 50%;
  }

  .subscription-purchase__variant-name-{{ ai_gen_id }} {
    font-size: 12px;
    font-weight: 600;
    text-align: center;
    color: {{ section.settings.text_color }};
  }

  .subscription-purchase__variant-select-{{ ai_gen_id }} {
    width: 100%;
    padding: 6px 8px;
    border: 1px solid #CCCCCC;
    border-radius: 4px;
    background: white;
    font-size: 13px;
    cursor: pointer;
  }

  .subscription-purchase__option-{{ ai_gen_id }} {
    position: relative;
    display: block;
    cursor: pointer;
  }

  .subscription-purchase__option-input-{{ ai_gen_id }} {
    position: absolute;
    opacity: 0;
    width: 0;
    height: 0;
  }

  .subscription-purchase__card-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    padding: 20px;
    border: 2px solid;
    border-radius: 8px;
    transition: all 0.3s ease;
    background: white;
  }

  .subscription-purchase__option--subscribe-{{ ai_gen_id }} .subscription-purchase__card-{{ ai_gen_id }} {
    background-color: {{ section.settings.subscribe_bg_color }};
    border-color: {{ section.settings.subscribe_border_color }};
  }

  .subscription-purchase__option-input-{{ ai_gen_id }}:checked ~ .subscription-purchase__card-{{ ai_gen_id }} {
    border-color: {{ section.settings.subscribe_selected_border }};
    border-width: 3px;
  }

  .subscription-purchase__option--onetime-{{ ai_gen_id }} .subscription-purchase__card-{{ ai_gen_id }} {
    background-color: {{ section.settings.onetime_bg_color }};
    border-color: {{ section.settings.onetime_border_color }};
    opacity: 0.6;
  }

  .subscription-purchase__option--onetime-{{ ai_gen_id }} .subscription-purchase__option-input-{{ ai_gen_id }}:checked ~ .subscription-purchase__card-{{ ai_gen_id }} {
    border-color: {{ section.settings.onetime_selected_border }};
    border-width: 3px;
    opacity: 1;
  }

  .subscription-purchase__radio-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 22px;
    height: 22px;
    border: 2px solid {{ section.settings.radio_border_color }};
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 2px;
    transition: all 0.2s ease;
  }

  .subscription-purchase__option-input-{{ ai_gen_id }}:checked ~ .subscription-purchase__card-{{ ai_gen_id }} .subscription-purchase__radio-{{ ai_gen_id }} {
    border-color: {{ section.settings.subscribe_selected_border }};
    background-color: {{ section.settings.subscribe_selected_border }};
  }

  .subscription-purchase__radio-inner-{{ ai_gen_id }} {
    width: 8px;
    height: 8px;
    background-color: white;
    border-radius: 50%;
    opacity: 0;
    transition: opacity 0.2s ease;
  }

  .subscription-purchase__option-input-{{ ai_gen_id }}:checked ~ .subscription-purchase__card-{{ ai_gen_id }} .subscription-purchase__radio-inner-{{ ai_gen_id }} {
    opacity: 1;
  }

  .subscription-purchase__content-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .subscription-purchase__header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  .subscription-purchase__title-{{ ai_gen_id }} {
    font-size: {{ section.settings.title_size }}px;
    font-weight: 800;
    color: {{ section.settings.text_color }};
    margin: 0;
  }

  .subscription-purchase__subtitle-{{ ai_gen_id }} {
    font-size: {{ section.settings.subtitle_size }}px;
    color: {{ section.settings.text_color }};
    opacity: 0.8;
    margin: 4px 0 12px;
  }

  .subscription-purchase__pricing-{{ ai_gen_id }} {
    display: flex;
    align-items: baseline;
    gap: 8px;
    margin-bottom: 4px;
  }

  .subscription-purchase__price-original-{{ ai_gen_id }} {
    font-size: {{ section.settings.price_size }}px;
    color: {{ section.settings.text_color }};
    text-decoration: line-through;
    opacity: 0.6;
  }

  .subscription-purchase__price-{{ ai_gen_id }} {
    font-size: {{ section.settings.price_size }}px;
    font-weight: 700;
  }

  .subscription-purchase__option--subscribe-{{ ai_gen_id }} .subscription-purchase__price-{{ ai_gen_id }} {
    color: {{ section.settings.subscribe_price_color }};
  }

  .subscription-purchase__option--onetime-{{ ai_gen_id }} .subscription-purchase__price-{{ ai_gen_id }} {
    color: {{ section.settings.text_color }};
  }

  .subscription-purchase__per-serving-{{ ai_gen_id }} {
    font-size: {{ section.settings.per_serving_size }}px;
    color: {{ section.settings.text_color }};
    opacity: 0.7;
    margin-bottom: 12px;
  }

  .subscription-purchase__benefits-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .subscription-purchase__benefit-{{ ai_gen_id }} {
    font-size: {{ section.settings.benefit_size }}px;
    color: {{ section.settings.text_color }};
    padding-left: 18px;
    position: relative;
    margin-bottom: 6px;
    line-height: 1.4;
  }

  .subscription-purchase__benefit-{{ ai_gen_id }}::before {
    content: "✓";
    position: absolute;
    left: 0;
    color: {{ section.settings.subscribe_price_color }};
    font-weight: 700;
  }

  .subscription-purchase__summary-{{ ai_gen_id }} {
    margin-top: 16px;
    padding: 16px;
    background-color: {{ section.settings.summary_bg_color }};
    border-radius: 8px;
    text-align: center;
  }

  .subscription-purchase__savings-{{ ai_gen_id }} {
    font-size: {{ section.settings.savings_size }}px;
    font-weight: 700;
    color: {{ section.settings.subscribe_price_color }};
    margin: 0 0 12px;
  }

  .subscription-purchase__button-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ section.settings.button_padding }}px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    border: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_size }}px;
    font-weight: 700;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .subscription-purchase__button-{{ ai_gen_id }}:hover:not(:disabled) {
    background-color: {{ section.settings.button_hover_bg }};
    transform: translateY(-1px);
  }

  .subscription-purchase__button-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .subscription-purchase__trust-badges-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    gap: 24px;
    margin-top: 20px;
    flex-wrap: wrap;
  }

  .subscription-purchase__badge-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: {{ section.settings.badge_size }}px;
    color: {{ section.settings.text_color }};
    font-weight: 600;
  }

  .subscription-purchase__badge-icon-{{ ai_gen_id }} {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
  }

  .subscription-purchase__error-{{ ai_gen_id }} {
    color: #D82C0D;
    font-size: 14px;
    margin-top: 8px;
    text-align: center;
    display: none;
  }

  .subscription-purchase__error-{{ ai_gen_id }}.active {
    display: block;
  }

  @media screen and (max-width: 749px) {
    .subscription-purchase__variants-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
    }

    .subscription-purchase__card-{{ ai_gen_id }} {
      padding: 16px;
    }

    .subscription-purchase__header-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 8px;
    }

    .subscription-purchase__trust-badges-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 12px;
      align-items: center;
    }
  }
{% endstyle %}

<div class="subscription-purchase-{{ ai_gen_id }}" data-section-id="{{ section.id }}">
  {% if product == blank %}
    <div style="padding: 40px; text-align: center; background: #f5f5f5; border-radius: 8px;">
      <p>Selecciona un producto para ver las opciones de compra</p>
    </div>
  {% else %}
    {% form 'product', product, class: 'subscription-purchase__form-' | append: ai_gen_id %}
      <input type="hidden" name="id" value="{{ current_variant.id }}" data-variant-input>
      <input type="hidden" name="selling_plan" value="" data-selling-plan-input>
      
      {% comment %} Selector de variantes estilo Ka'Chava {% endcomment %}
      {% if product.variants.size > 1 %}
        <div class="subscription-purchase__variants-{{ ai_gen_id }}">
          <h3 class="subscription-purchase__variants-title-{{ ai_gen_id }}">{{ section.settings.variants_title }}</h3>
          <div class="subscription-purchase__variants-grid-{{ ai_gen_id }}">
            {% for variant in product.variants %}
              <div 
                class="subscription-purchase__variant-item-{{ ai_gen_id }}{% if variant.id == current_variant.id %} selected{% endif %}"
                data-variant-id="{{ variant.id }}"
                data-variant-available="{{ variant.available }}"
                data-variant-price="{{ variant.price }}"
                data-variant-compare-price="{{ variant.compare_at_price | default: variant.price }}"
                {% if variant.featured_image %}
                  data-variant-image="{{ variant.featured_image | img_url: 'compact' }}"
                {% endif %}
              >
                {% if variant.featured_image %}
                  <img 
                    src="{{ variant.featured_image | img_url: 'compact' }}" 
                    alt="{{ variant.title }}"
                    class="subscription-purchase__variant-image-{{ ai_gen_id }}"
                  >
                {% else %}
                  <div class="subscription-purchase__variant-image-{{ ai_gen_id }}" style="background: #ddd; display: flex; align-items: center; justify-content: center; font-size: 10px;">NO IMG</div>
                {% endif %}
                <span class="subscription-purchase__variant-name-{{ ai_gen_id }}">{{ variant.title }}</span>
                <select 
                  class="subscription-purchase__variant-select-{{ ai_gen_id }}"
                  name="quantity"
                  data-variant-quantity
                  aria-label="Cantidad para {{ variant.title }}"
                >
                  {% for i in (0..6) %}
                    <option value="{{ i }}"{% if i == 0 %} selected{% endif %}>{{ i }}</option>
                  {% endfor %}
                </select>
              </div>
            {% endfor %}
          </div>
        </div>
      {% else %}
        <input type="hidden" name="quantity" value="1" data-quantity-input>
      {% endif %}

      <div class="subscription-purchase__container-{{ ai_gen_id }}">
        {% comment %} Opción de Suscripción {% endcomment %}
        {% if has_subscription and selling_plan %}
          {% assign subscription_allocation = current_variant.selling_plan_allocations | where: 'selling_plan_id', selling_plan.id | first %}
          {% if subscription_allocation %}
            {% assign sub_price = subscription_allocation.per_delivery_price %}
            {% assign original_price = current_variant.price %}
            {% assign savings = original_price | minus: sub_price %}
            {% assign servings = section.settings.servings_count %}
            
            <label class="subscription-purchase__option-{{ ai_gen_id }} subscription-purchase__option--subscribe-{{ ai_gen_id }}">
              <input 
                type="radio" 
                name="purchase_type" 
                value="subscription" 
                class="subscription-purchase__option-input-{{ ai_gen_id }}"
                data-selling-plan-id="{{ selling_plan.id }}"
                checked
              >
              <div class="subscription-purchase__card-{{ ai_gen_id }}">
                <div class="subscription-purchase__radio-{{ ai_gen_id }}">
                  <div class="subscription-purchase__radio-inner-{{ ai_gen_id }}"></div>
                </div>
                <div class="subscription-purchase__content-{{ ai_gen_id }}">
                  <div class="subscription-purchase__header-{{ ai_gen_id }}">
                    <div>
                      <h3 class="subscription-purchase__title-{{ ai_gen_id }}">{{ section.settings.subscribe_title }}</h3>
                      <p class="subscription-purchase__subtitle-{{ ai_gen_id }}">
                        {% if servings > 0 %}{{ servings }} servings{% endif %}
                        {% if selling_plan.name %} • {{ selling_plan.name }}{% endif %}
                      </p>
                    </div>
                  </div>
                  <div class="subscription-purchase__pricing-{{ ai_gen_id }}">
                    <span class="subscription-purchase__price-original-{{ ai_gen_id }}">{{ original_price | money }}</span>
                    <span class="subscription-purchase__price-{{ ai_gen_id }}" data-subscription-price>{{ sub_price | money }}</span>
                    <span style="font-size: 13px; color: #666;">/ bag</span>
                  </div>
                  {% if servings > 0 %}
                    <p class="subscription-purchase__per-serving-{{ ai_gen_id }}">
                      {{ sub_price | divided_by: servings | money }} / serving
                    </p>
                  {% endif %}
                  {% if section.settings.show_benefits %}
                    <ul class="subscription-purchase__benefits-{{ ai_gen_id }}">
                      {% if savings > 0 %}
                        <li class="subscription-purchase__benefit-{{ ai_gen_id }}">Save {{ savings | money }}/bag on every order</li>
                      {% endif %}
                      <li class="subscription-purchase__benefit-{{ ai_gen_id }}">Easily change your quantities</li>
                      <li class="subscription-purchase__benefit-{{ ai_gen_id }}">Cancel any time</li>
                      <li class="subscription-purchase__benefit-{{ ai_gen_id }}">Pre-shipment reminders (no surprise charges)</li>
                    </ul>
                  {% endif %}
                </div>
              </div>
            </label>
          {% endif %}
        {% endif %}

        {% comment %} Opción de Compra Única {% endcomment %}
        <label class="subscription-purchase__option-{{ ai_gen_id }} subscription-purchase__option--onetime-{{ ai_gen_id }}">
          <input 
            type="radio" 
            name="purchase_type" 
            value="onetime" 
            class="subscription-purchase__option-input-{{ ai_gen_id }}"
            {% unless has_subscription %}checked{% endunless %}
          >
          <div class="subscription-purchase__card-{{ ai_gen_id }}">
            <div class="subscription-purchase__radio-{{ ai_gen_id }}">
              <div class="subscription-purchase__radio-inner-{{ ai_gen_id }}"></div>
            </div>
            <div class="subscription-purchase__content-{{ ai_gen_id }}">
              <div class="subscription-purchase__header-{{ ai_gen_id }}">
                <div>
                  <h3 class="subscription-purchase__title-{{ ai_gen_id }}">{{ section.settings.onetime_title }}</h3>
                  <p class="subscription-purchase__subtitle-{{ ai_gen_id }}">
                    {% if section.settings.servings_count > 0 %}{{ section.settings.servings_count }} servings{% endif %}
                  </p>
                </div>
              </div>
              <div class="subscription-purchase__pricing-{{ ai_gen_id }}">
                <span class="subscription-purchase__price-{{ ai_gen_id }}" data-onetime-price>{{ current_variant.price | money }}</span>
                <span style="font-size: 13px; color: #666;">/ bag</span>
              </div>
              {% if section.settings.servings_count > 0 %}
                <p class="subscription-purchase__per-serving-{{ ai_gen_id }}">
                  {{ current_variant.price | divided_by: section.settings.servings_count | money }} / serving
                </p>
              {% endif %}
            </div>
          </div>
        </label>

        {% comment %} Resumen y Botón {% endcomment %}
        {% if section.settings.show_summary %}
          <div class="subscription-purchase__summary-{{ ai_gen_id }}">
            {% if has_subscription and savings > 0 %}
              <p class="subscription-purchase__savings-{{ ai_gen_id }}">
                You're saving <span data-savings-amount>{{ savings | money }}</span>
              </p>
            {% endif %}
            <button 
              type="submit" 
              name="add"
              class="subscription-purchase__button-{{ ai_gen_id }}"
              {% unless current_variant.available %}disabled{% endunless %}
              data-add-to-cart
            >
              {% if current_variant.available %}
                {{ section.settings.button_text }}
              {% else %}
                {{ section.settings.sold_out_text }}
              {% endif %}
            </button>
            <div class="subscription-purchase__error-{{ ai_gen_id }}" data-error-message></div>
          </div>
        {% endif %}

        {% comment %} Trust Badges {% endcomment %}
        {% if section.settings.show_trust_badges %}
          <div class="subscription-purchase__trust-badges-{{ ai_gen_id }}">
            <div class="subscription-purchase__badge-{{ ai_gen_id }}">
              <svg class="subscription-purchase__badge-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="#4A6B1A" stroke-width="2">
                <path d="M12 2L15.09 8.26L22 9.27L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9.27L8.91 8.26L12 2Z"/>
              </svg>
              <span>{{ section.settings.badge_1_text }}</span>
            </div>
            <div class="subscription-purchase__badge-{{ ai_gen_id }}">
              <svg class="subscription-purchase__badge-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="#4A6B1A" stroke-width="2">
                <rect x="3" y="11" width="18" height="11" rx="2"/>
                <path d="M7 11V7a5 5 0 0110 0v4"/>
              </svg>
              <span>{{ section.settings.badge_2_text }}</span>
            </div>
            <div class="subscription-purchase__badge-{{ ai_gen_id }}">
              <svg class="subscription-purchase__badge-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="#4A6B1A" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12 6 12 12 16 14"/>
              </svg>
              <span>{{ section.settings.badge_3_text }}</span>
            </div>
          </div>
        {% endif %}
      </div>
    {% endform %}
  {% endif %}
</div>

<script>
  (function() {
    const sectionId = '{{ ai_gen_id }}';
    const container = document.querySelector('.subscription-purchase-' + sectionId);
    
    if (!container) return;
    
    const form = container.querySelector('form');
    const variantInput = container.querySelector('[data-variant-input]');
    const sellingPlanInput = container.querySelector('[data-selling-plan-input]');
    const radioButtons = container.querySelectorAll('input[name="purchase_type"]');
    const variantItems = container.querySelectorAll('[data-variant-id]');
    const addToCartBtn = container.querySelector('[data-add-to-cart]');
    const errorMsg = container.querySelector('[data-error-message]');
    
    // Manejar selección de variante (estilo Ka'Chava)
    variantItems.forEach(item => {
      item.addEventListener('click', function(e) {
        if (e.target.tagName === 'SELECT') return;
        
        const variantId = this.dataset.variantId;
        const isAvailable = this.dataset.variantAvailable === 'true';
        
        // Actualizar selección visual
        variantItems.forEach(v => v.classList.remove('selected'));
        this.classList.add('selected');
        
        // Actualizar input
        if (variantInput) variantInput.value = variantId;
        
        // Actualizar precios si hay datos
        const price = this.dataset.variantPrice;
        const comparePrice = this.dataset.variantComparePrice;
        
        updatePrices(price, comparePrice);
        
        // Actualizar estado del botón
        if (addToCartBtn) {
          addToCartBtn.disabled = !isAvailable;
          addToCartBtn.textContent = isAvailable ? '{{ section.settings.button_text }}' : '{{ section.settings.sold_out_text }}';
        }
      });
      
      // Manejar cambio de cantidad
      const quantitySelect = item.querySelector('[data-variant-quantity]');
      if (quantitySelect) {
        quantitySelect.addEventListener('change', function(e) {
          e.stopPropagation();
          // Aquí puedes agregar lógica para múltiples variantes
          console.log('Cantidad cambiada:', this.value, 'para variante:', item.dataset.variantId);
        });
      }
    });
    
    // Manejar cambio de tipo de compra
    radioButtons.forEach(radio => {
      radio.addEventListener('change', function() {
        const sellingPlanId = this.dataset.sellingPlanId || '';
        if (sellingPlanInput) sellingPlanInput.value = sellingPlanId;
      });
    });
    
    // Actualizar precios dinámicamente
    function updatePrices(price, comparePrice) {
      const subPriceEl = container.querySelector('[data-subscription-price]');
      const onetimePriceEl = container.querySelector('[data-onetime-price]');
      const savingsEl = container.querySelector('[data-savings-amount]');
      
      if (price) {
        const formattedPrice = formatMoney(price);
        if (onetimePriceEl) onetimePriceEl.textContent = formattedPrice;
        
        // Calcular precio de suscripción (asumiendo 15% descuento o usar datos reales)
        if (subPriceEl) {
          // Aquí deberías obtener el precio real de suscripción de los datos de la variante
          subPriceEl.textContent = formattedPrice; // Placeholder
        }
      }
    }
    
    function formatMoney(cents) {
      const amount = parseInt(cents) / 100;
      return '$' + amount.toFixed(2);
    }
    
    // Manejar submit del form
    if (form) {
      form.addEventListener('submit', async function(e) {
        e.preventDefault();
        
        if (addToCartBtn) {
          addToCartBtn.disabled = true;
          addToCartBtn.textContent = '{{ section.settings.adding_text }}';
        }
        
        if (errorMsg) errorMsg.classList.remove('active');
        
        const formData = new FormData(form);
        
        try {
          const response = await fetch('/cart/add.js', {
            method: 'POST',
            body: formData
          });
          
          const data = await response.json();
          
          if (data.status === 422 || data.status === 'error') {
            throw new Error(data.description || data.message || 'Error al agregar');
          }
          
          // Éxito - actualizar carrito
          document.dispatchEvent(new CustomEvent('cart:updated'));
          
          // Abrir drawer si existe
          const cartDrawer = document.querySelector('cart-drawer');
          if (cartDrawer && typeof cartDrawer.open === 'function') {
            cartDrawer.open();
          }
          
        } catch (err) {
          if (errorMsg) {
            errorMsg.textContent = err.message || '{{ section.settings.error_text }}';
            errorMsg.classList.add('active');
          }
        } finally {
          if (addToCartBtn) {
            addToCartBtn.disabled = false;
            addToCartBtn.textContent = '{{ section.settings.button_text }}';
          }
        }
      });
    }
  })();
</script>

