{% comment %}
  Subscription Purchase - Section Version
  Compatible con Shopify Subscriptions App
  Estilo Ka'Chava: Selector de variantes + Suscripción/One-time
{% endcomment %}

{% assign ai_gen_id = section.id | slice: 0, 8 %}

{% if product == blank %}
  <div style="padding: 40px; text-align: center; background: #f5f5f5; border-radius: 8px; margin: 20px;">
    <p><strong>Selecciona un producto</strong> para visualizar las opciones de compra</p>
    <p style="font-size: 14px; color: #666; margin-top: 10px;">Esta sección requiere estar en una página de producto</p>
  </div>
{% else %}
  {% assign current_variant = product.selected_or_first_available_variant %}
  {% assign has_subscription = false %}
  
  {% if product.selling_plan_groups.size > 0 %}
    {% assign has_subscription = true %}
    {% assign selling_plan_group = product.selling_plan_groups.first %}
    {% assign selling_plan = selling_plan_group.selling_plans.first %}
    {% assign subscription_allocation = current_variant.selling_plan_allocations | where: 'selling_plan_id', selling_plan.id | first %}
  {% endif %}

  {% assign servings = section.settings.servings_count | default: 15 %}

  {% style %}
    .subscription-purchase-{{ ai_gen_id }} {
      width: 100%;
      max-width: 100%;
    }

    .subscription-purchase__wrapper-{{ ai_gen_id }} {
      display: flex;
      flex-direction: column;
      gap: 16px;
    }

    /* Selector de Variantes Estilo Ka'Chava */
    .subscription-purchase__variants-{{ ai_gen_id }} {
      margin-bottom: 8px;
    }

    .subscription-purchase__variants-title-{{ ai_gen_id }} {
      font-size: 18px;
      font-weight: 800;
      margin-bottom: 16px;
      color: {{ section.settings.text_color }};
    }

    .subscription-purchase__variants-grid-{{ ai_gen_id }} {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(72px, 1fr));
      gap: 12px;
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .subscription-purchase__variant-{{ ai_gen_id }} {
      position: relative;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 8px;
      padding: 8px 4px;
      background: #F3F3F3;
      border-radius: 8px;
      border: 2px solid transparent;
      transition: all 0.2s ease;
      cursor: pointer;
    }

    .subscription-purchase__variant-{{ ai_gen_id }}.active {
      border-color: #4A6B1A;
      background: #FCF3EC;
    }

    .subscription-purchase__variant-badge-{{ ai_gen_id }} {
      position: absolute;
      top: -6px;
      left: -6px;
      background: #4A6B1A;
      color: white;
      font-size: 8px;
      font-weight: 700;
      padding: 4px 6px;
      border-radius: 10px;
      text-transform: uppercase;
      z-index: 2;
    }

    .subscription-purchase__variant-image-{{ ai_gen_id }} {
      width: 56px;
      height: 56px;
      object-fit: cover;
      border-radius: 50%;
      background: #fff;
    }

    .subscription-purchase__variant-name-{{ ai_gen_id }} {
      font-size: 11px;
      font-weight: 600;
      text-align: center;
      color: {{ section.settings.text_color }};
      line-height: 1.2;
    }

    .subscription-purchase__variant-select-{{ ai_gen_id }} {
      width: 100%;
      padding: 6px;
      border: 1px solid #CCCCCC;
      border-radius: 4px;
      background: white;
      font-size: 13px;
      cursor: pointer;
      margin-top: 4px;
    }

    /* Opciones de Compra */
    .subscription-purchase__options-{{ ai_gen_id }} {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .subscription-purchase__option-{{ ai_gen_id }} {
      position: relative;
      display: block;
      cursor: pointer;
      margin: 0;
    }

    .subscription-purchase__option-input-{{ ai_gen_id }} {
      position: absolute;
      opacity: 0;
      width: 0;
      height: 0;
    }

    .subscription-purchase__card-{{ ai_gen_id }} {
      display: flex;
      gap: 16px;
      padding: 20px;
      border: 2px solid;
      border-radius: 8px;
      transition: all 0.3s ease;
      background: white;
    }

    /* Suscripción */
    .subscription-purchase__option--subscribe-{{ ai_gen_id }} .subscription-purchase__card-{{ ai_gen_id }} {
      background-color: {{ section.settings.subscribe_bg_color }};
      border-color: {{ section.settings.subscribe_border_color }};
    }

    .subscription-purchase__option-input-{{ ai_gen_id }}:checked ~ .subscription-purchase__card-{{ ai_gen_id }} {
      border-color: {{ section.settings.subscribe_selected_border }};
      border-width: 3px;
      box-shadow: 0 2px 8px rgba(74, 107, 26, 0.1);
    }

    /* One-time */
    .subscription-purchase__option--onetime-{{ ai_gen_id }} .subscription-purchase__card-{{ ai_gen_id }} {
      background-color: {{ section.settings.onetime_bg_color }};
      border-color: {{ section.settings.onetime_border_color }};
      opacity: 0.6;
    }

    .subscription-purchase__option--onetime-{{ ai_gen_id }} .subscription-purchase__option-input-{{ ai_gen_id }}:checked ~ .subscription-purchase__card-{{ ai_gen_id }} {
      opacity: 1;
      border-color: {{ section.settings.onetime_selected_border }};
      border-width: 3px;
    }

    /* Radio Button Custom */
    .subscription-purchase__radio-{{ ai_gen_id }} {
      flex-shrink: 0;
      width: 22px;
      height: 22px;
      border: 2px solid {{ section.settings.radio_border_color }};
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-top: 2px;
      transition: all 0.2s ease;
    }

    .subscription-purchase__option-input-{{ ai_gen_id }}:checked ~ .subscription-purchase__card-{{ ai_gen_id }} .subscription-purchase__radio-{{ ai_gen_id }} {
      border-color: {{ section.settings.subscribe_selected_border }};
      background-color: {{ section.settings.subscribe_selected_border }};
    }

    .subscription-purchase__radio-inner-{{ ai_gen_id }} {
      width: 8px;
      height: 8px;
      background-color: white;
      border-radius: 50%;
      opacity: 0;
      transition: opacity 0.2s ease;
    }

    .subscription-purchase__option-input-{{ ai_gen_id }}:checked ~ .subscription-purchase__card-{{ ai_gen_id }} .subscription-purchase__radio-inner-{{ ai_gen_id }} {
      opacity: 1;
    }

    /* Contenido */
    .subscription-purchase__content-{{ ai_gen_id }} {
      flex-grow: 1;
    }

    .subscription-purchase__header-{{ ai_gen_id }} {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      margin-bottom: 4px;
      flex-wrap: wrap;
      gap: 8px;
    }

    .subscription-purchase__title-{{ ai_gen_id }} {
      font-size: {{ section.settings.title_size }}px;
      font-weight: 800;
      color: {{ section.settings.text_color }};
      margin: 0;
    }

    .subscription-purchase__subtitle-{{ ai_gen_id }} {
      font-size: {{ section.settings.subtitle_size }}px;
      color: {{ section.settings.text_color }};
      opacity: 0.8;
      margin: 4px 0 12px;
    }

    .subscription-purchase__pricing-{{ ai_gen_id }} {
      display: flex;
      align-items: baseline;
      gap: 8px;
      margin-bottom: 4px;
      flex-wrap: wrap;
    }

    .subscription-purchase__price-original-{{ ai_gen_id }} {
      font-size: {{ section.settings.price_size }}px;
      color: {{ section.settings.text_color }};
      text-decoration: line-through;
      opacity: 0.6;
    }

    .subscription-purchase__price-{{ ai_gen_id }} {
      font-size: {{ section.settings.price_size }}px;
      font-weight: 700;
    }

    .subscription-purchase__option--subscribe-{{ ai_gen_id }} .subscription-purchase__price-{{ ai_gen_id }} {
      color: {{ section.settings.subscribe_price_color }};
    }

    .subscription-purchase__option--onetime-{{ ai_gen_id }} .subscription-purchase__price-{{ ai_gen_id }} {
      color: {{ section.settings.text_color }};
    }

    .subscription-purchase__per-serving-{{ ai_gen_id }} {
      font-size: {{ section.settings.per_serving_size }}px;
      color: {{ section.settings.text_color }};
      opacity: 0.7;
      margin-bottom: 12px;
    }

    .subscription-purchase__benefits-{{ ai_gen_id }} {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .subscription-purchase__benefit-{{ ai_gen_id }} {
      font-size: {{ section.settings.benefit_size }}px;
      color: {{ section.settings.text_color }};
      padding-left: 18px;
      position: relative;
      margin-bottom: 6px;
      line-height: 1.4;
    }

    .subscription-purchase__benefit-{{ ai_gen_id }}::before {
      content: "✓";
      position: absolute;
      left: 0;
      color: {{ section.settings.subscribe_price_color }};
      font-weight: 700;
    }

    /* Summary */
    .subscription-purchase__summary-{{ ai_gen_id }} {
      margin-top: 16px;
      padding: 20px;
      background-color: {{ section.settings.summary_bg_color }};
      border-radius: 8px;
      text-align: center;
    }

    .subscription-purchase__savings-{{ ai_gen_id }} {
      font-size: {{ section.settings.savings_size }}px;
      font-weight: 700;
      color: {{ section.settings.subscribe_price_color }};
      margin: 0 0 16px;
    }

    .subscription-purchase__button-{{ ai_gen_id }} {
      width: 100%;
      padding: {{ section.settings.button_padding }}px;
      background-color: {{ section.settings.button_bg_color }};
      color: {{ section.settings.button_text_color }};
      border: none;
      border-radius: {{ section.settings.button_border_radius }}px;
      font-size: {{ section.settings.button_size }}px;
      font-weight: 700;
      text-transform: uppercase;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    .subscription-purchase__button-{{ ai_gen_id }}:hover:not(:disabled) {
      background-color: {{ section.settings.button_hover_bg }};
      transform: translateY(-2px);
    }

    .subscription-purchase__button-{{ ai_gen_id }}:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }

    /* Trust Badges */
    .subscription-purchase__trust-badges-{{ ai_gen_id }} {
      display: flex;
      justify-content: center;
      gap: 32px;
      margin-top: 24px;
      flex-wrap: wrap;
    }

    .subscription-purchase__badge-{{ ai_gen_id }} {
      display: flex;
      align-items: center;
      gap: 8px;
      font-size: {{ section.settings.badge_size }}px;
      color: {{ section.settings.text_color }};
      font-weight: 600;
    }

    .subscription-purchase__badge-icon-{{ ai_gen_id }} {
      width: 24px;
      height: 24px;
      flex-shrink: 0;
      color: {{ section.settings.subscribe_price_color }};
    }

    .subscription-purchase__error-{{ ai_gen_id }} {
      color: #D82C0D;
      font-size: 14px;
      margin-top: 12px;
      text-align: center;
      display: none;
    }

    .subscription-purchase__error-{{ ai_gen_id }}.active {
      display: block;
    }

    @media screen and (max-width: 749px) {
      .subscription-purchase__variants-grid-{{ ai_gen_id }} {
        grid-template-columns: repeat(3, 1fr);
      }

      .subscription-purchase__card-{{ ai_gen_id }} {
        padding: 16px;
      }

      .subscription-purchase__header-{{ ai_gen_id }} {
        flex-direction: column;
      }

      .subscription-purchase__trust-badges-{{ ai_gen_id }} {
        flex-direction: column;
        gap: 16px;
        align-items: center;
      }
    }
  {% endstyle %}

  <div class="subscription-purchase-{{ ai_gen_id }}">
    {% form 'product', product %}
      <div class="subscription-purchase__wrapper-{{ ai_gen_id }}">
        
        {% comment %} SELECTOR DE VARIANTES {% endcomment %}
        {% if product.variants.size > 1 %}
          <div class="subscription-purchase__variants-{{ ai_gen_id }}">
            <h3 class="subscription-purchase__variants-title-{{ ai_gen_id }}">{{ section.settings.variants_title }}</h3>
            <ul class="subscription-purchase__variants-grid-{{ ai_gen_id }}">
              {% for variant in product.variants %}
                <li 
                  class="subscription-purchase__variant-{{ ai_gen_id }}{% if variant.id == current_variant.id %} active{% endif %}"
                  data-variant-id="{{ variant.id }}"
                  data-variant-price="{{ variant.price }}"
                  data-variant-compare-price="{{ variant.compare_at_price | default: variant.price }}"
                  data-variant-available="{{ variant.available }}"
                  onclick="selectVariant{{ ai_gen_id }}(this)"
                >
                  {% if forloop.first %}
                    <span class="subscription-purchase__variant-badge-{{ ai_gen_id }}">Best Seller</span>
                  {% endif %}
                  
                  {% if variant.featured_image %}
                    <img 
                      src="{{ variant.featured_image | img_url: 'compact' }}" 
                      alt="{{ variant.title }}"
                      class="subscription-purchase__variant-image-{{ ai_gen_id }}"
                      loading="lazy"
                    >
                  {% else %}
                    <div class="subscription-purchase__variant-image-{{ ai_gen_id }}" style="background: #e0e0e0; display: flex; align-items: center; justify-content: center; font-size: 10px; color: #666;">
                      {{ variant.title | slice: 0, 2 }}
                    </div>
                  {% endif %}
                  
                  <span class="subscription-purchase__variant-name-{{ ai_gen_id }}">{{ variant.title }}</span>
                  
                  <select 
                    class="subscription-purchase__variant-select-{{ ai_gen_id }}"
                    name="updates[{{ variant.id }}]"
                    onchange="event.stopPropagation()"
                    aria-label="Cantidad de {{ variant.title }}"
                  >
                    {% for i in (0..6) %}
                      <option value="{{ i }}"{% if i == 0 %} selected{% endif %}>{{ i }}</option>
                    {% endfor %}
                  </select>
                </li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}

        <input type="hidden" name="id" value="{{ current_variant.id }}" data-main-variant-input>
        <input type="hidden" name="selling_plan" value="" data-selling-plan-input>
        <input type="hidden" name="quantity" value="1" data-quantity-input>

        {% comment %} OPCIONES DE COMPRA {% endcomment %}
        <div class="subscription-purchase__options-{{ ai_gen_id }}">
          
          {% comment %} SUSCRIPCIÓN {% endcomment %}
          {% if has_subscription and subscription_allocation %}
            {% assign sub_price = subscription_allocation.per_delivery_price %}
            {% assign original_price = current_variant.price %}
            {% assign savings_amount = original_price | minus: sub_price %}
            
            <label class="subscription-purchase__option-{{ ai_gen_id }} subscription-purchase__option--subscribe-{{ ai_gen_id }}">
              <input 
                type="radio" 
                name="purchase_type_{{ ai_gen_id }}" 
                value="subscription" 
                class="subscription-purchase__option-input-{{ ai_gen_id }}"
                data-selling-plan-id="{{ selling_plan.id }}"
                checked
                onchange="updatePurchaseType{{ ai_gen_id }}(this)"
              >
              <div class="subscription-purchase__card-{{ ai_gen_id }}">
                <div class="subscription-purchase__radio-{{ ai_gen_id }}">
                  <div class="subscription-purchase__radio-inner-{{ ai_gen_id }}"></div>
                </div>
                <div class="subscription-purchase__content-{{ ai_gen_id }}">
                  <div class="subscription-purchase__header-{{ ai_gen_id }}">
                    <div>
                      <h3 class="subscription-purchase__title-{{ ai_gen_id }}">{{ section.settings.subscribe_title }}</h3>
                      <p class="subscription-purchase__subtitle-{{ ai_gen_id }}">
                        {% if servings > 0 %}{{ servings }} servings{% endif %}
                        {% if selling_plan.name %} • {{ selling_plan.name }}{% endif %}
                      </p>
                    </div>
                  </div>
                  <div class="subscription-purchase__pricing-{{ ai_gen_id }}">
                    <span class="subscription-purchase__price-original-{{ ai_gen_id }}">{{ original_price | money }}</span>
                    <span class="subscription-purchase__price-{{ ai_gen_id }}">{{ sub_price | money }}</span>
                    <span style="font-size: 13px; color: #666; font-weight: 500;">/ bag</span>
                  </div>
                  {% if servings > 0 %}
                    <p class="subscription-purchase__per-serving-{{ ai_gen_id }}">
                      {{ sub_price | divided_by: servings | money }} / serving
                    </p>
                  {% endif %}
                  {% if section.settings.show_benefits %}
                    <ul class="subscription-purchase__benefits-{{ ai_gen_id }}">
                      <li class="subscription-purchase__benefit-{{ ai_gen_id }}">Save {{ savings_amount | money }}/bag on every order</li>
                      <li class="subscription-purchase__benefit-{{ ai_gen_id }}">Easily change your quantities</li>
                      <li class="subscription-purchase__benefit-{{ ai_gen_id }}">Cancel any time</li>
                      <li class="subscription-purchase__benefit-{{ ai_gen_id }}">Pre-shipment reminders (no surprise charges)</li>
                    </ul>
                  {% endif %}
                </div>
              </div>
            </label>
          {% endif %}

          {% comment %} ONE-TIME {% endcomment %}
          <label class="subscription-purchase__option-{{ ai_gen_id }} subscription-purchase__option--onetime-{{ ai_gen_id }}">
            <input 
              type="radio" 
              name="purchase_type_{{ ai_gen_id }}" 
              value="onetime" 
              class="subscription-purchase__option-input-{{ ai_gen_id }}"
              {% unless has_subscription %}checked{% endunless %}
              onchange="updatePurchaseType{{ ai_gen_id }}(this)"
            >
            <div class="subscription-purchase__card-{{ ai_gen_id }}">
              <div class="subscription-purchase__radio-{{ ai_gen_id }}">
                <div class="subscription-purchase__radio-inner-{{ ai_gen_id }}"></div>
              </div>
              <div class="subscription-purchase__content-{{ ai_gen_id }}">
                <div class="subscription-purchase__header-{{ ai_gen_id }}">
                  <div>
                    <h3 class="subscription-purchase__title-{{ ai_gen_id }}">{{ section.settings.onetime_title }}</h3>
                    <p class="subscription-purchase__subtitle-{{ ai_gen_id }}">
                      {% if servings > 0 %}{{ servings }} servings{% endif %}
                    </p>
                  </div>
                </div>
                <div class="subscription-purchase__pricing-{{ ai_gen_id }}">
                  {% if current_variant.compare_at_price > current_variant.price %}
                    <span class="subscription-purchase__price-original-{{ ai_gen_id }}">{{ current_variant.compare_at_price | money }}</span>
                  {% endif %}
                  <span class="subscription-purchase__price-{{ ai_gen_id }}">{{ current_variant.price | money }}</span>
                  <span style="font-size: 13px; color: #666; font-weight: 500;">/ bag</span>
                </div>
                {% if servings > 0 %}
                  <p class="subscription-purchase__per-serving-{{ ai_gen_id }}">
                    {{ current_variant.price | divided_by: servings | money }} / serving
                  </p>
                {% endif %}
              </div>
            </div>
          </label>
        </div>

        {% comment %} SUMMARY Y BOTÓN {% endcomment %}
        {% if section.settings.show_summary %}
          <div class="subscription-purchase__summary-{{ ai_gen_id }}">
            {% if has_subscription and savings_amount > 0 %}
              <p class="subscription-purchase__savings-{{ ai_gen_id }}" id="savings-text-{{ ai_gen_id }}">
                You're saving {{ savings_amount | money }} with subscription
              </p>
            {% else %}
              <p class="subscription-purchase__savings-{{ ai_gen_id }}" id="savings-text-{{ ai_gen_id }}" style="display: none;"></p>
            {% endif %}
            
            <button 
              type="submit" 
              name="add"
              class="subscription-purchase__button-{{ ai_gen_id }}"
              {% unless current_variant.available %}disabled{% endunless %}
              id="add-to-cart-{{ ai_gen_id }}"
            >
              {% if current_variant.available %}
                {{ section.settings.button_text }}
              {% else %}
                {{ section.settings.sold_out_text }}
              {% endif %}
            </button>
            
            <div class="subscription-purchase__error-{{ ai_gen_id }}" id="error-message-{{ ai_gen_id }}"></div>
          </div>
        {% endif %}

        {% comment %} TRUST BADGES {% endcomment %}
        {% if section.settings.show_trust_badges %}
          <div class="subscription-purchase__trust-badges-{{ ai_gen_id }}">
            <div class="subscription-purchase__badge-{{ ai_gen_id }}">
              <svg class="subscription-purchase__badge-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
              </svg>
              <span>{{ section.settings.badge_1_text }}</span>
            </div>
            <div class="subscription-purchase__badge-{{ ai_gen_id }}">
              <svg class="subscription-purchase__badge-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                <path d="M7 11V7a5 5 0 0110 0v4"/>
              </svg>
              <span>{{ section.settings.badge_2_text }}</span>
            </div>
            <div class="subscription-purchase__badge-{{ ai_gen_id }}">
              <svg class="subscription-purchase__badge-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <polyline points="12 6 12 12 16 14"/>
              </svg>
              <span>{{ section.settings.badge_3_text }}</span>
            </div>
          </div>
        {% endif %}
      </div>
    {% endform %}
  </div>

  <script>
    (function() {
      // Funciones globales para esta sección
      window.selectVariant{{ ai_gen_id }} = function(element) {
        const variantId = element.dataset.variantId;
        const variantPrice = element.dataset.variantPrice;
        const variantComparePrice = element.dataset.variantComparePrice;
        const isAvailable = element.dataset.variantAvailable === 'true';
        
        // Actualizar input principal
        const mainInput = document.querySelector('[data-main-variant-input]');
        if (mainInput) mainInput.value = variantId;
        
        // Actualizar selección visual
        document.querySelectorAll('.subscription-purchase__variant-{{ ai_gen_id }}').forEach(el => {
          el.classList.remove('active');
        });
        element.classList.add('active');
        
        // Actualizar precios mostrados
        updateDisplayedPrices(variantPrice, variantComparePrice);
        
        // Actualizar estado del botón
        const btn = document.getElementById('add-to-cart-{{ ai_gen_id }}');
        if (btn) {
          btn.disabled = !isAvailable;
          btn.textContent = isAvailable ? '{{ section.settings.button_text }}' : '{{ section.settings.sold_out_text }}';
        }
      };
      
      window.updatePurchaseType{{ ai_gen_id }} = function(radio) {
        const sellingPlanInput = document.querySelector('[data-selling-plan-input]');
        const savingsText = document.getElementById('savings-text-{{ ai_gen_id }}');
        
        if (radio.value === 'subscription') {
          const planId = radio.dataset.sellingPlanId;
          if (sellingPlanInput) sellingPlanInput.value = planId;
          if (savingsText) savingsText.style.display = 'block';
        } else {
          if (sellingPlanInput) sellingPlanInput.value = '';
          if (savingsText) savingsText.style.display = 'none';
        }
      };
      
      function updateDisplayedPrices(price, comparePrice) {
        // Actualizar precios en las tarjetas (lógica simplificada)
        console.log('Variant changed:', {price, comparePrice});
      }
      
      // Manejar submit del form
      const form = document.querySelector('.subscription-purchase-{{ ai_gen_id }} form');
      if (form) {
        form.addEventListener('submit', async function(e) {
          e.preventDefault();
          
          const btn = document.getElementById('add-to-cart-{{ ai_gen_id }}');
          const errorDiv = document.getElementById('error-message-{{ ai_gen_id }}');
          
          if (btn) {
            btn.disabled = true;
            btn.textContent = '{{ section.settings.adding_text }}';
          }
          
          if (errorDiv) errorDiv.classList.remove('active');
          
          const formData = new FormData(form);
          
          try {
            const response = await fetch('/cart/add.js', {
              method: 'POST',
              body: formData
            });
            
            const data = await response.json();
            
            if (data.status === 422 || data.status === 'error') {
              throw new Error(data.description || data.message || 'Error adding to cart');
            }
            
            // Éxito
            document.dispatchEvent(new CustomEvent('cart:updated'));
            
            // Abrir cart drawer si existe
            const cartDrawer = document.querySelector('cart-drawer');
            if (cartDrawer && typeof cartDrawer.open === 'function') {
              cartDrawer.open();
            }
            
          } catch (err) {
            if (errorDiv) {
              errorDiv.textContent = err.message || '{{ section.settings.error_text }}';
              errorDiv.classList.add('active');
            }
          } finally {
            if (btn) {
              btn.disabled = false;
              btn.textContent = '{{ section.settings.button_text }}';
            }
          }
        });
      }
    })();
  </script>
{% endif %}

