<multi-product-selector-{{ ai_gen_id }}
  class="ai-multi-product-selector-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.title != blank %}
    <h3 class="ai-multi-product-selector__title-{{ ai_gen_id }}">{{ block.settings.title }}</h3>
  {% endif %}

  {% assign has_products = false %}
  {% for i in (1..5) %}
    {% assign product_key = 'product_' | append: i %}
    {% if block.settings[product_key] != blank %}
      {% assign has_products = true %}
      {% break %}
    {% endif %}
  {% endfor %}

  {% if has_products %}
    <div class="ai-multi-product-selector__products-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% assign product_key = 'product_' | append: i %}
        {% assign product = block.settings[product_key] %}
        
        {% if product != blank %}
          <div class="ai-multi-product-selector__product-item-{{ ai_gen_id }}" data-product-id="{{ product.id }}" data-variant-id="{{ product.selected_or_first_available_variant.id }}" data-price="{{ product.selected_or_first_available_variant.price }}">
            <div class="ai-multi-product-selector__product-image-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 120 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  loading="lazy"
                  width="120"
                  height="120"
                >
              {% else %}
                <div class="ai-multi-product-selector__product-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            
            <div class="ai-multi-product-selector__product-info-{{ ai_gen_id }}">
              <h4 class="ai-multi-product-selector__product-title-{{ ai_gen_id }}">{{ product.title }}</h4>
              <div class="ai-multi-product-selector__product-price-{{ ai_gen_id }}">{{ product.selected_or_first_available_variant.price | money }}</div>
            </div>
            
            <div class="ai-multi-product-selector__quantity-controls-{{ ai_gen_id }}">
              <button
                type="button"
                class="ai-multi-product-selector__quantity-button-{{ ai_gen_id }} quantity-decrease"
                aria-label="Disminuir cantidad"
              >
                <svg width="12" height="2" viewBox="0 0 12 2" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M0 1H12" stroke="currentColor" stroke-width="2"/>
                </svg>
              </button>
              
              <span class="ai-multi-product-selector__quantity-display-{{ ai_gen_id }}" data-quantity>0</span>
              
              <button
                type="button"
                class="ai-multi-product-selector__quantity-button-{{ ai_gen_id }} quantity-increase"
                aria-label="Aumentar cantidad"
              >
                <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M6 0V12M0 6H12" stroke="currentColor" stroke-width="2"/>
                </svg>
              </button>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.show_subscription %}
      <div class="ai-multi-product-selector__subscription-{{ ai_gen_id }}">
        <div class="ai-multi-product-selector__subscription-options-{{ ai_gen_id }}">
          <div class="ai-multi-product-selector__subscription-option-{{ ai_gen_id }} active" data-subscription-type="one-time">
            <div class="ai-multi-product-selector__subscription-radio-{{ ai_gen_id }}"></div>
            <span class="ai-multi-product-selector__subscription-label-{{ ai_gen_id }}">{{ block.settings.one_time_label }}</span>
          </div>
          
          <div class="ai-multi-product-selector__subscription-option-{{ ai_gen_id }}" data-subscription-type="subscription">
            <div class="ai-multi-product-selector__subscription-radio-{{ ai_gen_id }}"></div>
            <span class="ai-multi-product-selector__subscription-label-{{ ai_gen_id }}">{{ block.settings.subscription_label }}</span>
            {% if block.settings.subscription_discount > 0 %}
              <span class="ai-multi-product-selector__subscription-discount-{{ ai_gen_id }}">-{{ block.settings.subscription_discount }}%</span>
            {% endif %}
          </div>
        </div>
      </div>
    {% endif %}

    <div class="ai-multi-product-selector__total-{{ ai_gen_id }}">
      <span class="ai-multi-product-selector__total-label-{{ ai_gen_id }}">Total:</span>
      <span class="ai-multi-product-selector__total-price-{{ ai_gen_id }}" data-total-price>$0.00</span>
    </div>

    <button
      type="button"
      class="ai-multi-product-selector__add-button-{{ ai_gen_id }}"
      data-add-to-cart
      disabled
    >
      {{ block.settings.button_text }}
    </button>
  {% else %}
    <div class="ai-multi-product-selector__empty-state-{{ ai_gen_id }}">
      Selecciona productos para mostrar en este componente
    </div>
  {% endif %}
</multi-product-selector-{{ ai_gen_id }}>

<script>
  (function() {
    class MultiProductSelector{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.quantities = {};
        this.subscriptionType = 'one-time';
        this.subscriptionDiscount = {{ block.settings.subscription_discount | default: 0 }};
      }

      connectedCallback() {
        this.productItems = this.querySelectorAll('.ai-multi-product-selector__product-item-{{ ai_gen_id }}');
        this.totalPriceElement = this.querySelector('[data-total-price]');
        this.addToCartButton = this.querySelector('[data-add-to-cart]');
        this.subscriptionOptions = this.querySelectorAll('.ai-multi-product-selector__subscription-option-{{ ai_gen_id }}');

        this.initializeQuantities();
        this.setupEventListeners();
      }

      initializeQuantities() {
        this.productItems.forEach((item) => {
          const variantId = item.dataset.variantId;
          this.quantities[variantId] = 0;
        });
      }

      setupEventListeners() {
        this.productItems.forEach((item) => {
          const decreaseBtn = item.querySelector('.quantity-decrease');
          const increaseBtn = item.querySelector('.quantity-increase');
          const variantId = item.dataset.variantId;

          decreaseBtn.addEventListener('click', () => this.updateQuantity(item, variantId, -1));
          increaseBtn.addEventListener('click', () => this.updateQuantity(item, variantId, 1));
        });

        this.subscriptionOptions.forEach((option) => {
          option.addEventListener('click', () => {
            this.subscriptionOptions.forEach((opt) => opt.classList.remove('active'));
            option.classList.add('active');
            this.subscriptionType = option.dataset.subscriptionType;
            this.updateTotal();
          });
        });

        if (this.addToCartButton) {
          this.addToCartButton.addEventListener('click', () => this.addToCart());
        }
      }

      updateQuantity(item, variantId, change) {
        const currentQuantity = this.quantities[variantId];
        const newQuantity = Math.max(0, currentQuantity + change);
        
        this.quantities[variantId] = newQuantity;
        
        const quantityDisplay = item.querySelector('[data-quantity]');
        quantityDisplay.textContent = newQuantity;
        
        const decreaseBtn = item.querySelector('.quantity-decrease');
        decreaseBtn.disabled = newQuantity === 0;
        
        this.updateTotal();
      }

      updateTotal() {
        let total = 0;
        
        this.productItems.forEach((item) => {
          const variantId = item.dataset.variantId;
          const price = parseFloat(item.dataset.price);
          const quantity = this.quantities[variantId];
          
          total += price * quantity;
        });

        if (this.subscriptionType === 'subscription' && this.subscriptionDiscount > 0) {
          total = total * (1 - this.subscriptionDiscount / 100);
        }

        this.totalPriceElement.textContent = this.formatMoney(total);
        
        const hasItems = Object.values(this.quantities).some(q => q > 0);
        this.addToCartButton.disabled = !hasItems;
      }

      formatMoney(cents) {
        return '$' + (cents / 100).toFixed(2);
      }

      async addToCart() {
        const items = [];
        
        this.productItems.forEach((item) => {
          const variantId = item.dataset.variantId;
          const quantity = this.quantities[variantId];
          
          if (quantity > 0) {
            const itemData = {
              id: variantId,
              quantity: quantity
            };

            if (this.subscriptionType === 'subscription') {
              itemData.selling_plan = '{{ block.settings.selling_plan_id }}';
            }

            items.push(itemData);
          }
        });

        if (items.length === 0) return;

        this.addToCartButton.disabled = true;
        this.addToCartButton.textContent = 'Agregando...';

        try {
          const response = await fetch('/cart/add.js', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ items: items })
          });

          if (response.ok) {
            window.location.href = '/cart';
          } else {
            throw new Error('Error al agregar al carrito');
          }
        } catch (error) {
          console.error('Error:', error);
          alert('Hubo un error al agregar los productos al carrito');
          this.addToCartButton.disabled = false;
          this.addToCartButton.textContent = '{{ block.settings.button_text }}';
        }
      }
    }

    customElements.define('multi-product-selector-{{ ai_gen_id }}', MultiProductSelector{{ ai_gen_id }});
  })();
</script>

