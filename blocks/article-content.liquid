    },
    {
      "type": "header",
      "content": "═══ LAYOUT - DESKTOP ═══"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 900,
      "max": 1600,
      "step": 20,
      "unit": "px",
      "label": "Ancho máximo del contenedor",
      "default": 1200
    },
    {
      "type": "range",
      "id": "content_width",
      "min": 500,
      "max": 800,
      "step": 10,
      "unit": "px",
      "label": "Ancho del contenido",
      "default": 650
    },
    {
      "type": "range",
