{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-article-content-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-article-content__container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr {{ block.settings.content_width }}px {{ block.settings.sidebar_width }}px;
    gap: {{ block.settings.columns_gap }}px;
    width: 100%;
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding_vertical }}px {{ block.settings.section_padding_horizontal }}px;
    align-items: start;
  }

  /* Columna izquierda - Espacio vacío */
  .ai-article-content__left-{{ ai_gen_id }} {
    display: block;
  }

  /* Columna central - Contenido principal */
  .ai-article-content__main-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.content_width }}px;
  }

  .ai-article-content__rte-{{ ai_gen_id }} {
    font-family: {{ block.settings.body_font_family }};
    font-size: {{ block.settings.body_size }}px;
    font-weight: {{ block.settings.body_font_weight }};
    color: {{ block.settings.body_color }};
    line-height: {{ block.settings.body_line_height }};
  }

  /* Estilos para elementos RTE */
  .ai-article-content__rte-{{ ai_gen_id }} h2 {
    font-family: {{ block.settings.heading_font_family }};
    font-size: {{ block.settings.h2_size }}px;
    font-weight: {{ block.settings.heading_font_weight }};
    color: {{ block.settings.heading_color }};
    margin: {{ block.settings.heading_margin_top }}px 0 {{ block.settings.heading_margin_bottom }}px 0;
    line-height: 1.3;
  }

  .ai-article-content__rte-{{ ai_gen_id }} h3 {
    font-family: {{ block.settings.heading_font_family }};
    font-size: {{ block.settings.h3_size }}px;
    font-weight: {{ block.settings.heading_font_weight }};
    color: {{ block.settings.heading_color }};
    margin: {{ block.settings.heading_margin_top | times: 0.8 }}px 0 {{ block.settings.heading_margin_bottom | times: 0.8 }}px 0;
    line-height: 1.35;
  }

  .ai-article-content__rte-{{ ai_gen_id }} h4 {
    font-family: {{ block.settings.heading_font_family }};
    font-size: {{ block.settings.h4_size }}px;
    font-weight: {{ block.settings.heading_font_weight }};
    color: {{ block.settings.heading_color }};
    margin: {{ block.settings.heading_margin_top | times: 0.6 }}px 0 {{ block.settings.heading_margin_bottom | times: 0.6 }}px 0;
    line-height: 1.4;
  }

  .ai-article-content__rte-{{ ai_gen_id }} p {
    margin: 0 0 {{ block.settings.paragraph_spacing }}px 0;
  }

  .ai-article-content__rte-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-article-content__rte-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: {% if block.settings.link_underline %}underline{% else %}none{% endif %};
    transition: opacity 0.2s ease;
  }

  .ai-article-content__rte-{{ ai_gen_id }} a:hover {
    opacity: 0.7;
  }

  .ai-article-content__rte-{{ ai_gen_id }} blockquote {
    margin: {{ block.settings.blockquote_margin }}px 0;
    padding: {{ block.settings.blockquote_padding }}px;
    padding-left: {{ block.settings.blockquote_padding | plus: 20 }}px;
    background-color: {{ block.settings.blockquote_background }};
    border-left: {{ block.settings.blockquote_border_width }}px solid {{ block.settings.blockquote_border_color }};
    border-radius: {{ block.settings.blockquote_border_radius }}px;
    font-style: {{ block.settings.blockquote_style }};
    color: {{ block.settings.blockquote_color }};
  }

  .ai-article-content__rte-{{ ai_gen_id }} blockquote p {
    margin: 0;
  }

  .ai-article-content__rte-{{ ai_gen_id }} ul,
  .ai-article-content__rte-{{ ai_gen_id }} ol {
    margin: 0 0 {{ block.settings.paragraph_spacing }}px 0;
    padding-left: {{ block.settings.list_indent }}px;
  }

  .ai-article-content__rte-{{ ai_gen_id }} li {
    margin-bottom: {{ block.settings.list_item_spacing }}px;
  }

  .ai-article-content__rte-{{ ai_gen_id }} li:last-child {
    margin-bottom: 0;
  }

  .ai-article-content__rte-{{ ai_gen_id }} img {
    max-width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    margin: {{ block.settings.image_margin }}px 0;
  }

  /* Columna derecha - Sidebar */
  .ai-article-content__sidebar-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.sidebar_width }}px;
    {% if block.settings.sidebar_sticky %}
      position: sticky;
      top: {{ block.settings.sidebar_sticky_offset }}px;
    {% endif %}
  }

  .ai-article-sidebar__title-{{ ai_gen_id }} {
    font-family: {{ block.settings.sidebar_title_font_family }};
    font-size: {{ block.settings.sidebar_title_size }}px;
    font-weight: {{ block.settings.sidebar_title_font_weight }};
    color: {{ block.settings.sidebar_title_color }};
    margin: 0 0 {{ block.settings.sidebar_title_margin }}px 0;
    padding-bottom: {{ block.settings.sidebar_title_padding }}px;
    {% if block.settings.sidebar_title_border %}
      border-bottom: 1px solid {{ block.settings.sidebar_border_color }};
    {% endif %}
    {% if block.settings.sidebar_title_uppercase %}
      text-transform: uppercase;
      letter-spacing: 0.05em;
    {% endif %}
  }

  .ai-article-sidebar__list-{{ ai_gen_id }} {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.sidebar_item_gap }}px;
  }

  .ai-article-sidebar__item-{{ ai_gen_id }} {
    display: block;
  }

  .ai-article-sidebar__link-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.sidebar_item_text_gap }}px;
    text-decoration: none;
    padding: {{ block.settings.sidebar_item_padding }}px 0;
    {% if block.settings.sidebar_item_border %}
      border-bottom: 1px solid {{ block.settings.sidebar_border_color }};
    {% endif %}
    transition: opacity 0.2s ease;
  }

  .ai-article-sidebar__link-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-article-sidebar__item-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.sidebar_item_font_family }};
    font-size: {{ block.settings.sidebar_item_title_size }}px;
    font-weight: {{ block.settings.sidebar_item_title_weight }};
    color: {{ block.settings.sidebar_item_title_color }};
    line-height: 1.4;
    margin: 0;
  }

  .ai-article-sidebar__item-date-{{ ai_gen_id }} {
    font-family: {{ block.settings.sidebar_item_font_family }};
    font-size: {{ block.settings.sidebar_item_date_size }}px;
    font-weight: 400;
    color: {{ block.settings.sidebar_item_date_color }};
    margin: 0;
  }

  /* Estado vacío del sidebar */
  .ai-article-sidebar__empty-{{ ai_gen_id }} {
    padding: {{ block.settings.sidebar_item_padding }}px 0;
    color: {{ block.settings.sidebar_item_date_color }};
    font-style: italic;
    border-top: 1px solid {{ block.settings.sidebar_border_color }};
  }

  /* Tablet */
  @media screen and (max-width: 1024px) {
    .ai-article-content__container-{{ ai_gen_id }} {
      grid-template-columns: {{ block.settings.content_width_tablet }}px {{ block.settings.sidebar_width_tablet }}px;
      gap: {{ block.settings.columns_gap_tablet }}px;
      padding: {{ block.settings.section_padding_vertical | times: 0.8 }}px {{ block.settings.section_padding_horizontal | times: 0.8 }}px;
      justify-content: center;
    }

    .ai-article-content__left-{{ ai_gen_id }} {
      display: none;
    }

    .ai-article-content__main-{{ ai_gen_id }} {
      max-width: {{ block.settings.content_width_tablet }}px;
    }

    .ai-article-content__sidebar-{{ ai_gen_id }} {
      max-width: {{ block.settings.sidebar_width_tablet }}px;
    }

    .ai-article-content__rte-{{ ai_gen_id }} {
      font-size: {{ block.settings.body_size_tablet }}px;
    }

    .ai-article-content__rte-{{ ai_gen_id }} h2 {
      font-size: {{ block.settings.h2_size | times: 0.9 }}px;
    }

    .ai-article-content__rte-{{ ai_gen_id }} h3 {
      font-size: {{ block.settings.h3_size | times: 0.9 }}px;
    }
  }

  /* Mobile - Solo contenido, sin sidebar */
  @media screen and (max-width: 749px) {
    .ai-article-content__container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 0;
      padding: {{ block.settings.section_padding_mobile }}px;
    }

    .ai-article-content__left-{{ ai_gen_id }},
    .ai-article-content__sidebar-{{ ai_gen_id }} {
      display: none;
    }

    .ai-article-content__main-{{ ai_gen_id }} {
      max-width: 100%;
    }

    .ai-article-content__rte-{{ ai_gen_id }} {
      font-size: {{ block.settings.body_size_mobile }}px;
    }

    .ai-article-content__rte-{{ ai_gen_id }} h2 {
      font-size: {{ block.settings.h2_size | times: 0.8 }}px;
    }

    .ai-article-content__rte-{{ ai_gen_id }} h3 {
      font-size: {{ block.settings.h3_size | times: 0.85 }}px;
    }

    .ai-article-content__rte-{{ ai_gen_id }} h4 {
      font-size: {{ block.settings.h4_size | times: 0.9 }}px;
    }

    .ai-article-content__rte-{{ ai_gen_id }} blockquote {
      margin: {{ block.settings.blockquote_margin | times: 0.75 }}px 0;
      padding: {{ block.settings.blockquote_padding | times: 0.75 }}px;
      padding-left: {{ block.settings.blockquote_padding | times: 0.75 | plus: 16 }}px;
    }
  }
{% endstyle %}

<div class="ai-article-content-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-article-content__container-{{ ai_gen_id }}">
    
    <!-- Columna izquierda -->
    <div class="ai-article-content__left-{{ ai_gen_id }}"></div>

    <!-- Contenido principal -->
    <div class="ai-article-content__main-{{ ai_gen_id }}">
      <div class="ai-article-content__rte-{{ ai_gen_id }}">
        {% if article %}
          <!-- Si estamos en una página de artículo, mostrar el contenido del artículo -->
          {{ article.content }}
        {% elsif block.settings.content != blank %}
          <!-- Si no estamos en artículo pero hay contenido en el bloque -->
          {{ block.settings.content }}
        {% else %}
          <!-- Contenido por defecto -->
          <p>Este es el contenido del artículo. Para ver el contenido real, asegúrate de usar este bloque en una página de artículo o añade contenido manualmente en la configuración.</p>
        {% endif %}
      </div>
    </div>

    <!-- Sidebar - Últimos artículos -->
    <aside class="ai-article-content__sidebar-{{ ai_gen_id }}">
      {% if block.settings.sidebar_title != blank %}
        <h3 class="ai-article-sidebar__title-{{ ai_gen_id }}">{{ block.settings.sidebar_title }}</h3>
      {% endif %}

      {% assign blog_handle = block.settings.blog_handle %}
      {% if blog_handle == blank and article %}
        {% assign blog_handle = article.handle | split: '/' | first %}
      {% endif %}

      {% if blog_handle != blank %}
        {% assign selected_blog = blogs[blog_handle] %}
      {% else %}
        {% assign selected_blog = blogs.first %}
      {% endif %}

      {% if selected_blog %}
        {% assign exclude_current = "" %}
        
        {% capture articles_query %}
          {% if exclude_current and article %}
            articles: {{ selected_blog.articles | where: 'id', article.id | reverse | json }}
          {% else %}
            articles: {{ selected_blog.articles | json }}
          {% endif %}
        {% endcapture %}
        
        {% assign articles_array = selected_blog.articles %}
        
        {% if exclude_current and article %}
          {% assign articles_array = articles_array | where: 'id', '!=', article.id %}
        {% endif %}
        
        {% assign articles_count = block.settings.articles_count | default: 5 %}
        
        <ul class="ai-article-sidebar__list-{{ ai_gen_id }}">
          {% for related_article in articles_array limit: articles_count %}
            <li class="ai-article-sidebar__item-{{ ai_gen_id }}">
              <a href="{{ related_article.url }}" class="ai-article-sidebar__link-{{ ai_gen_id }}">
                <span class="ai-article-sidebar__item-title-{{ ai_gen_id }}">{{ related_article.title }}</span>
                {% if block.settings.show_article_date %}
                  <span class="ai-article-sidebar__item-date-{{ ai_gen_id }}">
                    {{ related_article.published_at | date: block.settings.date_format }}
                  </span>
                {% endif %}
              </a>
            </li>
          {% endfor %}
          
          {% if articles_array.size == 0 %}
            <li class="ai-article-sidebar__empty-{{ ai_gen_id }}">
              No hay más artículos disponibles
            </li>
          {% endif %}
        </ul>
      {% else %}
        <div class="ai-article-sidebar__empty-{{ ai_gen_id }}">
          No se encontraron artículos
        </div>
      {% endif %}
    </aside>

  </div>
</div>

{% schema %}
{
  "name": "Article Content + Sidebar",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "═══ CONTENIDO PRINCIPAL ═══"
    },
    {
      "type": "paragraph",
      "content": "NOTA: Si usas este bloque en una página de artículo, se mostrará automáticamente el contenido del artículo actual. Si lo usas en otra página, puedes añadir contenido manual abajo."
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Contenido manual (opcional)",
      "info": "Solo se usa si no estás en una página de artículo",
      "default": "<p>Este contenido solo se muestra si no estás en una página de artículo. Para artículos reales, el contenido se obtiene automáticamente.</p>"
    },
    {
      "type": "header",
      "content": "═══ SIDEBAR - CONFIGURACIÓN ═══"
    },
    {
      "type": "text",
      "id": "sidebar_title",
      "label": "Título del sidebar",
      "default": "Latest Articles"
    },
    {
      "type": "blog",
      "id": "blog_handle",
      "label": "Blog para artículos",
      "info": "Deja vacío para usar el blog del artículo actual o el primer blog disponible"
    },
    {
      "type": "range",
      "id": "articles_count",
      "min": 3,
      "max": 10,
      "step": 1,
      "label": "Número de artículos a mostrar",
      "default": 5
    },
    {
      "type": "checkbox",
      "id": "exclude_current_article",
      "label": "Excluir artículo actual",
      "default": true,
      "info": "No mostrar el artículo actual en la lista de últimos artículos"
    },
    {
      "type": "checkbox",
      "id": "sidebar_sticky",
      "label": "Sidebar sticky (fijo al scroll)",
      "default": true
    },
    {
      "type": "range",
      "id": "sidebar_sticky_offset",
      "min": 0,
      "max": 150,
      "step": 10,
      "unit": "px",
      "label": "Offset del sticky",
      "default": 100,
      "info": "Distancia desde el top cuando es sticky"
    },
    {
      "type": "checkbox",
      "id": "show_article_date",
      "label": "Mostrar fecha de artículos",
      "default": true
    },
    {
      "type": "text",
      "id": "date_format",
      "label": "Formato de fecha",
      "default": "%B %d, %Y",
