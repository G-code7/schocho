{% style %}
  .ai-reviews-section-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-reviews-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-reviews-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.header_margin_bottom }}px;
    position: relative;
  }

  .ai-reviews-header-{{ ai_gen_id }}::after {
    content: '';
    display: block;
    width: 80px;
    height: 3px;
    background: linear-gradient(90deg, #FF6B9D 0%, #7428DC 100%);
    margin: 20px auto 0;
    border-radius: 2px;
  }

  .ai-reviews-title-{{ ai_gen_id }} {
    font-family: 'Montserrat', sans-serif;
    font-weight: {{ block.settings.title_weight }};
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px 0;
    text-transform: {{ block.settings.title_transform }};
    letter-spacing: {{ block.settings.title_letter_spacing }}px;
    line-height: 1.2;
  }

  .ai-reviews-subtitle-{{ ai_gen_id }} {
    font-family: 'Montserrat', sans-serif;
    font-weight: 300;
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .ai-reviews-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: 40px;
  }

  .ai-review-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: 30px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .ai-review-card-{{ ai_gen_id }}::before {
    content: '"';
    position: absolute;
    top: 20px;
    right: 20px;
    font-family: 'Georgia', serif;
    font-size: 80px;
    color: {{ block.settings.quote_color | default: '#FF6B9D' }};
    opacity: 0.1;
    line-height: 1;
  }

  .ai-review-card-{{ ai_gen_id }}:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(116, 40, 220, 0.15);
    border-color: {{ block.settings.card_border_hover_color }};
  }

  .ai-review-header-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 20px;
  }

  .ai-review-avatar-{{ ai_gen_id }} {
    width: 56px;
    height: 56px;
    border-radius: 50%;
    background: linear-gradient(135deg, {{ block.settings.avatar_gradient_start }} 0%, {{ block.settings.avatar_gradient_end }} 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: 'Montserrat', sans-serif;
    font-weight: 700;
    font-size: 20px;
    color: {{ block.settings.avatar_text_color }};
    flex-shrink: 0;
    box-shadow: 0 4px 12px rgba(116, 40, 220, 0.2);
  }

  .ai-review-info-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-review-name-{{ ai_gen_id }} {
    font-family: 'Montserrat', sans-serif;
    font-weight: 600;
    font-size: 16px;
    color: {{ block.settings.name_color }};
    margin: 0 0 4px 0;
  }

  .ai-review-date-{{ ai_gen_id }} {
    font-family: 'Montserrat', sans-serif;
    font-weight: 400;
    font-size: 12px;
    color: {{ block.settings.date_color }};
    margin: 0;
    opacity: 0.7;
  }

  .ai-review-stars-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
    margin-bottom: 16px;
  }

  .ai-review-star-{{ ai_gen_id }} {
    width: 18px;
    height: 18px;
    fill: {{ block.settings.star_color }};
    transition: transform 0.2s ease;
  }

  .ai-review-star-{{ ai_gen_id }}:hover {
    transform: scale(1.2);
  }

  .ai-review-text-{{ ai_gen_id }} {
    font-family: 'Montserrat', sans-serif;
    font-weight: 400;
    font-size: 14px;
    line-height: 1.7;
    color: {{ block.settings.review_text_color }};
    margin: 0;
    position: relative;
    z-index: 1;
  }

  .ai-reviews-cta-{{ ai_gen_id }} {
    text-align: center;
    margin-top: 40px;
  }

  .ai-reviews-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 16px 40px;
    background: linear-gradient(90deg, {{ block.settings.button_gradient_start }} 0%, {{ block.settings.button_gradient_end }} 100%);
    color: {{ block.settings.button_text_color }};
    font-family: 'Montserrat', sans-serif;
    font-weight: 600;
    font-size: 14px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    border: none;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-transform: uppercase;
    letter-spacing: 1px;
    position: relative;
    overflow: hidden;
    box-shadow: 0 8px 20px rgba(116, 40, 220, 0.25);
  }

  .ai-reviews-button-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .ai-reviews-button-{{ ai_gen_id }}:hover::before {
    left: 100%;
  }

  .ai-reviews-button-{{ ai_gen_id }}:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 25px rgba(116, 40, 220, 0.35);
  }

  .ai-reviews-button-{{ ai_gen_id }}:active {
    transform: translateY(0);
  }

  /* Badge de Verificado */
  .ai-review-verified-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    background: linear-gradient(90deg, #FF6B9D 0%, #FFA500 100%);
    color: white;
    padding: 2px 8px;
    border-radius: 10px;
    font-size: 10px;
    font-weight: 600;
    margin-left: 8px;
  }

  .ai-review-verified-{{ ai_gen_id }} svg {
    width: 10px;
    height: 10px;
    fill: white;
  }

  /* Estilo para rese√±as destacadas */
  .ai-review-card-{{ ai_gen_id }}.featured {
    border: 2px solid #7428DC;
    box-shadow: 0 10px 30px rgba(116, 40, 220, 0.15);
  }

  .ai-review-card-{{ ai_gen_id }}.featured::after {
    content: '‚≠ê Destacada';
    position: absolute;
    top: 10px;
    right: 10px;
    background: linear-gradient(90deg, #FF6B9D 0%, #7428DC 100%);
    color: white;
    padding: 4px 12px;
    border-radius: 20px;
    font-size: 10px;
    font-weight: 600;
  }

  @media screen and (max-width: 768px) {
    .ai-reviews-section-{{ ai_gen_id }} {
      width: 100% !important;
      padding: {{ block.settings.section_padding_mobile }}px 15px;
    }

    .ai-reviews-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .ai-reviews-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.7);
    }

    .ai-reviews-subtitle-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subtitle_size }}px * 0.85);
    }

    .ai-review-card-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-reviews-button-{{ ai_gen_id }} {
      padding: 14px 30px;
      font-size: 13px;
    }
  }

  /* Animaciones de entrada */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .ai-review-card-{{ ai_gen_id }} {
    animation: fadeInUp 0.6s ease forwards;
    opacity: 0;
  }
