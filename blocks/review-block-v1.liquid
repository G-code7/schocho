<ai-reviews-section-{{ ai_gen_id }} class="ai-reviews-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-reviews-container-{{ ai_gen_id }}">
    <div class="ai-reviews-header-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-reviews-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <p class="ai-reviews-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
      {% endif %}
    </div>

    {% comment %} JSON parsing para las rese√±as {% endcomment %}
    {% assign reviews_json = block.settings.reviews_json %}
    {% assign reviews_array = '[]' %}
    
    {% if reviews_json != blank %}
      {% assign reviews_array = reviews_json | parse_json %}
    {% endif %}
    
    {% if reviews_array == blank or reviews_array.size == 0 %}
      {% comment %} Fallback a rese√±as individuales {% endcomment %}
      {% assign reviews_array = '[]' | parse_json %}
      {% for i in (1..3) %}
        {% liquid
          assign name_key = 'review_' | append: i | append: '_name'
          assign date_key = 'review_' | append: i | append: '_date'
          assign rating_key = 'review_' | append: i | append: '_rating'
          assign text_key = 'review_' | append: i | append: '_text'
          assign verified_key = 'review_' | append: i | append: '_verified'
          assign featured_key = 'review_' | append: i | append: '_featured'

          assign review_name = block.settings[name_key]
          assign review_date = block.settings[date_key]
          assign review_rating = block.settings[rating_key]
          assign review_text = block.settings[text_key]
          assign review_verified = block.settings[verified_key]
          assign review_featured = block.settings[featured_key]
        %}

        {% if review_name != blank %}
          {% assign review_object = 
            '{"name": "' | append: review_name | append: '", 
              "date": "' | append: review_date | append: '", 
              "rating": ' | append: review_rating | append: ', 
              "text": "' | append: review_text | replace: '"', '\"' | append: '", 
              "verified": ' | append: review_verified | append: ', 
              "featured": ' | append: review_featured | append: '}' 
          %}
          {% assign reviews_array = reviews_array | push: review_object | parse_json %}
        {% endif %}
      {% endfor %}
    {% endif %}

    <div class="ai-reviews-grid-{{ ai_gen_id }}">
      {% for review in reviews_array %}
        {% if review.name != blank %}
          <div class="ai-review-card-{{ ai_gen_id }} {% if review.featured == true %}featured{% endif %}" 
               style="animation-delay: {{ forloop.index | times: 0.1 }}s">
            <div class="ai-review-header-{{ ai_gen_id }}">
              <div class="ai-review-avatar-{{ ai_gen_id }}">
                {{ review.name | slice: 0 | upcase }}
              </div>
              <div class="ai-review-info-{{ ai_gen_id }}">
                <h3 class="ai-review-name-{{ ai_gen_id }}">
                  {{ review.name }}
                  {% if review.verified == true %}
                    <span class="ai-review-verified-{{ ai_gen_id }}">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                        <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                      </svg>
                      Verificado
                    </span>
                  {% endif %}
                </h3>
                {% if review.date != blank %}
                  <p class="ai-review-date-{{ ai_gen_id }}">{{ review.date }}</p>
                {% endif %}
              </div>
            </div>

            <div class="ai-review-stars-{{ ai_gen_id }}">
              {% for star in (1..5) %}
                {% if star <= review.rating %}
                  <svg class="ai-review-star-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                {% else %}
                  <svg class="ai-review-star-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" style="fill: #E0E0E0;">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                {% endif %}
              {% endfor %}
            </div>

            {% if review.text != blank %}
              <p class="ai-review-text-{{ ai_gen_id }}">{{ review.text }}</p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.show_cta_button and block.settings.cta_button_text != blank %}
      <div class="ai-reviews-cta-{{ ai_gen_id }}">
        <a href="{{ block.settings.cta_button_link }}" class="ai-reviews-button-{{ ai_gen_id }}">
          {{ block.settings.cta_button_text }}
          {% if block.settings.button_icon != 'none' %}
            {% case block.settings.button_icon %}
              {% when 'arrow' %}
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                  <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
              {% when 'star' %}
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              {% when 'heart' %}
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"/>
                </svg>
            {% endcase %}
          {% endif %}
        </a>
      </div>
    {% endif %}
  </div>
</ai-reviews-section-{{ ai_gen_id }}>

<script>
  (function() {
    class AiReviewsSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.initializeReviews();
        this.initializeStarsAnimation();
      }

      initializeReviews() {
        const cards = this.querySelectorAll('.ai-review-card-{{ ai_gen_id }}');
        
        cards.forEach((card, index) => {
          setTimeout(() => {
            card.style.opacity = '1';
          }, index * 150);
        });
      }

      initializeStarsAnimation() {
        const starContainers = this.querySelectorAll('.ai-review-stars-{{ ai_gen_id }}');
        
        starContainers.forEach(container => {
          const stars = container.querySelectorAll('.ai-review-star-{{ ai_gen_id }}');
          stars.forEach((star, index) => {
            setTimeout(() => {
              star.style.transform = 'scale(1.2)';
              setTimeout(() => {
                star.style.transform = 'scale(1)';
              }, 200);
            }, index * 100);
          });
        });
      }
    }

    customElements.define('ai-reviews-section-{{ ai_gen_id }}', AiReviewsSection{{ ai_gen_id }});
  })();
</script>

