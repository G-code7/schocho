{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-grid-container-{{ ai_gen_id }} {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-grid-wrapper-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0;
    width: 100%;
    max-width: 100%;
  }

  .ai-grid-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    position: relative;
  }

  .ai-grid-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 1 / 1;
    overflow: hidden;
  }

  .ai-grid-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-grid-item-{{ ai_gen_id }}:hover .ai-grid-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-grid-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-grid-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-grid-content-{{ ai_gen_id }} {
    padding: {{ block.settings.content_padding }}px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ block.settings.content_gap }}px;
  }

  .ai-grid-title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.title_size }}px;
    text-align: center;
    line-height: 1.3;
  }

  .ai-grid-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    font-weight: 600;
    text-align: center;
  }

  @media screen and (max-width: 989px) and (min-width: 750px) {
    .ai-grid-wrapper-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ block.settings.grid_gap_mobile }}px;
    }
    
    .ai-grid-item-{{ ai_gen_id }}:last-child {
      grid-column: span 2;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-grid-wrapper-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.grid_gap_mobile }}px;
    }
    
    .ai-grid-image-wrapper-{{ ai_gen_id }} {
      aspect-ratio: 16 / 9;
    }
  }
{% endstyle %}

<div class="ai-grid-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-grid-wrapper-{{ ai_gen_id }}">
    {% for i in (1..3) %}
      {% liquid
        assign image_key = 'image_' | append: i
        assign title_key = 'title_' | append: i
        assign button_text_key = 'button_text_' | append: i
        assign button_link_key = 'button_link_' | append: i
        
        # Nuevos campos de color por elemento
        assign title_color_key = 'title_color_' | append: i
        assign content_bg_key = 'content_background_color_' | append: i
        assign button_bg_key = 'button_background_color_' | append: i
        assign button_text_color_key = 'button_text_color_' | append: i
        assign button_hover_bg_key = 'button_hover_background_color_' | append: i
        assign button_hover_text_key = 'button_hover_text_color_' | append: i
        
        assign item_image = block.settings[image_key]
        assign item_title = block.settings[title_key]
        assign item_button_text = block.settings[button_text_key]
        assign item_button_link = block.settings[button_link_key]
        
        # Asignar colores (con valores por defecto si no están configurados)
        assign item_title_color = block.settings[title_color_key]
        assign item_content_bg = block.settings[content_bg_key]
        assign item_button_bg = block.settings[button_bg_key]
        assign item_button_text_color = block.settings[button_text_color_key]
        assign item_button_hover_bg = block.settings[button_hover_bg_key]
        assign item_button_hover_text = block.settings[button_hover_text_key]
        
        # Si los colores específicos no están configurados, usar los globales
        if item_title_color == blank
          assign item_title_color = block.settings.title_color
        endif
        
        if item_button_bg == blank
          assign item_button_bg = block.settings.button_background_color
        endif
        
        if item_button_text_color == blank
          assign item_button_text_color = block.settings.button_text_color
        endif
        
        if item_button_hover_bg == blank
          assign item_button_hover_bg = block.settings.button_hover_background_color
        endif
        
        if item_button_hover_text == blank
          assign item_button_hover_text = block.settings.button_hover_text_color
        endif
      %}

      <div class="ai-grid-item-{{ ai_gen_id }}">
        <div class="ai-grid-image-wrapper-{{ ai_gen_id }}">
          {% if item_image %}
            <img
              src="{{ item_image | image_url: width: 800 }}"
              alt="{{ item_image.alt | escape }}"
              loading="lazy"
              width="{{ item_image.width }}"
              height="{{ item_image.height }}"
              class="ai-grid-image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-grid-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>

        <div 
          class="ai-grid-content-{{ ai_gen_id }}" 
          style="background-color: {{ item_content_bg }};"
        >
          {% if item_title != blank %}
            <h3 
              class="ai-grid-title-{{ ai_gen_id }}"
              style="color: {{ item_title_color }};"
            >
              {{ item_title }}
            </h3>
          {% endif %}

          {% if item_button_text != blank %}
            <a 
              href="{{ item_button_link | default: '#' }}" 
              class="ai-grid-button-{{ ai_gen_id }}"
              style="
                background-color: {{ item_button_bg }};
                color: {{ item_button_text_color }};
              "
              onmouseover="this.style.backgroundColor='{{ item_button_hover_bg }}'; this.style.color='{{ item_button_hover_text }}';"
              onmouseout="this.style.backgroundColor='{{ item_button_bg }}'; this.style.color='{{ item_button_text_color }}';"
            >
              {{ item_button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</div>

