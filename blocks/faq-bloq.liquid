{% comment %}
  FAQ Section - JSON Powered (Corregido)
  Procesa el JSON mediante JavaScript ya que Shopify Liquid no tiene parse_json
{% endcomment %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  {% comment %} Importación de fuentes {% endcomment %}
  {% assign font_family_question = block.settings.font_family_question %}
  {% assign font_family_answer = block.settings.font_family_answer %}
  {% assign font_family_title = block.settings.font_family_title %}
  
  {% unless font_family_title == 'inherit' %}
    @import url('https://fonts.googleapis.com/css2?family={{ font_family_title | replace: ' ', '+' }}:wght@300;400;500;600;700;800&display=swap');
  {% endunless %}
  
  {% unless font_family_question == 'inherit' %}
    @import url('https://fonts.googleapis.com/css2?family={{ font_family_question | replace: ' ', '+' }}:wght@300;400;500;600;700;800&display=swap');
  {% endunless %}
  
  {% unless font_family_answer == font_family_question %}
    @import url('https://fonts.googleapis.com/css2?family={{ font_family_answer | replace: ' ', '+' }}:wght@300;400;500;600;700;800&display=swap');
  {% endunless %}

  .ai-faq-section-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
    {% if block.settings.background_gradient != blank %}
      background: {{ block.settings.background_gradient }};
    {% endif %}
  }

  .ai-faq-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
    margin: 0 auto;
  }

  .ai-faq-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-faq-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 {{ block.settings.title_spacing }}px 0;
    font-weight: {{ block.settings.title_weight }};
    {% if font_family_title != 'inherit' %}
      font-family: '{{ font_family_title }}', sans-serif;
    {% endif %}
    {% if block.settings.title_line_height != 0 %}
      line-height: {{ block.settings.title_line_height }};
    {% endif %}
    {% if block.settings.title_letter_spacing != 0 %}
      letter-spacing: {{ block.settings.title_letter_spacing }}px;
    {% endif %}
    {% if block.settings.title_transform != 'none' %}
      text-transform: {{ block.settings.title_transform }};
    {% endif %}
  }

  .ai-faq-subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.subtitle_color }};
    font-size: {{ block.settings.subtitle_size }}px;
    margin: 0;
    font-weight: {{ block.settings.subtitle_weight }};
    {% if block.settings.subtitle_line_height != 0 %}
      line-height: {{ block.settings.subtitle_line_height }};
    {% endif %}
    {% if block.settings.subtitle_letter_spacing != 0 %}
      letter-spacing: {{ block.settings.subtitle_letter_spacing }}px;
    {% endif %}
  }

  .ai-faq-list-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-faq-item-{{ ai_gen_id }} {
    position: relative;
    {% unless block.settings.show_dividers %}
      border: {{ block.settings.item_border_width }}px solid {{ block.settings.item_border_color }};
    {% endunless %}
    border-radius: {{ block.settings.item_border_radius }}px;
    background-color: {{ block.settings.item_background_color }};
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    {% if block.settings.show_shadow %}
      box-shadow: {{ block.settings.shadow_x }}px {{ block.settings.shadow_y }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_color }};
    {% endif %}
  }

  {% if block.settings.show_dividers %}
    .ai-faq-item-{{ ai_gen_id }}::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: {{ block.settings.divider_indent }}px;
      right: {{ block.settings.divider_indent }}px;
      height: {{ block.settings.divider_height }}px;
      background-color: {{ block.settings.divider_color }};
      opacity: {{ block.settings.divider_opacity | divided_by: 100.0 }};
    }
    .ai-faq-item-{{ ai_gen_id }}:last-child::after {
      display: none;
    }
  {% endif %}

  .ai-faq-item-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.item_hover_background }};
    {% if block.settings.show_shadow %}
      box-shadow: {{ block.settings.shadow_x }}px {{ block.settings.shadow_y | plus: 2 }}px {{ block.settings.shadow_blur | plus: 4 }}px {{ block.settings.shadow_color }};
    {% endif %}
  }

  .ai-faq-question-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.question_padding }}px;
    background: none;
    border: none;
    text-align: left;
    cursor: {% if block.settings.enable_accordion %}pointer{% else %}default{% endif %};
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
    color: {{ block.settings.question_color }};
    font-size: {{ block.settings.question_size }}px;
    font-weight: {{ block.settings.question_weight }};
    {% if font_family_question != 'inherit' %}
      font-family: '{{ font_family_question }}', sans-serif;
    {% endif %}
    {% if block.settings.question_line_height != 0 %}
      line-height: {{ block.settings.question_line_height }};
    {% endif %}
    {% if block.settings.question_letter_spacing != 0 %}
      letter-spacing: {{ block.settings.question_letter_spacing }}px;
    {% endif %}
    transition: color 0.3s ease;
  }

  {% if block.settings.enable_accordion %}
    .ai-faq-question-{{ ai_gen_id }}:hover {
      color: {{ block.settings.question_hover_color }};
    }
  {% endif %}

  .ai-faq-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    color: {{ block.settings.icon_color }};
    {% unless block.settings.enable_accordion %}
      display: none;
    {% endunless %}
  }

  .ai-faq-item-{{ ai_gen_id }}.active .ai-faq-icon-{{ ai_gen_id }} {
    transform: rotate(180deg);
  }

  .ai-faq-answer-{{ ai_gen_id }} {
    {% if block.settings.enable_accordion %}
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                  padding 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                  opacity 0.3s ease;
      opacity: 0;
      padding: 0 {{ block.settings.question_padding }}px;
    {% else %}
      max-height: none;
      overflow: visible;
      padding: 0 {{ block.settings.question_padding }}px {{ block.settings.question_padding }}px;
      opacity: 1;
    {% endif %}
  }

  .ai-faq-item-{{ ai_gen_id }}.active .ai-faq-answer-{{ ai_gen_id }} {
    max-height: 2000px;
    padding: 0 {{ block.settings.question_padding }}px {{ block.settings.question_padding }}px;
    opacity: 1;
  }

  .ai-faq-answer-content-{{ ai_gen_id }} {
    color: {{ block.settings.answer_color }};
    font-size: {{ block.settings.answer_size }}px;
    font-weight: {{ block.settings.answer_weight }};
    {% if font_family_answer != 'inherit' %}
      font-family: '{{ font_family_answer }}', sans-serif;
    {% endif %}
    line-height: {{ block.settings.answer_line_height }};
    {% if block.settings.answer_letter_spacing != 0 %}
      letter-spacing: {{ block.settings.answer_letter_spacing }}px;
    {% endif %}
  }

  .ai-faq-answer-content-{{ ai_gen_id }} p:first-child {
    margin-top: 0;
  }

  .ai-faq-answer-content-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-faq-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 80px 20px;
    color: {{ block.settings.subtitle_color }};
    font-size: 16px;
    opacity: 0.6;
  }

  /* Variantes de estilo */
  {% if block.settings.style_variant == 'minimal' %}
    .ai-faq-item-{{ ai_gen_id }} {
      background: transparent;
      border: none;
      border-radius: 0;
    }
    .ai-faq-item-{{ ai_gen_id }}:hover {
      background: transparent;
    }
  {% elsif block.settings.style_variant == 'card' %}
    .ai-faq-item-{{ ai_gen_id }} {
      {% if block.settings.show_dividers %}
        border: {{ block.settings.item_border_width }}px solid {{ block.settings.item_border_color }};
      {% endif %}
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-faq-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
    }

    .ai-faq-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size_mobile }}px;
    }

    .ai-faq-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size_mobile }}px;
    }

    .ai-faq-question-{{ ai_gen_id }} {
      font-size: {{ block.settings.question_size_mobile }}px;
      padding: {{ block.settings.question_padding | times: 0.85 }}px;
    }

    .ai-faq-answer-{{ ai_gen_id }} {
      padding: 0 {{ block.settings.question_padding | times: 0.85 }}px;
    }

    .ai-faq-item-{{ ai_gen_id }}.active .ai-faq-answer-{{ ai_gen_id }} {
      padding: 0 {{ block.settings.question_padding | times: 0.85 }}px {{ block.settings.question_padding | times: 0.85 }}px;
    }

    .ai-faq-answer-content-{{ ai_gen_id }} {
      font-size: {{ block.settings.answer_size_mobile }}px;
    }

    .ai-faq-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.9 }}px;
      height: {{ block.settings.icon_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<faq-accordion-{{ ai_gen_id }} class="ai-faq-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-faq-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-faq-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-faq-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="ai-faq-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% assign faqs_json = block.settings.faqs_json | strip %}
    
    {% if faqs_json != blank %}
      <div class="ai-faq-list-{{ ai_gen_id }}" id="faq-list-{{ ai_gen_id }}">
        {% comment %} El contenido se renderizará vía JavaScript {% endcomment %}
      </div>
      
      <div class="ai-faq-empty-state-{{ ai_gen_id }}" id="faq-empty-{{ ai_gen_id }}" style="display: none;">
        Error al cargar las preguntas. Verifica el formato JSON.
      </div>
    {% else %}
      <div class="ai-faq-empty-state-{{ ai_gen_id }}">
        Agrega tus preguntas y respuestas en formato JSON para comenzar
      </div>
    {% endif %}
  </div>
</faq-accordion-{{ ai_gen_id }}>

<script>
  (function() {
    // JSON de FAQs escapado correctamente para JavaScript
    const faqsData = {{ block.settings.faqs_json | json }};
    const containerId = 'faq-list-{{ ai_gen_id }}';
    const emptyId = 'faq-empty-{{ ai_gen_id }}';
    const enableAccordion = {{ block.settings.enable_accordion | json }};
    const expandFirst = {{ block.settings.expand_first | json }};
    const allowMultiple = {{ block.settings.allow_multiple_open | json }};
    const iconStyle = {{ block.settings.icon_style | json }};
    const questionPadding = {{ block.settings.question_padding | json }};

    class FaqAccordion{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.renderFAQs();
        this.setupEventListeners();
      }

      renderFAQs() {
        const container = this.querySelector('#' + containerId);
        const emptyState = this.querySelector('#' + emptyId);
        
        if (!container) return;

        try {
          // Parsear el JSON si es string, o usar directamente si ya es objeto
          let faqs = faqsData;
          if (typeof faqsData === 'string') {
            faqs = JSON.parse(faqsData);
          }

          if (!Array.isArray(faqs) || faqs.length === 0) {
            throw new Error('No hay FAQs válidas');
          }

          let html = '';
          
          faqs.forEach((faq, index) => {
            if (!faq.question || !faq.answer) return;
            
            const isActive = (index === 0 && expandFirst) ? 'active' : '';
            const ariaExpanded = (index === 0 && expandFirst) ? 'true' : 'false';
            const disabledAttr = enableAccordion ? '' : 'disabled';
            
            let iconSvg = '';
            if (iconStyle === 'chevron') {
              iconSvg = `<svg class="ai-faq-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"></polyline></svg>`;
            } else if (iconStyle === 'plus') {
              iconSvg = `<svg class="ai-faq-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line class="icon-plus" x1="12" y1="5" x2="12" y2="19"></line><line class="icon-plus" x1="5" y1="12" x2="19" y2="12"></line><line class="icon-minus" x1="5" y1="12" x2="19" y2="12"></line></svg>`;
            } else if (iconStyle === 'arrow') {
              iconSvg = `<svg class="ai-faq-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="5" x2="12" y2="19"></line><polyline points="19 12 12 19 5 12"></polyline></svg>`;
            }

            html += `
              <div class="ai-faq-item-{{ ai_gen_id }} ${isActive}" data-faq-item>
                <button 
                  class="ai-faq-question-{{ ai_gen_id }}"
                  aria-expanded="${ariaExpanded}"
                  ${disabledAttr}
                  data-faq-button
                >
                  <span>${this.escapeHtml(faq.question)}</span>
                  ${iconSvg}
                </button>
                <div class="ai-faq-answer-{{ ai_gen_id }}" data-faq-answer>
                  <div class="ai-faq-answer-content-{{ ai_gen_id }}">
                    ${faq.answer}
                  </div>
                </div>
              </div>
            `;
          });

          container.innerHTML = html;
          
          // Si expandFirst está activo, ajustar el primer item
          if (expandFirst && enableAccordion) {
            const firstItem = container.querySelector('[data-faq-item]');
            if (firstItem) {
              const answer = firstItem.querySelector('[data-faq-answer]');
              answer.style.maxHeight = answer.scrollHeight + 'px';
            }
          }

        } catch (error) {
          console.error('Error cargando FAQs:', error);
          container.style.display = 'none';
          if (emptyState) emptyState.style.display = 'block';
        }
      }

      escapeHtml(text) {
        const div = document.createElement('div');
        div.textContent = text;
        return div.innerHTML;
      }

      setupEventListeners() {
        if (!enableAccordion) return;
        
        this.items = this.querySelectorAll('[data-faq-item]');
        
        this.items.forEach((item) => {
          const button = item.querySelector('[data-faq-button]');
          
          button.addEventListener('click', () => {
            const isActive = item.classList.contains('active');
            
            if (!allowMultiple && !isActive) {
              this.items.forEach((otherItem) => {
                if (otherItem !== item && otherItem.classList.contains('active')) {
                  this.toggleItem(otherItem, false);
                }
              });
            }
            
            this.toggleItem(item, !isActive);
          });
        });
      }

      toggleItem(item, expand) {
        const button = item.querySelector('[data-faq-button]');
        const answer = item.querySelector('[data-faq-answer]');
        
        if (expand) {
          item.classList.add('active');
          button.setAttribute('aria-expanded', 'true');
          answer.style.maxHeight = answer.scrollHeight + 'px';
        } else {
          item.classList.remove('active');
          button.setAttribute('aria-expanded', 'false');
          answer.style.maxHeight = '0px';
        }
      }
    }

    if (!customElements.get('faq-accordion-{{ ai_gen_id }}')) {
      customElements.define('faq-accordion-{{ ai_gen_id }}', FaqAccordion{{ ai_gen_id }});
    }
  })();
</script>

