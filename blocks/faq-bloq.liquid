{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-faq-section-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.desktop_width_percent }}%;
    max-width: 100%;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
    {% if block.settings.background_gradient != blank %}
      background: {{ block.settings.background_gradient }};
    {% endif %}
  }

  .ai-faq-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_max_width }}px;
    margin: 0 auto;
  }

  .ai-faq-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-faq-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 {{ block.settings.title_spacing }}px 0;
    font-weight: {{ block.settings.title_weight }};
    {% if block.settings.title_letter_spacing != 0 %}
      letter-spacing: {{ block.settings.title_letter_spacing }}px;
    {% endif %}
  }

  .ai-faq-subtitle-{{ ai_gen_id }} {
    color: {{ block.settings.subtitle_color }};
    font-size: {{ block.settings.subtitle_size }}px;
    margin: 0;
    line-height: 1.6;
    font-weight: {{ block.settings.subtitle_weight }};
  }

  .ai-faq-list-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.item_spacing }}px;
  }

  .ai-faq-item-{{ ai_gen_id }} {
    position: relative;
    {% unless block.settings.show_dividers %}
      border: {{ block.settings.item_border_width }}px solid {{ block.settings.item_border_color }};
    {% endunless %}
    border-radius: {{ block.settings.item_border_radius }}px;
    background-color: {{ block.settings.item_background_color }};
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    {% if block.settings.show_shadow %}
      box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    {% endif %}
  }

  {% if block.settings.show_dividers %}
    .ai-faq-item-{{ ai_gen_id }}::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: {{ block.settings.divider_indent }}px;
      right: {{ block.settings.divider_indent }}px;
      height: {{ block.settings.divider_height }}px;
      background-color: {{ block.settings.divider_color }};
      opacity: {{ block.settings.divider_opacity | divided_by: 100.0 }};
    }

    .ai-faq-item-{{ ai_gen_id }}:last-child::after {
      display: none;
    }
  {% endif %}

  .ai-faq-item-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.item_hover_background }};
    {% if block.settings.show_shadow %}
      box-shadow: 0 4px 16px rgba(0,0,0,0.08);
    {% endif %}
  }

  .ai-faq-question-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.question_padding }}px;
    background: none;
    border: none;
    text-align: left;
    cursor: {% if block.settings.enable_accordion %}pointer{% else %}default{% endif %};
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 20px;
    color: {{ block.settings.question_color }};
    font-size: {{ block.settings.question_size }}px;
    font-weight: {{ block.settings.question_weight }};
    transition: color 0.3s ease;
  }

  {% if block.settings.enable_accordion %}
    .ai-faq-question-{{ ai_gen_id }}:hover {
      color: {{ block.settings.question_hover_color }};
    }
  {% endif %}

  .ai-faq-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    color: {{ block.settings.icon_color }};
    {% unless block.settings.enable_accordion %}
      display: none;
    {% endunless %}
  }

  .ai-faq-item-{{ ai_gen_id }}.active .ai-faq-icon-{{ ai_gen_id }} {
    transform: rotate(180deg);
  }

  .ai-faq-answer-{{ ai_gen_id }} {
    {% if block.settings.enable_accordion %}
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1), 
                  padding 0.4s cubic-bezier(0.4, 0, 0.2, 1),
                  opacity 0.3s ease;
      opacity: 0;
      padding: 0 {{ block.settings.question_padding }}px;
    {% else %}
      max-height: none;
      overflow: visible;
      padding: 0 {{ block.settings.question_padding }}px {{ block.settings.question_padding }}px;
      opacity: 1;
    {% endif %}
  }

  .ai-faq-item-{{ ai_gen_id }}.active .ai-faq-answer-{{ ai_gen_id }} {
    max-height: 1000px;
    padding: 0 {{ block.settings.question_padding }}px {{ block.settings.question_padding }}px;
    opacity: 1;
  }

  .ai-faq-answer-content-{{ ai_gen_id }} {
    color: {{ block.settings.answer_color }};
    font-size: {{ block.settings.answer_size }}px;
    line-height: {{ block.settings.answer_line_height }};
    font-weight: {{ block.settings.answer_weight }};
  }

  .ai-faq-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 80px 20px;
    color: {{ block.settings.subtitle_color }};
    font-size: 16px;
    opacity: 0.6;
  }

  /* Variantes de estilo */
  {% if block.settings.style_variant == 'minimal' %}
    .ai-faq-item-{{ ai_gen_id }} {
      background: transparent;
      border: none;
      border-radius: 0;
    }
    .ai-faq-item-{{ ai_gen_id }}:hover {
      background: transparent;
    }
  {% elsif block.settings.style_variant == 'card' %}
    .ai-faq-item-{{ ai_gen_id }} {
      {% if block.settings.show_dividers %}
        border: {{ block.settings.item_border_width }}px solid {{ block.settings.item_border_color }};
      {% endif %}
    }
  {% endif %}

  /* Icono personalizado */
  {% if block.settings.icon_style == 'plus' %}
    .ai-faq-icon-{{ ai_gen_id }} .icon-minus { display: none; }
    .ai-faq-item-{{ ai_gen_id }}.active .ai-faq-icon-{{ ai_gen_id }} .icon-plus { display: none; }
    .ai-faq-item-{{ ai_gen_id }}.active .ai-faq-icon-{{ ai_gen_id }} .icon-minus { display: block; }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-faq-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.6 }}px 16px;
    }

    .ai-faq-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.75 }}px;
    }

    .ai-faq-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }

    .ai-faq-question-{{ ai_gen_id }} {
      font-size: {{ block.settings.question_size | times: 0.9 }}px;
      padding: {{ block.settings.question_padding | times: 0.85 }}px;
    }

    .ai-faq-answer-{{ ai_gen_id }} {
      padding: 0 {{ block.settings.question_padding | times: 0.85 }}px;
    }

    .ai-faq-item-{{ ai_gen_id }}.active .ai-faq-answer-{{ ai_gen_id }} {
      padding: 0 {{ block.settings.question_padding | times: 0.85 }}px {{ block.settings.question_padding | times: 0.85 }}px;
    }

    .ai-faq-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.9 }}px;
      height: {{ block.settings.icon_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<faq-accordion-{{ ai_gen_id }} class="ai-faq-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-faq-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-faq-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-faq-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="ai-faq-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% assign has_faqs = false %}
    {% for i in (1..15) %}
      {% assign question_key = 'question_' | append: i %}
      {% assign answer_key = 'answer_' | append: i %}
      {% assign question = block.settings[question_key] %}
      {% assign answer = block.settings[answer_key] %}
      {% if question != blank and answer != blank %}
        {% assign has_faqs = true %}
        {% break %}
      {% endif %}
    {% endfor %}

    {% if has_faqs %}
      <div class="ai-faq-list-{{ ai_gen_id }}">
        {% for i in (1..15) %}
          {% assign question_key = 'question_' | append: i %}
          {% assign answer_key = 'answer_' | append: i %}
          {% assign question = block.settings[question_key] %}
          {% assign answer = block.settings[answer_key] %}
          
          {% if question != blank and answer != blank %}
            <div class="ai-faq-item-{{ ai_gen_id }}" data-faq-item>
              <button 
                class="ai-faq-question-{{ ai_gen_id }}"
                aria-expanded="{% if block.settings.enable_accordion %}false{% else %}true{% endif %}"
                {% unless block.settings.enable_accordion %}disabled{% endunless %}
                data-faq-button
              >
                <span>{{ question }}</span>
                
                {% if block.settings.icon_style == 'chevron' %}
                  <svg class="ai-faq-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="6 9 12 15 18 9"></polyline>
                  </svg>
                {% elsif block.settings.icon_style == 'plus' %}
                  <svg class="ai-faq-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line class="icon-plus" x1="12" y1="5" x2="12" y2="19"></line>
                    <line class="icon-plus" x1="5" y1="12" x2="19" y2="12"></line>
                    <line class="icon-minus" x1="5" y1="12" x2="19" y2="12"></line>
                  </svg>
                {% elsif block.settings.icon_style == 'arrow' %}
                  <svg class="ai-faq-icon-{{ ai_gen_id }}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="12" y1="5" x2="12" y2="19"></line>
                    <polyline points="19 12 12 19 5 12"></polyline>
                  </svg>
                {% endif %}
              </button>
              <div class="ai-faq-answer-{{ ai_gen_id }}" data-faq-answer>
                <div class="ai-faq-answer-content-{{ ai_gen_id }}">
                  {{ answer }}
                </div>
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-faq-empty-state-{{ ai_gen_id }}">
        Agrega tus preguntas y respuestas frecuentes para comenzar
      </div>
    {% endif %}
  </div>
</faq-accordion-{{ ai_gen_id }}>

<script>
  (function() {
    class FaqAccordion{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.items = this.querySelectorAll('[data-faq-item]');
        this.accordionEnabled = {{ block.settings.enable_accordion | json }};
        this.expandFirst = {{ block.settings.expand_first | json }};
        
        if (this.accordionEnabled) {
          this.setupEventListeners();
          
          if (this.expandFirst && this.items.length > 0) {
            this.toggleItem(this.items[0], true);
          }
        }
      }

      setupEventListeners() {
        this.items.forEach((item) => {
          const button = item.querySelector('[data-faq-button]');
          
          button.addEventListener('click', () => {
            const isActive = item.classList.contains('active');
            const allowMultiple = {{ block.settings.allow_multiple_open | json }};
            
            if (!allowMultiple && !isActive) {
              this.items.forEach((otherItem) => {
                if (otherItem !== item && otherItem.classList.contains('active')) {
                  this.toggleItem(otherItem, false);
                }
              });
            }
            
            this.toggleItem(item, !isActive);
          });
        });
      }

      toggleItem(item, expand) {
        const button = item.querySelector('[data-faq-button]');
        
        if (expand) {
          item.classList.add('active');
          button.setAttribute('aria-expanded', 'true');
        } else {
          item.classList.remove('active');
          button.setAttribute('aria-expanded', 'false');
        }
      }
    }

    if (!customElements.get('faq-accordion-{{ ai_gen_id }}')) {
      customElements.define('faq-accordion-{{ ai_gen_id }}', FaqAccordion{{ ai_gen_id }});
    }
  })();
</script>

