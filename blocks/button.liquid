{% liquid
  assign label = block.settings.label
  assign link = block.settings.link
  assign open_in_new_tab = block.settings.open_in_new_tab
  assign style_class = block.settings.style_class
  
  # Size
  assign width = block.settings.width
  assign custom_width = block.settings.custom_width
  assign width_mobile = block.settings.width_mobile
  assign custom_width_mobile = block.settings.custom_width_mobile
  
  # Padding
  assign padding_top = block.settings.padding_top
  assign padding_bottom = block.settings.padding_bottom
  assign padding_left = block.settings.padding_left
  assign padding_right = block.settings.padding_right
  
  # Margin
  assign margin_top = block.settings.margin_top
  assign margin_bottom = block.settings.margin_bottom
  assign margin_left = block.settings.margin_left
  assign margin_right = block.settings.margin_right
  
  # Typography
  assign font_size = block.settings.font_size
  assign font_size_mobile = block.settings.font_size_mobile
  assign font_weight = block.settings.font_weight
  assign letter_spacing = block.settings.letter_spacing
  assign text_transform = block.settings.text_transform
  
  # Colors
  assign bg_color = block.settings.bg_color
  assign text_color = block.settings.text_color
  assign border_color = block.settings.border_color
  assign bg_color_hover = block.settings.bg_color_hover
