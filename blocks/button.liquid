  assign icon_size = block.settings.icon_size
  assign icon_gap = block.settings.icon_gap
%}

<style>
  #Button-{{ block.id }} {
    /* Size */
    {% if width == 'custom' %}
      --button-width: {{ custom_width }}%;
    {% else %}
      --button-width: fit-content;
    {% endif %}
    
    /* Padding */
    --button-padding-top: {{ padding_top }}px;
    --button-padding-bottom: {{ padding_bottom }}px;
    --button-padding-left: {{ padding_left }}px;
    --button-padding-right: {{ padding_right }}px;
    
    /* Margin */
    --button-margin-top: {{ margin_top }}px;
    --button-margin-bottom: {{ margin_bottom }}px;
    --button-margin-left: {{ margin_left }}px;
    --button-margin-right: {{ margin_right }}px;
    
    /* Typography */
    --button-font-size: {{ font_size }}px;
    --button-font-weight: {{ font_weight }};
    --button-letter-spacing: {{ letter_spacing }}em;
    --button-text-transform: {{ text_transform }};
    
    /* Colors */
    {% if bg_color != blank and bg_color != 'rgba(0,0,0,0)' %}
      --button-bg-color: {{ bg_color }};
    {% endif %}
    {% if text_color != blank and text_color != 'rgba(0,0,0,0)' %}
      --button-text-color: {{ text_color }};
    {% endif %}
    {% if border_color != blank and border_color != 'rgba(0,0,0,0)' %}
      --button-border-color: {{ border_color }};
    {% endif %}
    {% if bg_color_hover != blank and bg_color_hover != 'rgba(0,0,0,0)' %}
      --button-bg-color-hover: {{ bg_color_hover }};
    {% endif %}
    {% if text_color_hover != blank and text_color_hover != 'rgba(0,0,0,0)' %}
      --button-text-color-hover: {{ text_color_hover }};
    {% endif %}
    {% if border_color_hover != blank and border_color_hover != 'rgba(0,0,0,0)' %}
      --button-border-color-hover: {{ border_color_hover }};
    {% endif %}
    
    /* Border */
    --button-border-width: {{ border_width }}px;
    --button-border-radius: {{ border_radius }}px;
    
    /* Transition */
    --button-transition-duration: {{ transition_duration }}s;
    
    /* Icon */
    --button-icon-size: {{ icon_size }}px;
    --button-icon-gap: {{ icon_gap }}px;
  }
  
  @media screen and (max-width: 749px) {
    #Button-{{ block.id }} {
      {% if width_mobile == 'custom' %}
        --button-width: {{ custom_width_mobile }}%;
      {% else %}
        --button-width: fit-content;
      {% endif %}
      --button-font-size: {{ font_size_mobile }}px;
    }
  }
</style>

