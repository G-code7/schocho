{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-split-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    margin: 0 auto;
    max-width: 1200px;
  }

  .ai-blog-split__container-{{ ai_gen_id }} {
    display: flex;
    gap: 24px;
    width: 100%;
    align-items: stretch;
    min-height: 500px;
  }

  .ai-blog-split__left-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.left_width }}%;
    background-color: {{ block.settings.left_background_color }};
    border-radius: 20px;
    padding: 60px 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    position: relative;
    overflow: hidden;
  }

  /* Elemento decorativo para la columna izquierda */
  .ai-blog-split__left-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 80px;
    height: 80px;
    background-color: {{ block.settings.accent_color }};
    opacity: 0.1;
    border-radius: 0 20px 0 0;
  }

  .ai-blog-split__left-{{ ai_gen_id }}::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 40px;
    width: 40px;
    height: 40px;
    background-color: {{ block.settings.accent_color }};
    opacity: 0.15;
    border-radius: 50%;
  }

  .ai-blog-split__title-{{ ai_gen_id }} {
    font-family: {{ block.settings.title_font_family }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_font_weight }};
    color: {{ block.settings.text_color }};
    margin: 0 0 20px 0;
    line-height: 1.3;
    letter-spacing: {{ block.settings.title_letter_spacing }}px;
    position: relative;
    z-index: 2;
    max-width: 90%;
  }

  .ai-blog-split__date-{{ ai_gen_id }} {
    font-family: {{ block.settings.date_font_family }};
    font-size: {{ block.settings.date_size }}px;
    font-weight: {{ block.settings.date_font_weight }};
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin: 0;
    padding-left: 16px;
    position: relative;
    z-index: 2;
  }

  .ai-blog-split__date-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 16px;
    background-color: {{ block.settings.accent_color }};
    border-radius: 2px;
  }

  .ai-blog-split__right-{{ ai_gen_id }} {
    flex: 0 0 {{ 100 | minus: block.settings.left_width }}%;
    border-radius: 20px;
    overflow: hidden;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px;
    background-color: {{ block.settings.right_background_color }};
  }

  .ai-blog-split__image-container-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    max-width: {{ block.settings.image_max_width }}%;
    max-height: {{ block.settings.image_max_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-blog-split__image-container-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
  }

  .ai-blog-split__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-blog-split__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
    display: block;
    transition: transform 0.5s ease;
  }

  .ai-blog-split__image-container-{{ ai_gen_id }}:hover .ai-blog-split__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-blog-split__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    max-width: {{ block.settings.image_max_width }}%;
    max-height: {{ block.settings.image_max_height }}px;
    background-color: #f8f8f8;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
  }

  .ai-blog-split__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.2;
  }

  .ai-blog-split__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 20px;
    text-align: center;
    pointer-events: none;
    backdrop-filter: blur(5px);
  }

  @media screen and (max-width: 1024px) {
    .ai-blog-split__container-{{ ai_gen_id }} {
      gap: 20px;
      min-height: 450px;
    }

    .ai-blog-split__left-{{ ai_gen_id }} {
      padding: 40px 30px;
    }

    .ai-blog-split__right-{{ ai_gen_id }} {
      padding: 30px;
    }

    .ai-blog-split__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.9);
    }
  }

  @media screen and (max-width: 768px) {
    .ai-blog-split__container-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 20px;
      min-height: auto;
    }

    .ai-blog-split__left-{{ ai_gen_id }},
    .ai-blog-split__right-{{ ai_gen_id }} {
      flex: 0 0 100%;
      width: 100%;
    }

    .ai-blog-split__left-{{ ai_gen_id }} {
      padding: 40px 30px;
    }

    .ai-blog-split__right-{{ ai_gen_id }} {
      padding: 30px;
      min-height: 300px;
    }

    .ai-blog-split__image-container-{{ ai_gen_id }},
    .ai-blog-split__placeholder-{{ ai_gen_id }} {
      max-width: 90%;
      max-height: 350px;
    }

    .ai-blog-split__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.85);
      max-width: 100%;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-blog-split__container-{{ ai_gen_id }} {
      gap: 16px;
    }

    .ai-blog-split__left-{{ ai_gen_id }} {
      padding: 30px 20px;
    }

    .ai-blog-split__right-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-blog-split__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.75);
      margin-bottom: 16px;
    }

    .ai-blog-split__date-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.date_size }}px * 0.9);
    }
  }
{% endstyle %}

<div class="ai-blog-split-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-split__container-{{ ai_gen_id }}">
    <div class="ai-blog-split__left-{{ ai_gen_id }}">
      {% if block.settings.title != blank %}
        <h2 class="ai-blog-split__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.date != blank %}
        <p class="ai-blog-split__date-{{ ai_gen_id }}">{{ block.settings.date }}</p>
      {% endif %}
    </div>

    <div class="ai-blog-split__right-{{ ai_gen_id }}">
      <div class="ai-blog-split__image-container-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <div class="ai-blog-split__image-wrapper-{{ ai_gen_id }}">
            <img
              src="{{ block.settings.image | image_url: width: 1200 }}"
              alt="{{ block.settings.image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
              class="ai-blog-split__image-{{ ai_gen_id }}"
            >
          </div>
        {% else %}
          <div class="ai-blog-split__placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-blog-split__empty-state-{{ ai_gen_id }}">
              Añade una imagen para completar el diseño
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

